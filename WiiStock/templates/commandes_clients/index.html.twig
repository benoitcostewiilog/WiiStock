                <td>{{ commandes_client.dateCommande ? commandes_client.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('commandes_clients_show', {'id': commandes_client.id}) }}">show</a>
