{% extends 'base.html.twig' %}

{% block title %}CommandesClients index{% endblock %}

{% block body %}
    <h1>CommandesClients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Date_commande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commandes_client in commandes_clients %}
            <tr>
                <td>{{ commandes_client.id }}</td>
