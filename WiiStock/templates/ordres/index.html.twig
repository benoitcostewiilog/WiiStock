{% extends 'base.html.twig' %}

{% block title %}Ordres index{% endblock %}

{% block body %}
    <h1>Ordres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Type</th>
                <th>Date_ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ordre in ordres %}
            <tr>
                <td>{{ ordre.id }}</td>
                <td>{{ ordre.statut }}</td>
                <td>{{ ordre.type }}</td>
                <td>{{ ordre.dateOrdre ? ordre.dateOrdre|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ordres_show', {'id': ordre.id}) }}">show</a>
                    <a href="{{ path('ordres_edit', {'id': ordre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ordres_new') }}">Create new</a>
{% endblock %}