                <button type="button" class="btn btn-xs btn-default"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
    </table>

    <div class="row">
        <div class="col-md-6">
            <fieldset class="well">
                <legend class="well-legend">Créer un groupe</legend>
                <form class="form-inline">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" name="nom_groupe" placeholder="Nom du groupe">
                            </div>                                                        
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <div class="checkbox-inline btn"><input type="checkbox" value="">Gestion utilisateur</div>
                            </div>
                            <div class="input-group">
                                <div class="checkbox-inline btn"><input type="checkbox" value="">Gestion activité</div>
                            </div>
                            <div class="input-group">
                                <div class="checkbox-inline btn"><input type="checkbox" value="">Paramétrage</div>
                            </div>
                            <div class="input-group">
                                <div class="checkbox-inline btn"><input type="checkbox" value="">Inventaire</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <a href="#" class="button btn-left"><span class="fa fa-check"></span>
                                    Valider</a>
                            </div>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
        <div class="col-md-6">
            <fieldset class="well">
                <legend class="well-legend">Modifier un groupe</legend>
                <form class="form-inline">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" name="nom_groupe" placeholder="Nom du groupe">
                            </div>                                                        
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <label class="custom-check btn btn-default">
                                    <input type="checkbox">
                                    
                                    Gestion utilisateur
                                    <span class="checkmark fa fa-check"></span>
                                </label>
                            </div>
                            <div class="input-group">
                                <label class="custom-check btn btn-default">
                                    <input type="checkbox">
                                    
                                    Gestion activité
                                    <span class="checkmark fa fa-check"></span>
                                </label>
                            </div>
                            <div class="input-group">
                                <label class="custom-check btn btn-default">
                                    <input type="checkbox">
                                    Paramétrage
                                    <span class="checkmark fa fa-check"></span>
                                </label>
                            </div>
                            <div class="input-group">
                                <label class="custom-check btn btn-default">
                                    <input type="checkbox">
                                    Inventaire
                                    <span class="checkmark fa fa-check"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="input-group">
                                <a href="#" class="button btn-left"><span class="fa fa-check"></span>
                                    Valider</a>
                            </div>
                        </div>
                    </div>                    
                </form>
            </fieldset>
        </div>
    </div>    

    <div class="row">
        <div class="col-md-12">
            <a href="#" class="button btn-left">
                <span class="fa fa-angle-double-left"></span>Retour</a>
        </div>

