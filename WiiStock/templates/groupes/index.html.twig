            <td>
                <button type="button" class="btn btn-xs btn-default"><span class="fa fa-pencil"></span></a>
                <button type="button" class="btn btn-xs btn-default"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
        <tr>
            <td>Activité</td>
            <td>Gestion activité</td>
            <td>
                <button type="button" class="btn btn-xs btn-default"><span class="fa fa-pencil"></span></a>
