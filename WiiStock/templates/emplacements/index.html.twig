{% extends 'layout.html.twig' %}

{% block title %}Emplacements index{% endblock %}

{% block page_content %}
    <h1>Emplacements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emplacement in emplacements %}
            <tr>
                <td>{{ emplacement.id }}</td>
                <td>{{ emplacement.name }}</td>
                <td>
                    <a href="{{ path('emplacements_show', {'id': emplacement.id}) }}">show</a>
                    <a href="{{ path('emplacements_edit', {'id': emplacement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emplacements_new') }}">Create new</a>
{% endblock %}