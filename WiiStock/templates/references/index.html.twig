{% extends 'base.html.twig' %}

{% block title %}References index{% endblock %}

{% block body %}
    <h1>References index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reference in references %}
            <tr>
                <td>{{ reference.id }}</td>
                <td>{{ reference.libelle }}</td>
                <td>{{ reference.description }}</td>
                <td>{{ reference.image }}</td>
                <td>
                    <a href="{{ path('references_show', {'id': reference.id}) }}">show</a>
                    <a href="{{ path('references_edit', {'id': reference.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('references_new') }}">Create new</a>
{% endblock %}