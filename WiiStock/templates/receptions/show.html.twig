{% extends 'layout.html.twig' %}

{% block title %}Receptions{% endblock %}

{% block page_content %}
    <h1>Receptions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reception.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reception.statut }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ reception.commentaire }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reception.date ? reception.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumeroArrivage</th>
                <td>{{ reception.numeroArrivage }}</td>
            </tr>
            <tr>
                <th>NumeroReception</th>
                <td>{{ reception.numeroReception }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('receptions_index') }}" class='button btn-left'>Retour</a>

    <a href="{{ path('receptions_edit', {'id': reception.id}) }}" class='button btn-left'>edit</a>

    {{ include('receptions/_delete_form.html.twig') }}
{% endblock %}
