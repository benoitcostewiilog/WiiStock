        <thead>
            <tr>
                <th>selection</th>
                <th>destination</th>
                <th>Nom</th>
                <th>Ref√©rences Articles</th>
                <th>position</th>
            </tr>
        </thead>
        <tbody>
     {% set i = 0 %}
     {% for article in articles | reverse %}          
        <tr{% if i % 2 == 1 %} class="backtablejv" {% endif %}>
            {% set i = i + 1 %}
