            <td>    
                <select name="destination[{{article.id}}]" id="" class=" custom-select custom-select-lg mb-3">
                        <option value=""></option>
                    {% for emplacement in emplacements %}
                        <option value={{emplacement.id}}> {{emplacement.nom}}</option>
                    {% endfor %}
                </select>
            </td>
            <td>{{ article.nom }}</td>
            <td>{{ article.refArticle.libelle }}</td>
