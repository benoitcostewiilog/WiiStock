{% extends 'layout.html.twig' %}

{% block page_content %}
    <div class="row backgray">
        <div class="col-md-4">
            <div class="square-size"></div>
            <div class="square backblue in text-center">
                <h1>Activités</h1>
            </div>
        </div>
        <div class="col-md-4">
            <div class="square-size"></div>
            <div class="square backblue in text-center">
                <h1>Demandes</h1>
                <a class="fa fa-bell">
                    <div class="circle"></div>
                    <div class="marker">999</div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="square-size"></div>
            <div class="square backblue in text-center">
                <h1>Alertes de seuil</h1>
                <a class="fa fa-warning">
                    <div class="marker">999</div>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="graph-container"></div>
            <div class="in">
            <h1>Activité dans l'année</h1>
            <canvas id="graph"></canvas>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="dummy"></div>
                    <div class="box in">
                        <h1>Reporting</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dummy"></div>
                    <div class="box in">
                        <h1>Ordres du jour</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="dummy"></div>
                    <div class="box in date">
                        <input type="text" class="datepicker" size="6" value="{{ date }}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dummy"></div>
                    <div class="box in">
                        <h1></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}