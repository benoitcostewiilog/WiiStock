<form method="post" action="{{ path('marques_delete', {'id': marque.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette marque ?);">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    <button class="button btn-left pull-right">Supprimer</button>
</form>
