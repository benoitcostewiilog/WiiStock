{% extends 'layout.html.twig' %}

{% block title %}Emplacement{% endblock %}

{% block page_content %}
    <h1>Emplacement</h1>

    <div class='row btn pull-right' >
            <a href="{{ path('emplacement_new') }}" class="button btn-left">
                <span class="fa fa-plus"></span>Nouveau fournisseur
            </a >
        </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emplacement in emplacements %}
            <tr>
                <td>{{ emplacement.id }}</td>
                <td>{{ emplacement.nom }}</td>
                <td>{{ emplacement.status }}</td>
                <td>
                    <a href="{{ path('emplacement_show', {'id': emplacement.id}) }}" class="btn btn-xs btn-default command-edit"><i class="fas fa-eye fa-2x"></i></a>
                    <a href="{{ path('emplacement_edit', {'id': emplacement.id}) }}" class="btn btn-xs btn-default command-edit"><i class="fas fa-pencil-alt fa-2x"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
