{% extends 'layout.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block page_content %}

<h1>Articles</h1>
<table id="table_id" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th id="Nom" data-identifier="true">Nom</th>
            <th id="Statut">Statut</th>
            <th id="Conformité">Conformité</th>
            <th id="Reférences Articles">Reférences Articles</th>
            <th id="position">position</th>
            <th id="destination">destination</th>
            <th id="Quantite" data-sortable="false">Quantite</th>
            <th>actions</th>
        </tr>
    </thead>

</table>
{% endblock  %}
{% block javascript %}

<script>
    var table = $('#table_id').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
        },
        ajax: "{{path('articles_filtre_json')}}",
        columns: [
            { "data": 'Nom' },
            { "data": 'Statut' },
            { "data": 'Conformité' },
            { "data": 'Reférences Articles' },
            { "data": 'position' },
            { "data": 'destination' },
            { "data": 'Quantite' },

        ],
        buttons: [
            'copy', 'excel', 'pdf'
        ]
    });

    new $.fn.dataTable.Buttons(table, {
        buttons: [
            'copy', 'excel', 'pdf'
        ]
    });
    table.buttons().container()
        .appendTo($('.col-sm-6:eq(0)', table.table().container()));
</script>
{% endblock %}