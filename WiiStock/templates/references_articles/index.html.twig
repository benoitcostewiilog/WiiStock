{% extends 'layout.html.twig' %}

{% block title %}ReferencesArticles{% endblock %}

{% block page_content %}
    <h1>Articles de référence</h1>

    <div class='row btn pull-right' >
        <a href={{ path('references_articles_new') }} class="button btn-left">
            <span class="fa fa-plus"></span>Nouvelle article de référence
        </a >
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Référence</th>
                <th>Photo_article</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0  %}
        {% for references_article in references_articles %}
            <tr {% if i % 2 == 1 %} class="backtablejv" {% endif %}>
                    {% set i = i + 1 %}
                <td>{{ references_article.id }}</td>
                <td>{{ references_article.libelle }}</td>
                <td>{{ references_article.reference}}</td>
                <td>{{ references_article.photoArticle }}</td>
                <td>
                    <a href="{{ path('references_articles_show', {'id': references_article.id}) }}"class="btn btn-xs btn-default command-edit"><i class="fas fa-eye fa-2x"></i></a>
                    <a href="{{ path('references_articles_edit', {'id': references_article.id}) }}"class="btn btn-xs btn-default command-edit"><i class="fas fa-pencil-alt fa-2x"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(references_articles) }}
{% endblock %}