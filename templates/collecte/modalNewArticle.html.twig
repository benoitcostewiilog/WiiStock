<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
    aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <div class="form-group col-12 d-flex w-100 mb-3"  >
                        <label for="reference">Référence CEA</label>
                        <select class="ajax-autocomplete data form-control needed" onchange="ajaxGetArticle($(this))" id="reference" name="reference">
                        </select>
                    </div>
                    <div class="form-group col-12 d-flex w-100 mb-3">
                        <label for="code">Code article</label>
                        <select class="form-control ajax-autocomplete-article data select2" id="code" name="code">
                        </select>
                    </div>
                    <div class="form-group col-12 d-flex mb-3">
                        <label for="quantity">Quantité</label>
                        <input class="form-control data" type="number" min=0 id="quantity" name="quantity" value="">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Annuler</div>
                <button id="submitNewArticle" name="collecte" value="{{collecte.id}}" type="button"
                    class="btn data btn-success">Ajouter</button>
            </div>
        </div>
    </div>
</div>