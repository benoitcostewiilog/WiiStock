<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
    aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <div class="col-12">
                        <div class="form-group col-12 d-flex w-100 mb-3">
                            <label for="reference">Référence CEA</label>
                            <select class="ajax-autocomplete data form-control needed"
                                onchange="ajaxGetFournisseurByRefArticle($(this))" id="reference" name="refArticle">
                            </select>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group col-12 d-none mb-3" id="fournisseur">
                            <label for="fournisseur">Fournisseur</label>
                            <select class="data form-control needed" onchange="getArticleFournisseur()"
                                id="fournisseurID" name="fournisseur">
                            </select>
                        </div>
                    </div>
                    <div id='newContent' class="col-12 clear">

                    </div>
                </form>
