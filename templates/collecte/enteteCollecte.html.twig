<div class="row align-items-center datatable-header">
    <div class="col-auto">
        <h1 class="my-0"><span>Demande de collecte nÂ° {{ collecte.numero }}</span></h1>
    </div>
    <div class="col-auto ml-auto">
        <div class="btn-group">
            {% if modifiable %}
                {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EDIT')) %}
                    <button type="button" data-id='{{ collecte.id }}' data-target='#modalEditCollecte' data-toggle='modal'
                            onclick="editRow($(this), Routing.generate('collecte_api_edit', true), $('#modalEditCollecte'), $('#submitEditCollecte'), true, '#modalEditCollecte .editor-container-edit')"
                            class="btn btn-primary btn-ripple ml-auto split-button">
                        Modifier
                    </button>
                {% endif %}
                <button type="button"
                        class="btn btn-primary btn-ripple dropdown-toggle dropdown-toggle-split"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false">
                    <span class="fa fa-angle-down"></span>
                </button>
                <div class="dropdown-menu dropdown-menu-right pointer">
                    {% if hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EDIT')) %}
                        <a href="#" onclick="validateCollecte({{ collecte.id }})"
                           class="dropdown-item"><i class="fa fa-check mr-2"></i>Valider</a>
                    {% endif %}
                    {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::DELETE')) %}
                        <a href="" onclick="deleteRow($(this), $('#modalDeleteCollecte'), $('#submitDeleteCollecte'))"
                           data-id='{{ collecte.id }}' data-target='#modalDeleteCollecte' data-toggle='modal'
                           class="dropdown-item">
                            <i class="fa fa-trash mr-2"></i>Supprimer</a>
                    {% endif %}
                </div>
            {% else %}
                {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::DISPLAY_DEM_COLL')) %}
                    <button type="button"
                            class="btn btn-primary btn-ripple dropdown-toggle dropdown-toggle-split"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false">
                        <span class="fa fa-angle-down"></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right pointer">
                        {% if collecte.ordresCollecte|length > 1 %}
                            <a href="{{ path('ordre_collecte_index', {'demandId': collecte.id}) }}"
                               class="dropdown-item">
                                <i class="mr-2 fas fa-external-link-alt"></i>Aller vers les ordres de collecte
                            </a>
                        {% else %}
                            <a href="{{ path('ordre_collecte_show', {'id': collecte.ordresCollecte[0].id }) }}"
                               class="dropdown-item">
                                <i class="mr-2 fas fa-external-link-alt"></i>Aller vers l'ordre de collecte
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <p><strong> Demandeur : </strong> {{ collecte.demandeur.username }}</p>
        <p><strong> Date de demande : </strong>{{ collecte.date ? collecte.date|date('d/m/Y H:i') : '' }}</p>
        <p><strong> Date de validation : </strong>{{ collecte.validationDate ? collecte.validationDate|date('d/m/Y H:i') : '' }}</p>
        <p><strong> Destination : </strong>
            {% if collecte.stockOrDestruct == 1 %}
                Mise en stock
            {% else %}
                Destruction
            {% endif %}
    </div>
    <div class="col-6">
        <p><strong> Objet : </strong>{{ collecte.objet }}</p>
        <p><strong> Statut : </strong> {{ collecte.statut.nom }}</p>
        <p><strong> Point de collecte : </strong> {{ collecte.pointCollecte | capitalize }}</p>
        <p><strong> Type : </strong> {{ collecte.type ? collecte.type.label : '' }}</p>
    </div>

    {% for champLibre in champsLibres %}
        <div class="col-6">
            {% if champLibre.typage == constant('App\\Entity\\ChampLibre::TYPE_BOOL') %}
                {% set value = (champLibre.valeur == 1) ? 'oui' : 'non' %}
            {% elseif champLibre.typage == 'list multiple' %}
                {% set value = champLibre.valeur | replace({';' : ','}) %}
            {% else %}
                {% set value = champLibre.valeur %}
            {% endif %}
            <p><strong>{{ champLibre.label|capitalize }} :</strong> {{ value }}</p>
        </div>
    {% endfor %}

    <div class="col-12">
        <p><strong> Commentaire : </strong></p>
        <div class="commentOverflow">
            <p>{{ collecte.commentaire|raw }}</p>
        </div>
    </div>
</div>

