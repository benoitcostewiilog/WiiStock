{% if modifiable %}

<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::DEM_COLLECTE'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    {% if type == 'reference' %}
    <div data-target='#modalEditArticle' data-toggle='modal'>
        <div class="btn btn-col-action" data-id='{{ id }}'
        onclick="editRow($(this), Routing.generate('collecte_edit_api_article', true), $('#modalEditArticle'), $('#submitEditArticle'))">
            <i class='fas fa-pencil-alt'></i>
        </div>
    </div>
    {% endif %}
    <div>
        <div class="btn btn-col-action"
        onclick="deleteRowCollecte($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))"
        data-target='#modalDeleteArticle' data-toggle='modal' data-id='{{ id }}' data-name='{{name}}'>
            <i class='fas fa-trash'></i>
        </div>
    </div>
    {% endif %}
    {% endif %}
    {% if refArticleId is defined %}
    <div data-target='#modalShowRefArticle' data-toggle='modal'>
        <div class="btn btn-col-action" data-id='{{ refArticleId }}'
        onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    </div>
    {% else %}
    <div data-target='#modalShowArticle' data-toggle='modal'>
        <div class="btn btn-col-action" data-id='{{ id }}'
        onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    </div>
    {% endif %}

</div>
