{% if modifiable %}

<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::DEM_COLLECTE'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    {% if type == 'reference' %}
    <div data-id='{{ id }}' class='type-delete col-3' data-target='#modalEditArticle' data-toggle='modal'
        onclick="editRow($(this), Routing.generate('collecte_edit_api_article', true), $('#modalEditArticle'), $('#submitEditArticle'))">
        <i class='fas fa-pencil-alt'></i>
    </div>
    {% endif %}
    <div class='col-3' onclick="deleteRowCollecte($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))"
        data-target='#modalDeleteArticle' data-toggle='modal' data-id='{{ id }}' data-name='{{name}}'>
        <i class='fas fa-trash'></i>
    </div>
    {% endif %}
    {% if refArticleId is defined %}
    <div data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal' class='col-3'
        onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
        <i class='fas fa-eye'></i></div>
    {% else %}
    <div data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal' class='col-3'
        onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
        <i class='fas fa-eye'></i></div>
    {% endif %}

</div>
{% endif %}