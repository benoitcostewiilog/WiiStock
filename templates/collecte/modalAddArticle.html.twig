<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalAddArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ collecte.id }}">
    <div class="modal-dialog modal-dialog-centered narrow" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
            </div>
            <div class="modal-footer">
                <div class="btn btn-secondary" data-dismiss="modal">Annuler</div>
                <div class="save btn btn-success" data-dismiss="modal">Ajouter</div>
            </div>
        </div>
    </div>
</div>