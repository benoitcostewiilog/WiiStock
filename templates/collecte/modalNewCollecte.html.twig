<!-- Modal -->
<form method="" class="modal fade" id="modalNewCollecte" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Demande de collecte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="demandeur">Demandeur</label>
                    <select type="text" class="demandeur form-control data" name="demandeur" disabled>
                        <option value="{{app.user.id}}">{{ app.user.username }}</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Objet">Objet</label>
                    <input type="text" class="objet form-control data" name="Objet"
                        placeholder="Renseigner un objet...">
                    <div class="error-msg error-msg-objet"></div>
                </div>
                <div class="form-group w-100 ">
                    <label for="Pcollecte">Point de collecte</label>
                    <select class="pointCollecte form-control select2 data" name="Pcollecte">
                        <option disabled selected>Choisir un point de collecte...</option>
                        {% for emplacement in emplacements %}
                        <option value="{{ emplacement.Id }}">
                            {{ emplacement.label }}
                        </option>
                        {% endfor %}
                    </select>
                    <div class="error-msg error-msg-pointCollecte"></div>
                </div>
                <div class="form-group">
                    <label for="commentaire">Commentaire</label>
                    <textarea type="text" rows="4" class="objet form-control data" name="commentaire"></textarea>
                    <div class="error-msg error-msg-objet"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewCollecte" type="button" data-dismiss="modal"
                    class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>