{% extends 'layout.html.twig' %}

{% block title %}Demandes de collecte{% endblock %}

{% block page_content %}

    <h1>Demandes de collecte</h1>

    <div>
        <a href="" data-toggle="modal" data-target="#dataModalCenter" class="btn btn-primary">
            <span class="fa fa-plus mr-2"></span>Nouvelle collecte
        </a>
    </div>

    <div>
        <table id="table-list-collects" class="table table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Demandeur</th>
                <th>Libellé</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    {% include 'collecte/modalCollecte.html.twig' %}

{% endblock %}

{% block javascript %}
<script src="{{ asset('js/collecte.js') }}"></script>

<script>

$(document).ready(function() {
    $('.select2').select2();
});

$('#dataModalCenter').find('.save').on('click', function() {
    saveCollecte($(this));
});

var path = Routing.generate('collectes_json', true);
$('#table-list-collects').DataTable({
     "language": {
       "url": "/js/i18n/dataTableLanguage.json"
     },
     "pageLength": 5,
     "ajax":{
        "url": path,
        "type": "POST"
    },
    columns: [
        { "data": 'Date' },
        { "data": 'Demandeur' },
        { "data": 'Libellé' },
        { "data": 'Statut' },
        { "data": 'Actions'}
    ],
    "order": [[ 0, 'desc']] //TODO CG index
});

</script>
{% endblock %}
