                    <th>Statut</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    {% include "collecte/modalNewCollecte.html.twig" %}
    {% include "collecte/modalEditCollecte.html.twig" %}
    {% include "collecte/modalDeleteCollecte.html.twig" %}
{% endblock %}

{% block javascripts %}
