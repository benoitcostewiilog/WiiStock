{% extends 'layout.html.twig' %}

{% block title %}Mouvements de stock{% endblock %}

{% block page_filter %}
    {{ parent() }}

    {% include 'filters/filtersMouvementStock.html.twig' with {
        'btnName' : 'submitSearchMvt',
        'statut' : 'Type'
    } %}
{% endblock %}

{% block page_content %}
    <h1>Mouvements de stock</h1>
    <div class ="row">
        {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::EXPORT')) %}
        <div class="btn btn-primary" onclick='generateCSVMouvement()'>
            <span class="fa fa-file-csv mr-2"></span>Exporter au format CSV
        </div>
        {% endif %}
    </div>
        <div class="d-none justify-content-center" id="spinnerMouvementStock">
            <div class="spinner-border sizeLoader" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    <div class="row">
        <div class="error-msg p-4"></div>
    </div>

    <div>
        <table id="tableMvts" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include "mouvement_stock/modalDeleteMvtStock.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/mouvement_stock.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
