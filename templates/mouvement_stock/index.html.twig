{% extends 'layout.html.twig' %}

{% block title %}Stock | Mouvements de stock{% endblock %}
{% block page_filter %}
    {% include 'filters/filtersMouvementStock.html.twig' with {
        'page': 'PAGE_MVT_STOCK',
        'tableSelector': '#tableMvts'
    } %}
{% endblock %}

{% block page_content %}
    <div class="m-4 datatable-container">
        <div class="row">
            <h1 class="col align-self-start ml-2"></h1>
            <div class="col-auto">
                {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::EXPORT')) %}
                    <div class="btn btn-primary btn-ripple" onclick="generateCSV('get_mouvements_stock_for_csv', 'mvts-stock')">
                        <span class="fa fa-file-csv mr-2"></span>Exporter au format CSV
                    </div>
                {% endif %}
            </div>
            <div class="col-12 mt-5">
                <div class="d-none justify-content-center" id="spinner">
                    <div class="spinner-border sizeLoader" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <table id="tableMvts" class="table w-100">
                </table>
            </div>
        </div>
    </div>
    {% include "mouvement_stock/modalDeleteMvtStock.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/mouvement_stock.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
