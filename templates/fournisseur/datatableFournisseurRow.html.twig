<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
        <div data-target='#modalEditFournisseur' data-toggle='modal'>
            <div class="btn btn-col-action" data-id='{{ fournisseurId }}'
            onclick="editRow($(this), Routing.generate('fournisseur_api_edit', true), $('#modalEditFournisseur'), $('#submitEditFournisseur'))">
                <i class='fas fa-pencil-alt '></i>
            </div>
        </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::DELETE')) %}
        <div>
            <div class="btn btn-col-action"
                 onclick="checkAndDeleteRow($(this), '#modalDeleteFournisseur', 'fournisseur_check_delete', '#submitDeleteFournisseur')"
                 data-id='{{ fournisseurId }}' data-target='#modalDeleteFournisseur' data-toggle='modal'>
                <i class='fas fa-trash '></i>
            </div>
        </div>
    {% endif %}
</div>