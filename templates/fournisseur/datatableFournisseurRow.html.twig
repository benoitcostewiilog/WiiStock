<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
        <div data-id='{{ fournisseurId }}' data-target='#modalEditFournisseur' data-toggle='modal' class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block"
            onclick="editRow($(this), Routing.generate('fournisseur_api_edit', true), $('#modalEditFournisseur'), $('#submitEditFournisseur'))">
                <i class='fas fa-pencil-alt '></i>
            </button>
        </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
        <div class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block"
            onclick="checkAndDeleteRow($(this))"
            data-id='{{ fournisseurId }}' data-target='#modalDeleteFournisseur' data-toggle='modal'>
                <i class='fas fa-trash '></i>
            </button>
        </div>
    {% endif %}
</div>