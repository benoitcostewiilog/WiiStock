{% extends 'layout.html.twig' %}

{% block title %}Fournisseur{% endblock %}

{% block page_content %}
    <h1>Fournisseur</h1>

    {% if message is defined %}
        <div>
            {{message}}
        </div>
    {% endif %}

<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fournisseur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fournisseur.nom }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('fournisseur_index') }}" class='btn float-left'>Retour</a>
    {{ include('fournisseur/_delete_form.html.twig') }}
    <a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}"class='btn btn-primary float-right'>Modifier</a>
</div>
{% endblock %}