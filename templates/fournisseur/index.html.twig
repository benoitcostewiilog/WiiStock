{% extends 'layout.html.twig' %}

{% block title %}Référentiel | Fournisseurs{% endblock %}

{% block page_content %}
    <div class="m-4 datatable-container">
        <div class="row datatable-header">
            <div class="col-auto ml-auto">
                <div class="btn-group">
                    {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::CREATE')) %}
                        <a href="" data-toggle="modal"
                           data-target="#modalNewFournisseur"
                           class="btn btn-primary btn-ripple">
                            <span class="fa fa-plus mr-2"></span>Nouveau Fournisseur
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table id="tableFournisseur_id" class="table w-100">
                </table>
            </div>
        </div>

    </div>

    {% include "fournisseur/modalDeleteFournisseur.html.twig" %}
    {% include "fournisseur/modalEditFournisseur.html.twig" %}
    {% include "fournisseur/modalNewFournisseur.html.twig" %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/fournisseur.js') }}?{{ date().timestamp }}"></script>
{% endblock %}

