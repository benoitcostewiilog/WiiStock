{% extends 'layout.html.twig' %}

{% block title %}Référentiel / Fournisseurs{% endblock %}

{% block page_content %}
<h1>Fournisseurs</h1>

<div class="row">
    <a href="" data-toggle="modal" data-target="#dataModalCenter" class="btn btn-primary float-left">
        <span class="fa fa-plus mr-2"></span>Nouveau Fournisseur
    </a>
</div>

<table id="table_id" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Code de réference</th>
            <th>Actions</th>
        </tr>
    </thead>

</table>

{% include 'fournisseur/modal.html.twig' %}


{% endblock %}

{% block javascript %}
<script>
    var path = Routing.generate('fournisseur_api'); 
    var table = $('#table_id').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
        },
        ajax: path,
        columns: [
            { "data": 'Nom' },
            { "data": 'Code de réference' },
            { "data": 'Actions' },
        ],
    });
</script>
{% endblock %}