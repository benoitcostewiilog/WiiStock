<div class="modal fade" id="modalColumnVisibleDispatch" tabindex="-1" role="dialog"
     aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Gestion des colonnes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table" style="width:100%">
                    <thead>
                    <tr>
                        <th>Champs</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% set i = 0 %}
                    {% for field in fields %}

                        <tr class="pointer" onclick="toggleInputRadioOnRow(this)">
                            <td>{{ field.label | capitalize }}</td>
                            <td>
                                <div class="checkbox d-inline-block pointer no-data" onclick="toggleInputRadioOnRow(this)">
                                    <input class="visible-column-dispatch-input form-check-input {% if field.key in visibleColumns %}data{% endif %}"
                                           name="{{ field.key }}"
                                           onclick="showOrHideColumn($(this), tableDispatches, $('#tableDispatches_id_wrapper'))"
                                           type="checkbox"
                                           id="column_visible_dispatch_input_{{ field.key }}"
                                           {% if field.key in visibleColumns %}checked{% endif %}
                                           data-column="{{ i }}" data-name="{{ field.key }}">
                                    <label for="column_visible_dispatch_input_{{ field.key }}" class="pointer"></label>
                                </div>
                            </td>
                        </tr>

                        {% set i = i + 1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Fermer</div>
                <div class="btn btn-primary" id="submitColumnVisibleDispatch">Enregistrer</div>
            </div>
        </div>
    </div>
</div>
