{% extends 'layout.html.twig' %}

{% block title %}Demande | {{ 'acheminement.acheminements'|trans }} | Détails{% endblock %}
{% block titleLink path('dispatch_index') %}

{% block page_content %}
    <input type="hidden" id="natureTranslation" value="{{ 'natures.nature'|trans }}"/>
    <input type="hidden" id="dispatchQuantityTranslation" value="{{'acheminement.Quantité à acheminer'|trans}}"/>
    <input type="hidden" id="dispatchId" value="{{ dispatch.id }}"/>

    <div class="m-4">
        <div class="row">
            <div class="col-12">
                <div class="zone-entete">
                    {% include "dispatch/dispatch-show-header.html.twig" with {
                        dispatch: dispatch,
                        showDetails: detailsConfig,
                        modifiable: modifiable
                    } %}
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div class="wii-page-card">
                    <div class="row mb-2">
                        <h5 class="col-auto h5">{{ 'colis.Liste des colis'|trans }}</h5>
                    </div>
                    {% if modifiable and hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EDIT')) %}
                        <div class="row wii-page-card-header">
                            <div class="col-auto ml-auto">
                                <button onclick="openNewPackModal()"
                                        class="btn btn-primary">
                                    <i class="fa fa-plus mr-2"></i>
                                    <span title="Ajouter un colis">{{ 'colis.Ajouter un colis'|trans }}</span>
                                </button>
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-12">
                            <table id="packTable" class="table w-100"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include "dispatch/modalDeleteDispatch.html.twig" with {dispatch: dispatch} %}
    {% include "dispatch/modalEditDispatch.html.twig" %}
    {% include "dispatch/modalPack.html.twig" with newPackConfig %}
    {% include "dispatch/modalValidateDispatch.html.twig" with dispatchValidate %}
    {% include "dispatch/modalDeletePack.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dispatch-show.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
