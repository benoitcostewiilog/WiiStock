<select data-user-id="{{utilisateur.id}}" onchange="editRole($(this))">
    {% if utilisateur.roles == null %}
        <option value="0" selected>Aucun r√¥le</option>
    {% else %}
        {% for role in roles %}
            {% set selected = role.label == utilisateur.roles[0] ? 'selected' : '' %}
            <option value="{{ role.label }}" {{ selected }}>{{ role.label }}</option>
        {% endfor %}
    {% endif %}
</select>