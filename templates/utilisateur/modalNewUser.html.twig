<form method="" class="modal fade" id="modalNewUser" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modifier un article de référence</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid row">
                <div class="col-12">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" class="form-control data" name="username" placeholder="Nom d'utilisateur" required="">
