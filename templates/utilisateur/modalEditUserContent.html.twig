<form method="">
    <div class="modal-body modal-input container-fluid row">
        <div class="col-12 form-group required" style="display:none;">
            <input type="text" class="form-control data needed" name="user" required="" value="{{ user.id }}">
        </div>
        <div class="col-12 form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control data needed" name="username" required="" value="{{ user.username }}">
        </div>
        <div class="col-12 form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control data needed" name="email" value="{{ user.email }}">
        </div>
        <div class="col-12 form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control data optional-password" name="password">
            <div class="password-error-msg"></div>
        </div>
        <div class="col-12 form-group">
            <label for="password2">Confirmer mot de passe</label>
            <input type="password" class="form-control data optional-password" name="password2">
        </div>
        <div class="col-12 form-group">
            <div class="input-group radio-btn">
                <div>
                    <span class="btn {{ user.status == 1 ? 'active' : 'not-active'}}" data-toggle="status" data-title="active"
                      onclick="toggleRadioButton($(this))">Actif</span><span class="btn {{ user.status == 0 ? 'active' : 'not-active'}}" data-toggle="status" data-title="inactive"
                          onclick="toggleRadioButton($(this))">Inactif</span>
                </div>
                <input type="hidden" name="status" id="status" class="data" value="{{ user.status }}">
            </div>
        </div>
        <div class="col-12 error-msg"></div>
    </div>
</form>