<form method="" class="modal fade" id="modalNewType" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Créer un type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="date-attendu">Label*</label>
                    <input type="text" class="form-control data needed" name="label" value="" required="true">
                </div>
                <div class="form-group w-100 mb-3">
                    <label for='category'>Catégorie*</label>
                    <select class="form-control select2 data needed" name='category' id='category'>
                        {% for category in category %}
                        <option value="{{ category.id }}">{{ category.label }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <div id="submitTypeNew" class="btn btn-primary btn-success">Enregistrer</div>
            </div>
        </div>
    </div>
</form>