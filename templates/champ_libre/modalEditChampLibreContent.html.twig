<div class="form-group">
    <label for="date-attendu">Label</label>
    <input type="text" class="form-control data" name="label" value="{{champLibre.label}}" required="true">
</div>
<div class="form-group">
    <label for="categorieCL">Entité liée</label>
    <select name="categorieCL" class="form-control data " id="">
        {% for categorieCL in categoriesCL %}
        {% set selected = categorieCL.id ==( champLibre.categorieCL ? champLibre.categorieCL.id : '' )? 'selected' : '' %}
        <option value="{{categorieCL.id}}" {{ selected }}>{{categorieCL.label}}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label for="typage">Typage</label>
    <select class="form-control select2 data" name="typage" id='typageModif' onchange="changeType(this)">
        {% for typage in typages %}
        {% set selected = typage.value == champLibre.typage ? 'selected' : '' %}
            <option value="{{ typage.value }}" {{ selected }}>{{ typage.label }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label>Obligatoire à la création </label>
    <label class="switch">
        <input class="checkbox" type="checkbox" name="requiredCreate" {{champLibre.requiredCreate ? 'checked': ''}}>
        <span class="slider round"></span>
    </label>
</div>
<div class="form-group">
    <label>Obligatoire à la modification </label>
    <label class="switch">
        <input class="checkbox" type="checkbox" name="requiredEdit" {{champLibre.requiredEdit ? 'checked': ''}}>
        <span class="slider round"></span>
    </label>
</div>
<div id="infos">
    {% include "champ_libre/modalEditChampLibreInfo.html.twig" %}
</div>