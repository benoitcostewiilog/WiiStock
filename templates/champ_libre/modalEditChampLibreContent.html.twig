<div class="form-group">
    <label for="date-attendu">Label</label>
    <input type="text" class="form-control data" name="label" value="{{champLibre.label}}" required="true">
</div>
<div class="form-group">
    <label for="typage">Typage</label>
    <select class="form-control select2 data" name="typage" id='typageModif' onchange="change(this)"
        onreadystatechange="loadSelect(this)">
        <option value="{{champLibre.typage}}">{{champLibre.typage}}</option>
        {% if champLibre.typage != "booleen" %}
        <option value="booleen">Oui/Non</option>
        {% endif %}
        {% if champLibre.typage != "number" %}
        <option value="number">Nombre</option>
        {% endif %}
        {% if champLibre.typage != "text" %}
        <option value="text">Texte</option>
        {% endif %}
        {% if champLibre.typage != "list" %}
        <option value="list">Liste</option>
        {% endif %}
    </select>
</div>
<div class="form-group">
    <label>Obligatoire à la création </label>
    <label class="switch">
        <input class="checkbox" type="checkbox" name="requiredCreate" {{champLibre.requiredCreate ? 'checked': ''}}>
        <span class="slider round"></span>
    </label>
</div>
<div class="form-group">
    <label>Obligatoire à la modification </label>
    <label class="switch">
        <input class="checkbox" type="checkbox" name="requiredEdit" {{champLibre.requiredEdit ? 'checked': ''}}>
        <span class="slider round"></span>
    </label>
</div>
<div id="infos">
    {% include "champ_libre/modalEditChampLibreInfo.html.twig" %}
</div>