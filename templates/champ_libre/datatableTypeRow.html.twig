<div class="d-flex">
    <div  data-toggle='modal' data-target='#modalEditType' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{ idType }}'
        onclick="editRow($(this),  Routing.generate('type_api_edit', true), $('#modalEditType'), $('#submitEditType'))">
            <i class='fas fa-pencil-alt '></i>
        </button>
    </div>
    <div class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="deleteRow($(this), $('#modalDeleteType'), $('#submitDeleteType'))"
        data-id='{{ idType }}' data-target='#modalDeleteType' data-toggle='modal'>
            <i class='fas fa-trash '></i>
        </button>
    </div>
    <div class='col-4 btn-col-action'>
        <a href={{urlChampsLibre}}>
            <button type="button" class="btn btn-block">
                <i class='fas fa-eye'></i>
            </button>
        </a>
    </div>
</div>