<form method="" class="modal fade" id="modalNewChampsLibre" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Créer un champ libre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid" id="body">
                <div class="form-group">
                    <label for="date-attendu">Nom</label>
                    <input type="text" class="form-control data" name="label" value="" required="true">
                </div>
                <div class="form-group">
                    <label for="typage">Typage</label>
                    <select class="form-control unTruc data " name="typage" id='typage'>
                        <option value="booleen">Oui/Non</option>
                        <option value="number">Nombre</option>
                        <option value="text">Texte</option>
                        <option value="list">Liste</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Obligatoire à la création </label>
                    <label class="switch">
                        <input class="checkbox" type="checkbox" name="requiredCreate">
                        <span class="slider round"></span>
                    </label>
                </div>
                <div class="form-group">
                    <label>Obligatoire à la modification </label>
                    <label class="switch">
                        <input class="checkbox" type="checkbox" name="requiredEdit">
                        <span class="slider round"></span>
                    </label>
                </div>
                <div class="form-group" id="noList">
                    <label for="">Valeur par défaut</label>
                    <input type="text" class="form-control data" name="valeur" value="" required="true">
                </div>
                <div class="form-group" id="list" style="display:none;">
                    <label for="">Valeur par défaut</label>
                    <select class="form-control unTruc data " name="valeur" id="valeur">
                        <option value=""></option>
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitChampsLibreNew" name='type' value='{{type.id}}' type="button" data-dismiss="modal"
                    class="btn btn-primary btn-success data">Enregistrer</button>
            </div>
        </div>
    </div>
</form>