<form method="" class="modal fade" id="modalNewChampsLibre" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Créer un champ libre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid" id="body">
                <div class="form-group">
                    <label for="label">Nom</label>
                    <input type="text" class="form-control data" name="label" value="" required="true">
                </div>
                <div class="form-group">
                    <label for="categorieCL">Entité liée</label>
                    <select name="categorieCL"  class="form-control data " id="">
                        {% for categorieCL in categoriesCL %}
                            <option value="{{categorieCL.id}}">{{categorieCL.label}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="typage">Typage</label>
                    <select class="form-control data " name="typage" id='typage'>
                        {% for typage in typages %}
                            <option value="{{typage.value}}">{{typage.label}}</option>
                        {% endfor %} 
                    </select>
                </div>
                <div class="form-group">
                    <label>Obligatoire à la création </label>
                    <label class="switch">
                        <input class="checkbox" type="checkbox" name="requiredCreate">
                        <span class="slider round"></span>
                    </label>
                </div>
                <div class="form-group">
                    <label>Obligatoire à la modification </label>
                    <label class="switch">
                        <input class="checkbox" type="checkbox" name="requiredEdit">
                        <span class="slider round"></span>
                    </label>
                </div>
                <div class="form-group" id="noList">
                    <label for="">Valeur par défaut</label>
                    <input type="text" class="form-control data" name="valeur" value="" required="true">
                </div>
                <div class="form-group" id="list" style="display:none;">
                    <label for="date-attendu">Elements</label>
                    <input type="text" class="form-control data" name="elem" value="" required='true'>
                </div>
                <div class="error-msg"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitChampsLibreNew" name='type' value='{{type.id}}' type="button"
                    class="btn btn-success data">Enregistrer</button>
            </div>
        </div>
    </div>
</form>