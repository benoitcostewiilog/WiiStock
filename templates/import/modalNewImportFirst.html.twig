<form method="" class="modal fade" id="modalNewImportFirst" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import d'un fichier</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col-8">
                        <label>Nom de l'import</label>
                        <input type="text" class="form-control data needed" name="label">
                    </div>
                    <div class="form-group col-4">
                        <label>Type de données à importer</label>
                        <select class="form-control data needed" name="entity">
                            <option></option>
                            <option value="{{ constant('App\\Entity\\Import::ENTITY_ART') }}">Articles</option>
                            <option value="{{ constant('App\\Entity\\Import::ENTITY_REF') }}">Références</option>
                            <option value="{{ constant('App\\Entity\\Import::ENTITY_FOU') }}">Fournisseurs</option>
                            <option value="{{ constant('App\\Entity\\Import::ENTITY_ART_FOU') }}">Articles fournisseurs</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-12">
                        <div>
                            {% include 'arrivage/attachements.html.twig' with {'isNew' : true, 'text': 'Faites glisser votre fichier csv'} %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <p>Attention : Le délimiteur est le point virgule et l'encodage UTF-8.</p>
                </div>
            </div>

            <div class="error-msg pl-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewImportFirst" type="button" class="btn btn-success">Valider
                </button>
            </div>
        </div>
    </div>
</form>
