{% extends 'layout.html.twig' %}

{% block title %}Paramétrage alertes de péremption{% endblock %}

{% block page_content %}
<h1>Liste des alertes de péremption</h1>

<div class='row'>
    <div class="col-4">
    {% if hasRight(constant('App\\Entity\\Menu::PARAM')) %}
        <a href="" data-toggle="modal" data-target="#modalNewAlerteExpiry"
            onclick="ajaxAutoRefArticleInit($('.ajax-autocomplete'))"
            class="btn btn-primary">
            <span class="fa fa-plus mr-2"></span>Nouvelle alerte
        </a>
    {% endif %}
    </div>
    <div class="offset-4 col-4 text-right">
        {% if nbAlerts > 0 %}
        <div class="radio-btn">
            <span id="filter-active" class="btn {{ filter ? 'active' : 'not-active' }}" onclick="toggleActiveButton($(this))">
                {% set s = nbAlerts > 1 ? 's' : '' %}
                <div>
                    <span class="fa fa-exclamation-triangle mr-2"></span>
                    {{ nbAlerts }} référence{{ s }} en alerte
                </div>
            </span>
        </div>
        {% endif %}
    </div>

</div>

<table id="tableAlerteExpiry_id" class="table table-striped table-bordered w-100">
</table>

{% include "alerte_expiry/modalDeleteAlerteExpiry.html.twig" %}
{% include "alerte_expiry/modalEditAlerteExpiry.html.twig" %}
{% include "alerte_expiry/modalNewAlerteExpiry.html.twig" %}

{% endblock %}

{% block javascript %}
<script src="{{ asset('js/alerte-expiry.js') }}?{{ date().timestamp }}"></script>
{% endblock %}