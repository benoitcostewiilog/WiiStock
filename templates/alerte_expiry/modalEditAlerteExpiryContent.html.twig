<div class="form-group w-100">
    <label>Référence</label>
    <select name="reference" class="form-control ajax-autocomplete ajax-autocomplete-ref data needed"
            onchange="clearErrorMsg($(this)), checkboxOff($(this))">
        {% if alerte.refArticle != null %}
            <option value="{{ alerte.refArticle.id }}">{{ alerte.refArticle.reference }}</option>
        {% endif %}
    </select>
</div>

<div class="form-group">
    <label for="allRef">Sur toutes les références</label>
    <label class="switch">
        <input type="checkbox" name="allRef" class="checkbox data"
               onchange="clearErrorMsg($(this)), toggleNeededRef($(this))"
               {{ alerte.refArticle is null ? 'checked' : '' }}>
        <span class="slider round"></span>
    </label>
</div>

<label class="mt-3">L'alerte doit se lancer : </label>
<div class="form-group">
    <div class="input-group">
        <label hidden>Délai avant alerte</label>
        <input type="number" min="0" class="form-control data needed" name="nbPeriods" value="{{ alerte.nbPeriod }}">
        <select class="form-control data needed" name="period">
            <option value="jour" {{ alerte.typePeriod == 'jour' ? 'selected' : '' }}>jours</option>
            <option value="semaine" {{ alerte.typePeriod == 'semaine' ? 'selected' : '' }}>semaines</option>
            <option value="mois" {{ alerte.typePeriod == 'mois' ? 'selected' : '' }}>mois</option>
        </select>
        <div class="label p-2">avant la date de péremption.</div>
    </div>
</div>