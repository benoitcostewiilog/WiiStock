{% extends 'layout.html.twig' %}

{% block title %}Litiges arrivage{% endblock %}

{% block page_filter %}
    {{ parent() }}
    {% include 'filters/filtersLitiges.html.twig' with {'btnName': 'submitSearchLitigesArrivages'} %}
{% endblock %}

{% block page_content %}
    <h1>Litiges sur arrivages</h1>

    <div class="row">
        <div class="btn btn-primary" onclick='generateCSVLitigeArrivage()'>
            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
        </div>
    </div>
    <div class="d-none justify-content-center" id="spinnerLitigesArrivages">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="row">
        <div class="error-msg p-4"></div>
    </div>

    <div>
        <table id="tableLitigesArrivages" class="table table-striped table-bordered w-100">
        </table>
    </div>

    {% include 'arrivage/modalEditLitige.html.twig' %}
    {% include 'litige/modalDeleteLitige.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src = "{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src = "{{ asset('js/litiges.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
