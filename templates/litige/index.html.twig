{% extends 'layout.html.twig' %}

{% block title %}Litiges{% endblock %}


{% block page_content %}

    {% block page_filter %}
        {% include 'filters/filtersLitiges.html.twig' with {
            page: 'PAGE_LITIGE_ARR',
            tableSelector: '#tableLitiges'
        } %}
    {% endblock %}
    <div class="col-12">
        <h1>Litiges</h1>
    </div>
    <div class="col-12">
        <div class="btn btn-primary" onclick="generateCSV('get_litiges_for_csv', 'litiges')">
            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
        </div>
    </div>
    <div class="d-none justify-content-center col-12" id="spinner">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="mt-5 col-12">
        <table id="tableLitiges" class="table table-striped table-bordered w-100">
        </table>
    </div>

    {% include 'litige/modalEditLitige.html.twig' %}
    {% include 'litige/modalDeleteLitige.html.twig' %}
    <input hidden id="transNoArrivage" value="{{ "arrivage.n° d'arrivage"|trans }}">
    <input hidden id="transNoReception" value="{{ "réception.n° de réception"|trans }}">
    <input hidden id="isCollins" value="{{ isCollins }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src="{{ asset('js/litiges.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
