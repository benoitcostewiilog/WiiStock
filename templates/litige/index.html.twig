{% extends 'layout.html.twig' %}

{% block title %}Qualité | Litiges{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersLitiges.html.twig' with {
        page: 'PAGE_LITIGE_ARR',
        tableSelector: '#tableLitiges'
    } %}
{% endblock %}
{% block page_content %}
    <div class="m-4 datatable-container">
        <div class="row datatable-header">
            <div class="col-auto ml-auto">
                <div class="btn-group mr-3">
                    <div class="btn btn-primary btn-ripple split-button" onclick="generateCSV('get_litiges_for_csv', 'litiges')">
                        <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
                    </div>
                    <button type="button" class="btn btn-primary split-button-dropdown btn-ripple" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        <span class="fa fa-angle-down"></span>
                    </button>
                    <div class="dropdown-menu mr-5">
                        <a href="#" class="dropdown-item" onclick="$('.buttons-colvis').click();">
                            <i class="fa fa-cog mr-2"></i>Gestion des colonnes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="d-none justify-content-center col-12" id="spinner">
                    <div class="spinner-border sizeLoader" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <table id="tableLitiges" class="table nowrap w-100">
                </table>
            </div>
        </div>
    </div>
    {% include 'litige/modalEditLitige.html.twig' %}
    {% include 'litige/modalDeleteLitige.html.twig' %}
    <input hidden id="transNoArrivage" value="{{ "arrivage.n° d'arrivage"|trans }}">
    <input hidden id="transNoReception" value="{{ "réception.n° de réception"|trans }}">
    <input hidden id="isCollins" value="{{ isCollins }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src="{{ asset('js/litiges.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
