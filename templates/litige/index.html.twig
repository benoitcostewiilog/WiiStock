{% extends 'layout.html.twig' %}

{% block title %}Litiges{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersLitiges.html.twig' with {'btnName': 'submitSearchLitiges'} %}
{% endblock %}

{% block page_content %}
    <h1>Litiges</h1>

    <div class="row">
        <div class="btn btn-primary" onclick="generateCSV('get_litiges_for_csv', 'litiges-{{ 'arrivage.arrivages'|trans }}')">
            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
        </div>
    </div>
    <div class="d-none justify-content-center" id="spinner">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="mt-5">
        <table id="tableLitiges" class="table table-striped table-bordered w-100">
        </table>
    </div>

    {% include 'litige/modalEditLitige.html.twig' %}
    {% include 'litige/modalDeleteLitige.html.twig' %}
    <input hidden id="trans-arrivage" value="{{ "arrivage.d'arrivage"|trans }}">
    <input hidden id="trans-reception" value="{{ "réception.de réception"|trans }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src = "{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src = "{{ asset('js/litiges.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
