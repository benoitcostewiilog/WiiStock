<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
        <div data-id='{{ id }}' class="col-3" data-target='#modalEditArticleFournisseur' data-toggle='modal'
            onclick="editRow($(this), Routing.generate('article_fournisseur_api_edit', true), $('#modalEditArticleFournisseur'), $('#submitEditArticleFournisseur'))">
            <i class='fas fa-pencil-alt'></i>
        </div>
    {% endif %}
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
        <div data-id="{{ id }}" class="col-3" data-target='#modalDeleteArticleFournisseur' data-toggle='modal'
            onclick="deleteRow($(this), $('#modalDeleteArticleFournisseur'), $('#submitDeleteArticleFournisseur'))">
            <i class='fas fa-trash'></i>
        </div>
    {% endif %}
</div>