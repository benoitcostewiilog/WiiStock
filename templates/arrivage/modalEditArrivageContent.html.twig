                {% set selected = (statut.id == arrivage.statut.id ? 'selected' : '') %}
                <option value="{{ statut.id }}" {{ selected }}>{{ statut.nom }}</option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="row">
    <div class="form-group col">
        <label for="destinataire">Destinataire</label>
