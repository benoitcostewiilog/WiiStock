<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::LITIGE'), constant('App\\Entity\\Action::EDIT'))%}
    <div>
        <div class="btn btn-col-action" data-id='{{ litigeId }}' data-toggle='modal' data-target='#modalEditLitige'
             onclick="editRowLitige($(this), openTableHisto, {{ arrivageId }})">
            <i class='fas fa-pencil-alt'></i>
        </div>
    </div>
    {% endif %}
    {% if hasRight(constant('App\\Entity\\Menu::LITIGE'), constant('App\\Entity\\Action::DELETE'))%}
        <div onclick="deleteRow($(this), $('#modalDeleteLitige'), $('#submitDeleteLitige'))"
             data-id='{{ litigeId }}' data-target='#modalDeleteLitige' data-toggle='modal'>
            <div class="btn btn-col-action">
                <i class='fas fa-trash'></i>
            </div>
        </div>
    {% endif %}
</div>