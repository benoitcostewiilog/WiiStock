<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::CREATE_EDIT'))%}
        <div data-id='{{ arrivage.id }}' data-target='#modalEditArrivage' data-toggle='modal'
            class='btn-xs btn-default'
            onclick="editRow($(this), Routing.generate('arrivage_edit_api', true), $('#modalEditArrivage'), $('#submitEditArrivage'), true)">
            <i class='fas fa-pencil-alt'></i>
        </div>
    {% endif %}
        {#TODO CG quelles r√®gles de gestion pour suppression arrivage#}
    {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::DELETE'))%}
        <div data-id='{{ arrivage.id }}' data-target='#modalDeleteArrivage' data-toggle='modal' class='service-delete col-3'
        onclick="deleteRowArrivage($(this), $('#modalDeleteArrivage'), $('#submitDeleteArrivage'), {{ arrivage.litiges|length }})">
        <i class='fas fa-trash'></i>
        </div>
    {% endif %}
</div>