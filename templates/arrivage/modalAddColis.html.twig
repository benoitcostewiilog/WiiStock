<form method="" class="modal show" id="modalAddColis" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Ajouter colis</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="nbColis">Nombre de colis</label>
                    <input type="number" id="nbColis" class="form-control data" name="nbColis" min="0">
                </div>
            </div>

            <input hidden value="{{ arrivage.id }}" name="arrivageId" class="data">

            <div class="error-msg p-4"></div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitAddColis" type="button" class="btn btn-success">Valider</button>
            </div>
        </div>
    </div>
</form>