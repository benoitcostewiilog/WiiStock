<h1 class="text-center">Arrivage n° {{ arrivage.numeroArrivage }}
    <div class = "btn btn-success">
        <i class='fas fa-print pointer' onclick="printBarcode('{{ arrivage.numeroArrivage }}')"></i>
    </div>
</h1>

<table class="table table-striped table-bordered w-100">
    <tr>
        <th>N° colis</th>
        {% set listCodeColis = '' %}
        {% for colis in arrivage.colis %}
            {% set comma = loop.first ? '' : ',' %}
            {% set listCodeColis = listCodeColis~comma~colis.code %}
        {% endfor %}
        <th class="text-center">Impression <i class='fas fa-print' onclick="getDataAndPrintLabels('{{ arrivage.id }}')"></i></th>
    </tr>
    {% for colis in arrivage.colis %}
        <tr>
            <td>{{ colis.code }}</td>
            <td class="text-center">
                <i class='fas fa-print' onclick="printBarcode('{{ colis.code }}')"></i>
            </td>
        </tr>
    {% endfor %}
</table>