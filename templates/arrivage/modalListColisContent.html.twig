<h1 class="text-center">Arrivage n° {{ arrivage.numeroArrivage }}
    <a class="btn btn-success"
       href="{{ path('print_arrivage_bar_code', {arrivage: arrivage.id}) }}">
        <i class='fas fa-print pointer'></i>
    </a>
</h1>

<table class="table table-striped table-bordered w-100">
    <tr>
        <th>N° colis</th>
        {% set listCodeColis = '' %}
        {% for colis in arrivage.colis %}
            {% set comma = loop.first ? '' : ',' %}
            {% set listCodeColis = listCodeColis~comma~colis.code %}
        {% endfor %}
        <th class="text-center">
            Impression
            <a href="{{ path('print_arrivage_colis_bar_codes', {arrivage: arrivage.id}) }}"
               target="_blank">
                <i class='fas fa-print'></i>
            </a>
        </th>
    </tr>
    {% for colis in arrivage.colis %}
        <tr>
            <td>{{ colis.code }}</td>
            <td class="text-center">
                <a href="{{ path('print_arrivage_colis_bar_codes', {arrivage: arrivage.id, colisId: colis.id}) }}"
                   target="_blank">
                    <i class='fas fa-print'></i>
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
