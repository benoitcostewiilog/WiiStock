<form method="" class="modal fade" id="modalNewArrivage" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">{{ 'arrivage.nouvel arrivage'|trans|capitalize }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="row fly-form">
                    {% if fieldsParam|isFieldRequired('fournisseur', 'displayed') %}
                        <div class="form-group col w-100">
                            <label
                                for="fournisseur">Fournisseur{{ fieldsParam|isFieldRequired('fournisseur', 'mustToCreate') ? '*' : '' }}</label>
                            <select
                                class="form-control data ajax-autocomplete-fournisseur ajax-autocomplete {{ fieldsParam|isFieldRequired('fournisseur', 'mustToCreate') ? 'needed' : '' }}"
                                name="fournisseur" id="fournisseur">
                            </select>
                        </div>
                        <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary" onclick="onFlyFormToggle('fournisseurDisplay', 'addFournisseur')"><i
                                class="fa fa-plus"></i></span>
                        </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('transporteur', 'displayed') %}
                        <div class="form-group col w-100">
                            <label
                                for="transporteur">Transporteur{{ fieldsParam|isFieldRequired('transporteur', 'mustToCreate') ? '*' : '' }}</label>
                            <select
                                class="form-control data ajax-autocomplete-transporteur ajax-autocomplete {{ fieldsParam|isFieldRequired('transporteur', 'mustToCreate') ? 'needed' : '' }}"
                                name="transporteur" id="transporteur">
                            </select>
                        </div>
                        <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary"
                              onclick="onFlyFormToggle('transporteurDisplay', 'addTransporteur')"><i
                                class="fa fa-plus"></i></span>
                        </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('chauffeur', 'displayed') %}
                        <div class="form-group col w-100">
                            <label
                                for="chauffeur">Chauffeur{{ fieldsParam|isFieldRequired('chauffeur', 'mustToCreate') ? '*' : '' }}</label>
                            <select
                                class="form-control data ajax-autocomplete-chauffeur ajax-autocomplete {{ fieldsParam|isFieldRequired('chauffeur', 'mustToCreate') ? 'needed' : '' }}"
                                name="chauffeur"
                                id="chauffeur">
                            </select>
                        </div>
                        <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary" onclick="onFlyFormToggle('chauffeurDisplay', 'addChauffeur')"><i
                                class="fa fa-plus"></i></span>
                        </div>
                    {% endif %}
                </div>
                <div class="row new-on-fly-form-container align-items-start">
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="fournisseurDisplay">
                            <label for="newFournisseur">Nom*</label>
                            <input type="text" id="newFournisseur" class="form-control valeur newFormulaire neededNew"
                                   name="Nom" maxlength="64">
                            <label for="newFournisseurCode" class="mt-2">Code*</label>
                            <input type="text" id="newFournisseurCode" class="form-control newFormulaire neededNew"
                                   name="Code" maxlength="64">
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addFournisseur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('fournisseur_new', true), $(this), 'fournisseurDisplay', 'addFournisseur', $('#fournisseur'))">
                                <i class="fas fa-check-circle"></i></span>
                        </div>
                    </div>
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="transporteurDisplay">
                            <label for="newTransporteur">Nom*</label>
                            <input type="text" id="newTransporteur" class="form-control newFormulaire neededNew"
                                   name="label" maxlength="64">
                            <label for="newTransporteurCode" class="mt-2">Code*</label>
                            <input type="text" id="newTransporteurCode" class="form-control newFormulaire neededNew"
                                   name="code" maxlength="64">
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addTransporteur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('transporteur_new', true), $(this), 'transporteurDisplay', 'addTransporteur', $('#transporteur'))">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                    </div>
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="chauffeurDisplay">
                            <label for="newChauffeurName">Nom*</label>
                            <input type="text" id="newChauffeurName" class="form-control newFormulaire neededNew"
                                   name="nom" maxlength="64">
                            <label for="newChauffeurFirstName" class="mt-2">Prénom*</label>
                            <input type="text" id="newChauffeurFirstName" class="form-control newFormulaire neededNew"
                                   name="prenom" maxlength="64">
                            <label for="newChauffeurNumero" class="mt-2">N°doc ID*</label>
                            <input type="text" id="newChauffeurNumero" class="form-control newFormulaire neededNew"
                                   name="documentID" maxlength="64">
                            <label for="newChauffeurTransporteur" class="mt-2">Transporteur*</label>
                            <select
                                class="form-control newFormulaire ajax-autocomplete-transporteur ajax-autocomplete form-group col w-100 neededNew"
                                name="transporteur" id="newChauffeurTransporteur">
                            </select>
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addChauffeur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('chauffeur_new', true), $(this), 'chauffeurDisplay', 'addChauffeur', $('#chauffeur'))">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {% if fieldsParam|isFieldRequired('noTracking', 'displayed') %}
                        <div class="form-group col-4">
                            <label for="noTracking">N° tracking
                                transporteur{{ fieldsParam|isFieldRequired('noTracking', 'mustToCreate') ? '*' : '' }}</label>
                            <input type="text" id="noTracking"
                                   class="form-control data {{ fieldsParam|isFieldRequired('noTracking', 'mustToCreate') ? 'needed' : '' }}"
                                   name="noTracking" maxlength="64">
                        </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('numeroBL', 'displayed') %}
                        <div class="form-group col-4">
                            <label for="noBL">N° commande /
                                BL{{ fieldsParam|isFieldRequired('numeroBL', 'mustToCreate') ? '*' : '' }}</label>
                            <input type="text" id="noBL"
                                   class="form-control data {{ fieldsParam|isFieldRequired('numeroBL', 'mustToCreate') ? 'needed' : '' }}"
                                   name="noBL" maxlength="64">
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    {% if fieldsParam|isFieldRequired('destinataire', 'displayed') %}
                        <div class="form-group col-4 w-100">
                            <label
                                for="destinataire">Destinataire{{ fieldsParam|isFieldRequired('destinataire', 'mustToCreate') ? '*' : '' }}</label>
                            <select
                                class="form-control data ajax-autocomplete-user ajax-autocomplete {{ fieldsParam|isFieldRequired('destinataire', 'mustToCreate') ? 'needed' : '' }}"
                                name="destinataire" id="destinataire">
                            </select>
                        </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('acheteurs', 'displayed') %}
                        <div class="form-group w-100 col-4">
                            <label
                                for="acheteurs">Acheteur(s){{ fieldsParam|isFieldRequired('acheteurs', 'mustToCreate') ? '*' : '' }}</label>
                            <select name="acheteurs" id="acheteurs" multiple="multiple"
                                    class="form-control ajax-autocomplete-user data ajax-autocomplete {{ fieldsParam|isFieldRequired('acheteurs', 'mustToCreate') ? 'needed' : '' }}">
                                <option value="{{ app.user.id }}">{{ app.user.username }}</option>
                                >
                            </select>
                        </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('immatriculation', 'displayed') %}
                        <div class="form-group col-4">
                            <label
                                for="Immatriculation">Immatriculation{{ fieldsParam|isFieldRequired('immatriculation', 'mustToCreate') ? '*' : '' }}</label>
                            <input type="text" id="Immatriculation"
                                   class="form-control data {{ fieldsParam|isFieldRequired('immatriculation', 'mustToCreate') ? 'needed' : '' }}"
                                   name="immatriculation"
                                   maxlength="64">
                        </div>
                    {% endif %}
                </div>

                {% if natures != null %}
                    <div class="row mt-4">
                        <div class='col-12 mb-2'>
                            <h3 class="label">Nb {{ 'arrivage.de colis'|trans }} à ajouter :</h3>
                        </div>
                        <div class="form-group col-12 blocVisible d-block" id=''>
                            <div class="d-block">
                                <div class="row mt-2">
                                    {% for nature in natures %}
                                        <div class="form-group col-2">
                                            <label for="">
                                                {{ nature.label | capitalize }}
                                            </label>
                                            <input type="number" class="form-control data-array"
                                                   value="" name="nature" data-id="{{ nature.id }}" min="0">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {% include 'parametrage_global/warningSelectEmpty.html.twig' with {
                        array: natures,
                        warningLabel: 'Attention ! Aucune nature ' ~ ('arrivage.de colis'|trans) ~ 'n\'a été créée',
                        redirectPath: path('nature_param_index'),
                        redirectLabel: 'Aller vers la création des natures'
                    } %}
                {% endif %}

                <div class="row">
                    {% if fieldsParam|isFieldRequired('imprimerArrivage', 'displayed') %}
                        {% if natures != null %}
                            <div class="form-group col-3">
                                <label>Imprimer {{ 'arrivage.colis'|trans }}</label>
                                <label class="switch">
                                    <input class="checkbox" type="checkbox" name="printColis">
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        {% endif %}

                        <div class="form-group col-3">
                            <label>Imprimer {{ 'arrivage.arrivage'|trans }}</label>
                            <label class="switch">
                                <input class="checkbox" type="checkbox" name="printArrivage">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    {% endif %}
                </div>


                <div class="row">
                    {% if fieldsParam|isFieldRequired('commentaire', 'displayed') %}
                    <div class="form-group col-8 h-fit-content">
                        <label
                            for="commentaire">Commentaire{{ fieldsParam|isFieldRequired('commentaire', 'mustToCreate') ? '*' : '' }}</label>
                        <input id="commentaire"
                               class="commentaire form-control data {{ fieldsParam|isFieldRequired('commentaire', 'mustToCreate') ? 'needed' : '' }}"
                               name="commentaire" type="hidden">
                        <div class="editor-container-new"></div>
                    </div>
                    {% endif %}
                    {% if fieldsParam|isFieldRequired('pj', 'displayed') %}
                    <div class="form-group col-4">
                        <div>
                            {% include 'arrivage/attachements.html.twig' with {'isNew' : true} %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewArrivage" type="button" class="btn btn-success"
                        onclick="setCommentaire('.editor-container-new', quillNew)">Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
