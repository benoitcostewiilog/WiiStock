<form method="" class="modal fade" id="modalNewArrivage" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">{{ 'arrivage.nouvel arrivage'|trans|capitalize }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="row fly-form">
                    <div class="form-group col w-100">
                        <label for="fournisseur">Fournisseur*</label>
                        <select class="form-control input-sm data ajax-autocomplete-fournisseur ajax-autocomplete needed"
                                name="fournisseur" id="fournisseur">
                        </select>
                    </div>
                    <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary" onclick="onFlyFormToggle('fournisseurDisplay', 'addFournisseur')"><i
                                class="fa fa-plus"></i></span>
                    </div>

                    <div class="form-group col w-100">
                        <label for="transporteur">Transporteur*</label>
                        <select class="form-control input-sm data ajax-autocomplete-transporteur ajax-autocomplete needed"
                                name="transporteur" id="transporteur">
                        </select>
                    </div>
                    <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary" onclick="onFlyFormToggle('transporteurDisplay', 'addTransporteur')"><i
                                class="fa fa-plus"></i></span>
                    </div>

                    <div class="form-group col w-100">
                        <label for="chauffeur">Chauffeur</label>
                        <select class="form-control input-sm data ajax-autocomplete-chauffeur ajax-autocomplete" name="chauffeur"
                                id="chauffeur">
                        </select>
                    </div>
                    <div class="form-group col-1 toggle-button-container">
                        <span class="btn btn-primary" onclick="onFlyFormToggle('chauffeurDisplay', 'addChauffeur')"><i
                                class="fa fa-plus"></i></span>
                    </div>
                </div>
                <div class="row new-on-fly-form-container align-items-start">
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="fournisseurDisplay">
                            <label for="newFournisseur">Nom*</label>
                            <input type="text" id="newFournisseur" class="form-control input-sm valeur newFormulaire neededNew"
                                   name="Nom" maxlength="64">
                            <label for="newFournisseurCode" class="mt-2">Code*</label>
                            <input type="text" id="newFournisseurCode" class="form-control input-sm newFormulaire neededNew"
                                   name="Code" maxlength="64">
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addFournisseur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('fournisseur_new', true), $(this), 'fournisseurDisplay', 'addFournisseur', $('#fournisseur'))">
                                <i class="fas fa-check-circle"></i></span>
                        </div>
                    </div>
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="transporteurDisplay">
                            <label for="newTransporteur">Nom*</label>
                            <input type="text" id="newTransporteur" class="form-control input-sm newFormulaire neededNew"
                                   name="label" maxlength="64">
                            <label for="newTransporteurCode" class="mt-2">Code*</label>
                            <input type="text" id="newTransporteurCode" class="form-control input-sm newFormulaire neededNew"
                                   name="code" maxlength="64">
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addTransporteur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('transporteur_new', true), $(this), 'transporteurDisplay', 'addTransporteur', $('#transporteur'))">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                    </div>
                    <div class="row col-4 formulaire fly-form">
                        <div class="form-group col-10 invisible" id="chauffeurDisplay">
                            <label for="newChauffeurName">Nom*</label>
                            <input type="text" id="newChauffeurName" class="form-control input-sm newFormulaire neededNew"
                                   name="nom" maxlength="64">
                            <label for="newChauffeurFirstName" class="mt-2">Prénom*</label>
                            <input type="text" id="newChauffeurFirstName" class="form-control input-sm newFormulaire neededNew"
                                   name="prenom" maxlength="64">
                            <label for="newChauffeurNumero" class="mt-2">N°doc ID*</label>
                            <input type="text" id="newChauffeurNumero" class="form-control input-sm newFormulaire neededNew"
                                   name="documentID" maxlength="64">
                            <label for="newChauffeurTransporteur" class="mt-2">Transporteur*</label>
                            <select
                                class="form-control input-sm newFormulaire ajax-autocomplete-transporteur ajax-autocomplete form-group col w-100 neededNew"
                                name="transporteur" id="newChauffeurTransporteur">
                            </select>
                        </div>
                        <div class="form-group col-2 invisible submit-button-container" id="addChauffeur">
                            <span class="btn btn-success"
                                  onclick="onFlyFormSubmit(Routing.generate('chauffeur_new', true), $(this), 'chauffeurDisplay', 'addChauffeur', $('#chauffeur'))">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <label for="noTracking">N° tracking transporteur</label>
                        <input type="text" id="noTracking" class="form-control input-sm data" name="noTracking" maxlength="64">
                    </div>

                    <div class="form-group col-4">
                        <label for="noBL">N° commande / BL</label>
                        <input type="text" id="noBL" class="form-control input-sm data" name="noBL" maxlength="64">
                    </div>
                    <div class="form-group col-4">
                        <label for="chauffeur">Statut*</label>
                        <select class="form-control input-sm data needed" id="statut" name="statut">
                            {% for statut in statuts %}
                                <option value="{{ statut.id }}">{{ statut.nom|upper }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="row">
                            <div class="form-group col-12 w-100">
                                <label for="destinataire">Destinataire*</label>
                                <select class="form-control input-sm data ajax-autocomplete-user needed ajax-autocomplete"
                                        name="destinataire" id="destinataire">
                                </select>
                            </div>
                            {% if natures != null %}
                                <div class='col-12 mb-2'>
                                    <h3 class="label">Nombre {{ 'arrivage.de colis'|trans }} à ajouter :</h3>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group w-100 col-4">
                        <label for="acheteurs">Acheteur(s)*</label>
                        <select name="acheteurs" id="acheteurs" multiple="multiple"
                                class="form-control input-sm ajax-autocomplete-user data needed ajax-autocomplete">
                            <option value="{{ app.user.id }}">{{ app.user.username }}</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    {% if natures != null %}
                        <div class="form-group col-12 blocVisible d-block natures-container">
                            <div class="d-block">
                                <div class="row mt-2">
                                    {% for nature in natures %}
                                        <div class="form-group col-1 form-group-nature">
                                            <label for="">
                                                {{ nature.label | capitalize }}
                                            </label>
                                            <input type="number" class="form-control input-sm data-array"
                                                   value="" name="nature" data-id="{{ nature.id }}" min="0">
                                        </div>
                                    {% endfor %}
                                    {% if natures != null %}
                                        <div class="form-group col-2">
                                            <label>Imprimer {{ 'arrivage.colis'|trans }}</label>
                                            <label class="switch d-block-switch mt-2">
                                                <input class="checkbox" type="checkbox" name="printColis">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    {% endif %}
                                    <div class="form-group col-2">
                                        <label>Imprimer {{ 'arrivage.arrivage'|trans }}</label>
                                        <label class="switch d-block-switch mt-2">
                                            <input class="checkbox" type="checkbox" name="printArrivage">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            {% include 'parametrage_global/warningSelectEmpty.html.twig' with {
                                array: natures,
                                warningLabel: 'Attention ! Aucune nature ' ~ ('arrivage.de colis'|trans) ~ 'n\'a été créée',
                                redirectPath: path('nature_param_index'),
                                redirectLabel: 'Aller vers la création des natures'
                            } %}
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="form-group col-8 h-fit-content">
                        <label for="commentaire">Commentaire</label>
                        <input id="commentaire" class="commentaire form-control input-sm data" name="commentaire" type="hidden">
                        <div class="editor-container-new"></div>
                    </div>
                    <div class="form-group col-4">
                        <div>
                            {% include 'arrivage/attachements.html.twig' with {'isNew' : true} %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="error-msg pl-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewArrivage" type="button" class="btn btn-success"
                        onclick="setCommentaire('.editor-container-new', quillNew)">Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
