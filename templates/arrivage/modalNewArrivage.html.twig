<form method="" class="modal fade" id="modalNewArrivage" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Nouvelle demande d'arrivage</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col">
                        <label for="fournisseur">Fournisseur*</label>
                        <select class="form-control data needed" id="fournisseur" name="fournisseur">
                            <option disabled selected></option>
                            {% for fournisseur in fournisseurs %}
                                <option value="{{ fournisseur.id }}">{{ fournisseur.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group col">
                        <label for="transporteur">Transporteur*</label>
                        <select class="form-control data needed" id="transporteur" name="transporteur">
                            <option disabled selected></option>
                            {% for transporteur in transporteurs %}
                                <option value="{{ transporteur.id }}">{{ transporteur.label }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group col">
                        <label for="chauffeur">Chauffeur</label>
                        <select class="form-control data" id="chauffeur" name="chauffeur">
                            <option disabled selected></option>
                            {% for chauffeur in chauffeurs %}
                                <option value="{{ chauffeur.id }}">{{ chauffeur.prenom|capitalize }} {{ chauffeur.nom|upper }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <label for="noTracking">N° tracking transporteur</label>
                        <input type="text" id="noTracking" class="form-control data" name="noTracking" maxlength="64">
                    </div>

                    <div class="form-group col-4">
                        <label for="noBL">N° commande / BL</label>
                        <input type="text" id="noBL" class="form-control data" name="noBL" maxlength="64">
                    </div>

                    <div class="form-group col-4">
                        <label for="statut">Statut*</label>
                        <select class="form-control data needed" id="statut" name="statut">
                            {% for statut in statuts %}
                                <option value="{{ statut.id }}">{{ statut.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <label for="destinataire">Destinataire*</label>
                        <select class="form-control data needed" id="destinataire" name="destinataire">
                            <option disabled selected></option>
                            {% for utilisateur in utilisateurs %}
                                <option value="{{ utilisateur.id }}">{{ utilisateur.username }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group w-100 col-4">
                        <label for="acheteurs">Acheteur(s)</label>
                        <select type="text" class="form-control data select2" name="acheteurs" multiple="multiple"
                                id="acheteurs">
                            {% for utilisateur in utilisateurs %}
                                <option value="{{ utilisateur.username }}">
                                    {{ utilisateur.username }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-8">
                        <label for="commentaire">Commentaire</label>
                        <input id="commentaire" class="commentaire form-control data" name="commentaire" type="hidden">
                        <div class="editor-container-new" ></div>
                    </div>
                    <div class="form-group col-4">
                        <div>
                            {% include 'arrivage/attachements.html.twig' with {'isNew' : true} %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewArrivage" type="button" class="btn btn-success"
                    onclick="setCommentaire('.editor-container-new', quillNew)">Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>