    <label for="commentaire">Commentaire</label>
    <input id="commentaire" class="form-control data input" name="commentaire" type="hidden"
        value="{{manut.commentaire}}">
    <div class="editor-container input" value="{{manut.commentaire}}"> {{manut.commentaire|raw}}
    </div>

</div>
