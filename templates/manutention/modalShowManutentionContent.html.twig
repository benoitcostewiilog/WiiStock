        disabled placeholder="Objet">
</div>

<div class="form-group">
    <label for="demandeur">Demandeur</label>
    <select type="text" class="demandeur form-control data input" name="demandeur" disabled>
        <option value="{{manut.demandeur.id}}">{{manut.demandeur }}</option>
    </select>
</div>

<div class="form-group ">
    <label for="Localité">Chargement</label>
    <input class="form-control data " value="{{manut.source}}" name="source" disabled>
</div>

<div class="form-group ">
    <label for="Localité">Déchargement</label>
    <input class="form-control data" value="{{manut.destination}}" name="destination" disabled>
</div>

<div class="form-group">
    <div class="input-group radio-btn">
        <label for="statut" class="my-auto mr-2">Statut</label>
        <input class="form-control data" value="{{manut.statut.nom}}" name="destination" disabled>
    </div>

</div>
</div>

