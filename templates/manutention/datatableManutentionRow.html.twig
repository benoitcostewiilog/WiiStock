<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::MANUT'), constant('App\\Entity\\Action::EDIT_DELETE'))%}
        <div data-target='#modalEditManutention' data-toggle='modal'>
            <div class="btn btn-col-action" data-id='{{ manut.id }}'
                 onclick="editRow($(this), Routing.generate('manutention_edit_api', true), $('#modalEditManutention'), $('#submitEditManutention'), true)">
                <i class='fas fa-pencil-alt'></i>
            </div>
        </div>
        {% if manut.statut.nom != constant('App\\Entity\\Manutention::STATUT_TRAITE') %}
            <div data-target='#modalDeleteManutention' data-toggle='modal'>
                <div class="btn btn-col-action" data-id='{{ manut.id }}'
                     onclick="deleteRow($(this), $('#modalDeleteManutention'), $('#submitDeleteManutention'))">
                    <i class='fas fa-trash'></i>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div data-target='#modalShowManutention' data-toggle='modal'  >
            <div class="btn btn-col-action" data-id='{{ manut.id }}'
                 onclick="showRow($(this), Routing.generate('manutention_show', true), $('#modalShowManutention'))">
                <i class='fas fa-eye'></i>
            </div>
        </div>
    {% endif %}
</div>