<div class="row">
    <p class="col-12 white">
        Dashboard | RÉCEPTION ADMINISTRATIVE
    </p>
</div>
<div class="row mt-2">
    <div class="col-12">
        <div class="row">
            <div class="col-8 dashboard-box-wrapper third-height">
                <div class="dashboard-box">
                    <p class="title">
                        Entrées à effectuer<br>
                    </p>
                    <div class="points">
                        {% include 'svg/dotsblack.svg.twig' with { height: '20px', width: '8px'} %}
                    </div>
                    <div class="h-100">
                        <canvas id="chartFirstForAdmin" width="300" height="90"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-4 align-self-center">
                <div>
                    <div class="dashboard-box-wrapper">
                        <div class="dashboard-box text-center">
                            <p class="little-font">
                                Nombres de lignes restantes à traiter
                            </p>
                            <p class="little-font">
                                <strong id="totalForChart1" class="figure"></strong>
                            </p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="dashboard-box-wrapper">
                        <div class="dashboard-box text-center">
                            <p class="little-font">
                                Prochaine bac/palette à traiter
                            </p>
                            <p class="little-font">
                                <strong id="empForChart1" class="figure"></strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-8 dashboard-box-wrapper third-height">
                <div class="dashboard-box">
                    <p class="title">
                        Entrées à effectuer<br>
                    </p>
                    <div class="points">
                        {% include 'svg/dotsblack.svg.twig' with { height: '20px', width: '8px'} %}
                    </div>
                    <div class="h-100">
                        <canvas id="chartSecondForAdmin" width="300" height="90"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-4 align-self-center">
                <div>
                    <div class="dashboard-box-wrapper">
                        <div class="dashboard-box text-center">
                            <p class="little-font">
                                Nombres de lignes restantes à traiter
                            </p>
                            <p class="little-font">
                                <strong id="totalForChart2" class="figure"></strong>
                            </p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="dashboard-box-wrapper">
                        <div class="dashboard-box text-center">
                            <p class="little-font">
                                Prochaine palette à traiter
                            </p>
                            <p class="little-font">
                                <strong id="empForChart2" class="figure"></strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-3">
        <div class="dashboard-box-wrapper fourth-height">
            <div class="dashboard-box text-center">
                <p class="little-font">
                    Urgences restantes à recevoir<br>
                    <span class="figure red" id="urgenceCountCount">-</span>
                </p>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="dashboard-box-wrapper fourth-height">
            <div class="dashboard-box text-center">
                <p class="little-font">
                    Urgences restantes à traiter<br>
                    (<span id="enCoursUrgenceLabel">-</span>)<br>
                    <span class="figure" id="enCoursUrgenceCount">-</span>
                </p>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="dashboard-box-wrapper fourth-height">
            <div class="dashboard-box text-center">
                <p class="little-font">
                    Lignes en litiges<br>
                    (<span id="enCoursLitigeLabel">-</span>)<br>
                    <span class="figure" id="enCoursLitigeCount">-</span>
                </p>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="dashboard-box-wrapper fourth-height">
            <div class="dashboard-box text-center">
                <p class="little-font">
                    Colis en attente de dédouanement<br>
                    (<span id="enCoursClearanceLabel">-</span>)<br>
                    <span class="figure" id="enCoursClearanceCount">-</span>
                </p>
            </div>
        </div>
    </div>
</div>
