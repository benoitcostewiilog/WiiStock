<input type="hidden" class="page-title" value="Dashboard | DEMANDES EN COURS"/>

{% if pendingDeliveries and pendingDeliveries is not empty %}
    <div class="row m-4">
        <div class="dashboard-box-container w-100">
            <div class="dashboard-box pending-requests fourth-row-height w-100 p-3" style="background-color: #f5f6fb">
                <strong class="title m-3">Demandes de livraisons en cours</strong>
                <div class="row">
                    {% for delivery in pendingDeliveries %}
                        <div class="col-12 col-lg-4 col-xl-3">
                            {% include 'accueil/request-card.html.twig' with delivery %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% if pendingCollects and pendingCollects is not empty %}
    <div class="row m-4">
        <div class="dashboard-box-container w-100">
            <div class="dashboard-box pending-requests fourth-row-height w-100 p-3" style="background-color: #f5f6fb">
                <strong class="title m-3">Demandes de collecte en cours</strong>
                <div class="row">
                    {% for collects in pendingCollects %}
                        <div class="col-12 col-lg-4 col-xl-3">
                            {% include 'accueil/request-card.html.twig' with collects %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% if pendingHandlings and pendingHandlings is not empty %}
    <div class="row m-4">
        <div class="dashboard-box-container w-100">
            <div class="dashboard-box pending-requests fourth-row-height w-100 p-3" style="background-color: #f5f6fb">
                <strong class="title m-3" title="Demande de service">{{ 'services.Demande de service'|trans }} en cours</strong>
                <div class="row">
                    {% for handling in pendingHandlings %}
                        <div class="col-12 col-lg-4 col-xl-3">
                            {% include 'accueil/request-card.html.twig' with handling %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
