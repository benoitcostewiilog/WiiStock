<div id="dashboard-arrival" class="dashboard-box col-6">
    <h2>Arrivage (UM)</h2>
    <div class="dashboard-box-content" id="dashboard-arrival">
        <div class="chart"></div>
        <div class="spinner-container">
            <div class="spinner-border"></div>
        </div>
        <div class="range-buttons">
            <div class="btn btn-primary" onclick="drawAnnotations('dashboard-arrival', false, false)"><</div>
            <span class="firstDay" data-day="{{ firstDayOfWeek }}">{{ firstDayOfWeek }} - </span>
            <span class="lastDay" data-day="{{ lastDayOfWeek }}">{{ lastDayOfWeek }}</span>
            <div class="btn btn-primary" onclick="drawAnnotations('dashboard-arrival', true, false)">></div>
        </div>
    </div>
</div>

<div class="dashboard-box col-5 offset-1">
    <h2>Réceptions (nombre d'associations)</h2>
    <div id="dashboard-assoc" class="dashboard-box-content">
        <div class="chart"></div>
        <div class="spinner-container">
            <div class="spinner-border"></div>
        </div>
        <div class="range-buttons">
            <div class="btn btn-primary" onclick="drawAnnotations('dashboard-assoc', false, false)"><</div>
            <span class="firstDay" data-day="{{ firstDayOfWeek }}">{{ firstDayOfWeek }} - </span>
            <span class="lastDay" data-day="{{ lastDayOfWeek }}">{{ lastDayOfWeek }}</span>
            <div class="btn btn-primary" onclick="drawAnnotations('dashboard-assoc', true, false)">></div>
        </div>
    </div>
</div>

<div class="dashboard-box retard col-6">
    <h2>Colis en retard</h2>
    <div class="dashboard-box-content">
        <table class="table table-striped table-bordered retards-table w-100"></table>
    </div>
</div>

{% if hasRight(constant('App\\Entity\\Menu::ACCUEIL'), constant('App\\Entity\\Action::DISPLAY_INDIC_INV_MONETAIRE')) %}
    <div class="col-5 offset-1 dashboard-box">
        <h2>Fiabilité monétaire</h2>
        <div class="row dashboard-box-content">
            <div class="col-6">
                <span class="badge badge-secondary font-size-100">{{ nbrFiabiliteMonetaire|round }}€</span>
                <span>totale</span><br>
            </div>
            <div class="col-6">
                <span class="badge badge-secondary font-size-100">{{ nbrFiabiliteMonetaireOfThisMonth|round }}€</span>
                <span>mois courant</span><br>
            </div>
            <div class="col-12">
                <div class="curve_chart_line" id="curve_chart"></div>
            </div>
        </div>

    </div>
{% endif %}
