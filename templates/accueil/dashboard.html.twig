<div id="dashboard-arrival" class="dashboard-box col-6">
    <h2 class="bold">Arrivage (UM)</h2>
    <div class="chart"></div>
    <div class="spinner-border"></div>
    <div class="range-buttons">
        <div class="arrow-chart" onclick="drawChart('dashboard-arrival', false, false)">
            <i class="fas fa-chevron-left"></i>
        </div>
        <span class="firstDay" data-day="{{ firstDayOfWeek }}">{{ firstDayOfWeek }} - </span>
        <span class="lastDay" data-day="{{ lastDayOfWeek }}">{{ lastDayOfWeek }}</span>
        <div class="arrow-chart" onclick="drawChart('dashboard-arrival', true, false)">
            <i class="fas fa-chevron-right"></i>
        </div>
    </div>
</div>

<div id="dashboard-assoc" class="dashboard-box col-5 offset-1">
    <h2 class="bold">Réceptions (nombre d'associations)</h2>
    <div class="chart"></div>
    <div class="spinner-border"></div>
    <div class="range-buttons">
        <div class="arrow-chart" onclick="drawChart('dashboard-assoc', false, false)">
            <i class="fas fa-chevron-left"></i>
        </div>
        <span class="firstDay" data-day="{{ firstDayOfWeek }}">{{ firstDayOfWeek }} - </span>
        <span class="lastDay" data-day="{{ lastDayOfWeek }}">{{ lastDayOfWeek }}</span>
        <div class="arrow-chart" onclick="drawChart('dashboard-assoc', true, false)">
            <i class="fas fa-chevron-right"></i>
        </div>
    </div>
</div>

<div class="dashboard-box col-6">
    <h2 class="bold">Colis en retard</h2>
    <table class="table table-striped table-bordered retards-table w-100"></table>
</div>

{% if hasRight(constant('App\\Entity\\Menu::INDICS_ACCUEIL'), constant('App\\Entity\\Action::MONETAIRE')) %}
    <div id="dashboard-monetary" class="col-5 offset-1 dashboard-box">
        <h2 class="bold">Fiabilité monétaire</h2>
        <div class="curve_chart_line " id="curve_chart"></div>
        <div class="spinner-border"></div>
    </div>
{% endif %}