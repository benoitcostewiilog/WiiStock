<a data-toggle="collapse" href="#paramDemandeLivraison" role="button" aria-expanded="false"
   aria-controls="paramDemandeLivraison" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">Configuration demande de livraison
        <i class="fas fa-arrow-alt-circle-down ml-2"></i></h1>
</a>

<div class="collapse col-12" id="paramDemandeLivraison">
    <div class="row">
        <div class="col-12">
            {% set checked = (parametrageG == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-demande-livraison"
                       onchange="updateToggledParam($(this), '{{ path('active_desactive_create_demande_livraison') }}')">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Créer une demande de livraison après
                réception</label>
        </div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-12">
            {% set checked = (parametrageGPrepa == 1) ? 'checked' : '' %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-prepa"
                       onchange="updateToggledParam($(this), '{{ path('active_desactive_create_prepa') }}')">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-prepa">Créer une préparation après demande de livraison</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group col-4">
            <div class="w-100">
                <label for="livraisonLocation" class="d-block">Emplacement de livraison par défaut</label>
                <select class="form-control ajax-autocomplete-location d-block" id="livraisonLocation">
                </select>
            </div>
            <input hidden id="livraisonLocationValue" data-id="{{ livraisonLocation ? livraisonLocation.id }}" data-text="{{ livraisonLocation ? livraisonLocation.text }}">
        </div>
    </div>
</div>