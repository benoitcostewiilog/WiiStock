<a data-toggle="collapse" href="#paramArrivage" role="button" aria-expanded="false"
   aria-controls="paramArrivage" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">
        Paramétrage arrivage
        <i class="fas fa-arrow-alt-circle-down ml-2"></i>
    </h1>
</a>
<div class="collapse col-12" id="paramArrivage">
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (redirect ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-redirect-arrival"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::REDIRECT_AFTER_NEW_ARRIVAL') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-redirect-arrival">Redirection vers l'arrivage créé</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (autoPrint ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-print"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::AUTO_PRINT_COLIS') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-print">Impression cochée par défaut</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (sendMail ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-mail-after-arrivage"
                       data-param="{{ constant('App\\Entity\\ParametrageGlobal::SEND_MAIL_AFTER_NEW_ARRIVAL') }}"
                       onchange="updateToggledParam($(this))">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-mail-after-arrivage">Envoyer un mail après nouvel arrivage</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group w-450px col-4">
            <label for="arrivageStatus" class="d-block">Statut arrivage par défaut</label>
            <select class="form-control d-block" id="arrivageStatus" onchange="editStatusArrivage($(this))">
                <option></option>
                {% for status in listStatusArrivage %}
                    {% set selected = (status.id == defaultStatusArrivageId) ? 'selected' %}
                    <option value="{{ status.id }}" {{ selected }}>{{ status.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group col-4">
            <label for="locationWaitingDock" class="d-block">Emplacement de destination des arrivages</label>
            <select class="form-control ajax-autocomplete-location d-block data w-100"
                    id="locationArrivageDest">
            </select>
            <input hidden
                   id="locationArrivageDestValue"
                   data-id="{{ location ? location.id }}"
                   data-text="{{ location ? location.text }}"/>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group col-4">
            <label for="businessUnit" class="d-block">Business Unit</label>
            <select class="form-control data select2-free w-100"
                    multiple="multiple" name="businessUnit">
                {% for businessUnit in businessUnits %}
                    <option value="{{ businessUnit }}" selected>{{ businessUnit }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
