<a data-toggle="collapse" href="#paramArrivage" role="button" aria-expanded="false"
   aria-controls="paramArrivage" class="col-12 mb-4">
    <h1 class="btn btn-primary m-0 w-100 border-radius-light">
        Paramétrage arrivage
        <i class="fas fa-arrow-alt-circle-down ml-2"></i>
    </h1>
</a>
<div class="collapse col-12" id="paramArrivage">
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (redirect ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-demande-livraison"
                       onchange="updateToggledParam($(this), '{{ path('active_desactive_redirection') }}')">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Redirection vers l'arrivage créé</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (autoPrint ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-demande-livraison"
                       onchange="updateToggledParam($(this), '{{ path('active_desactive_auto_print') }}')">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Impression cochée par défaut</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            {% set checked = (sendMail ? 'checked' : '') %}
            <label class="switch">
                <input type="checkbox" class="checkbox col-3" {{ checked }} name="param-create-demande-livraison"
                       onchange="updateToggledParam($(this), '{{ path('active_desactive_send_mail') }}')">
                <span class="slider round"></span>
            </label>
            <label class="pl-1" for="param-create-demande-livraison">Envoyer un mail après nouvel arrivage</label>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group w-450px col-4">
            <label for="receptionStatusLitige" class="d-block">Statut litige par défaut</label>
            <select class="form-control d-block" id="receptionStatusLitige" onchange="editStatusLitigeArrivage($(this))">
                <option></option>
                {% for status in listStatusLitige %}
                    {% set selected = (status.id == defaultStatusLitigeId) ? 'selected' %}
                    <option value="{{ status.id }}" {{ selected }}>{{ status.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group col-4">
            <label for="locationWaitingDock" class="d-block">Emplacement de destination des arrivages</label>
            <select class="form-control ajax-autocomplete-location d-block data w-100"
                    id="locationArrivageDest">
            </select>
            <input hidden
                   id="locationArrivageDestValue"
                   data-id="{{ location ? location.id : null }}"
                   data-text="{{ location ? location.label : null }}"/>
        </div>
    </div>
</div>
