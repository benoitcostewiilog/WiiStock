<div class="d-flex">
    {% if modifiable %}
        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
            <div data-toggle='modal' data-target='#modalEditLigneArticle'>
                <div class="btn btn-col-action" data-id='{{ligneId}}'
                     onclick="editRow($(this), Routing.generate('reception_article_edit_api', true), $('#modalEditLigneArticle'), $('#submitEditLigneArticle'), true, '.editor-container-article')">
                    <i class='fas fa-pencil-alt'></i>
                </div>
            </div>
        {% endif %}
        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
            <div>
                <div class="btn btn-col-action"
                     onclick="deleteRow($(this), $('#modalDeleteLigneArticle'), $('#submitDeleteLigneArticle'))"
                     data-id='{{ligneId}}' data-target='#modalDeleteLigneArticle' data-toggle='modal'>
                    <i class='fas fa-trash'></i>
                </div>
            </div>
        {% endif %}
    {% endif %}

    <div>
        <div class="btn btn-col-action" data-id='{{ligneId}}'  onclick='printSingleBarcode($(this))'>
            <i class="fas fa-{{type}}"></i>
        </div>
    </div>
</div>