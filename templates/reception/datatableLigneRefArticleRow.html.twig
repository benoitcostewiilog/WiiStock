<div class="row">
    {% if modifiable %}
    {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    <div data-toggle='modal' data-target='#modalEditLigneArticle' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{ligneId}}'
            onclick="editRow($(this), Routing.generate('reception_article_edit_api', true), $('#modalEditLigneArticle'), $('#submitEditLigneArticle'), true, '.editor-container-article')">
            <i class='fas fa-pencil-alt'></i>
        </button>
    </div>
    {% endif %}
    {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    <div class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="deleteRow($(this), $('#modalDeleteLigneArticle'), $('#submitDeleteLigneArticle'))"
        data-id='{{ligneId}}' data-target='#modalDeleteLigneArticle' data-toggle='modal'>
            <i class='fas fa-trash'></i>
        </button>
    </div>
    {% endif %}
    {% endif %}

    <div class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{ligneId}}'  onclick='printSingleBarcode($(this))'>
            <i class="fas fa-{{type}}"></i>
        </button>
    </div>
</div>