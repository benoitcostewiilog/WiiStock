{% extends 'layout.html.twig' %}

{% block title %}Ordres {{ 'réception.de réception'|trans }}{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersReception.html.twig' with {
        page: 'PAGE_RECEPTION',
        tableSelector: '#tableReception_id'
    } %}
{% endblock %}

{% block page_content %}
    <div class="col-12">
        <h1>Ordres {{ 'réception.de réception'|trans }}</h1>
    </div>

    <div class='col-12'>
        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
            <a href="" data-toggle="modal" data-target="#modalNewReception" class="btn btn-primary"
               onclick="clearModal('#modalNewReception'); initNewReceptionEditor('#modalNewReception')">
                <span class="fa fa-plus mr-2"></span>{{ 'réception.nouvelle réception'|trans|capitalize }}
            </a>
        {% endif %}
        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::EXPORT')) %}
            <div class="btn btn-primary" onclick="generateCSV('get_receptions_for_csv', '{{ 'réception.réceptions'|trans }}')">
                <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
            </div>
        {% endif %}
    </div>

    <div class="d-none justify-content-center" id="spinnerReception">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="col-12 mt-5">
        <table id="tableReception_id" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include "reception/modalNewReception.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src="{{ asset('js/reception.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
