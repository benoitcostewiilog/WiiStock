<div class="row">
    <div class="form-group col-12  w-100 mb-3">
        <label for="reference">
            {% if isCurrentClient (constant('App\\Service\\SpecificService::CLIENT_CEA_LETI')) %}
                Référence CEA*
            {% else %}
                Référence*
            {% endif %}
        </label>
        <select class="ajax-autocomplete-edit data form-control needed" id="reference"
            name="referenceArticle">
            <option value="{{ligneArticle.referenceArticle.id}}">{{ligneArticle.referenceArticle.reference}}</option>
        </select>
    </div>
    <div class="form-group col-6">
        <label for="libelle">Numéro de commande d'achat</label>
        <input class="form-control data" type="text" name="commande" id="commande" value="{{ligneArticle.commande}}">
    </div>
    <div class="form-group col-6">
        <label for="">Quantité à recevoir*</label>
        <input id="stock" type="number" class="form-control data needed" value="{{ligneArticle.quantiteAR}}" name="quantiteAR" min="0">
    </div>
    <div class="form-group col-6">
        <label for="">Quantité reçue*</label>
        {% set disabled = canUpdateQuantity ? '' : 'disabled' %}
        <input {{ disabled }} type="number" class="form-control data needed" name="quantite" value="{{ligneArticle.quantite}}" id="quantite" min=0>
    </div>
    <div class="form-group col-6">
        <label>Anomalie</label>
        <label class="switch">
            <input class="checkbox" type="checkbox" name="anomalie" {{ ligneArticle.anomalie == 'true' ? 'checked': ''}}>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="form-group col-12">
        <label>Commentaire</label>
        <input id='commentaire' class="form-control data" name="commentaire" type="hidden">
        <div class="editor-container-article">{{ligneArticle.commentaire | raw}}</div>
    </div>
</div>
