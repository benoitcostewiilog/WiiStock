<form method="post" action="{{ path('reception_delete', {'id': reception.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la réception ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reception.id) }}">
    <button class="btn btn-danger btn float-right">Supprimer</button>
</form>
