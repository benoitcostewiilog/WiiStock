{% extends "layout.html.twig" %}
{% block title %}Ajout d'article{% endblock %}
{% block page_content %}


<div class="row">
    <div class="col">
        <h1>Réception</h1>
    </div>
    <div class="col text-right">
        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::DELETE')) %}
            <a href="" data-id='{{ id }}' data-target='#modalDeleteReception' data-toggle='modal'
                class="btn btn-danger btn-action ml-auto">
                Supprimer</a>
        {% endif %}

        {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE')) %}
            <a href="" data-id='{{ id }}' data-target='#modalEditReception' data-toggle='modal'
                class="btn btn-primary btn-action ml-auto" onclick='initEditReceptionEditor("#modalEditReception")'>
                Modifier</a>
            <a href="{{path('reception_finish', {'id': id})}}" class="btn btn-primary btn-action ml-auto">
                Fin réception</a>
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="zone-entete col-6 row">
        {% include "reception/enteteReception.html.twig" %}
    </div>
</div>

<div class="col text-right">
    <a href="{{ path('reference_article_index') }}" data-toggle="modal" class="btn btn-primary btn-action ml-auto">
        Chercher une référence</a>
    {% if hasRight(constant('App\\Entity\\Menu::RECEPTION'), constant('App\\Entity\\Action::CREATE')) %}
        <a href="" data-toggle="modal" data-target="#modalAddArticle" class="btn btn-primary btn-action ml-auto"
            onclick="initNewArticleEditor('#modalAddArticle'),  ajaxAutoFournisseurInit($('.ajax-autocomplete-fournisseur'))">
            <span class="fa fa-plus mr-2"></span>Ajouter article
        </a>
    {% endif %}
</div>

<table id="tableArticle_id" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Référence CEA</th>
            <th>Libellé</th>
            <th>Fournisseur</th>
            <th>A recevoir</th>
            <th>Reçu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<a href="{{ path('reception_index') }}" class='btn btn-action'>Retour à la liste</a>

<div class="d-none">
    <img id="barcode" />
</div>


{% include "reception/modalDeleteReception.html.twig" %}
{% include "reception/modalEditReception.html.twig" %}
{% include "reception/modalModifyArticle.html.twig" %}
{% include "reception/modalDeleteArticle.html.twig" %}
{% include "reception/modalAddArticle.html.twig" %}

{% endblock %}
{% block javascript %}
<script>
    let id = {{ reception.id }}
</script>
<script src="{{asset('js/reception.js')}}"></script>
{% endblock javascript %}