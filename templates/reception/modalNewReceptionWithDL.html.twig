<form method="" class="modal fade" id="modalReceptionWithDL" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvelle r√©ception <span id="reference-list"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--
                BLOCK DL
                -->
                <div class="demande-livraison">
                    <h5 class="modal-title">Demande de livraison<span id="reference-list"></span></h5>
                    <div class="row mt-3">
                        <div class="col-3 form-group">
                            <label for="demandeur">Demandeur*</label>
                            <select type="text" class="select2-user data w-100 needed" name="demandeur">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-3 form-group">
                            <label for="type">Type*</label>
                            <select type="text" class="select2-type data w-100 needed" name="type">
                                <option></option>
                                {% for type in typeChampsLibres %}
                                    <option value="{{type.typeId}}">{{type.typeLabel}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-3 form-group">
                            <label for="destination">Destination*</label>
                            <select name="destination" class="data ajax-autocompleteEmplacement w-100 needed">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <label for="commentaire-dl" class="m-3">Commentaire</label>
                    <input id='commentaire' class="commentaire data" name="commentaire"
                           type="hidden">
                    <div class="editor-container" id="editor-container-new-demande">
                    </div>
                    <input class="data" name="reception" type="hidden" value="{{ reception.id }}">
                </div>
                <!--
                BLOCK CONDITIONNEMENT
                -->

            </div>
            <div class="p-4 error-msg"></div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Fermer</div>
                <button id="submitNewReceptionButton" type="button" class="btn btn-success"
                        onclick="setCommentaire('#editor-container-new-demande'), validateNewRecep()">Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
