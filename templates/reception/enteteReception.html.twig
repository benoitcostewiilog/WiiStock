<div class='col-6'>
    <p><strong>Statut :</strong> {{ reception.statut ? reception.statut.nom : "" }}</p>
    <p><strong>Numéro de référence :</strong> {{ reception.numeroReception }}</p>
    <p><strong>Fournisseur :</strong> {{ reception.fournisseur ? reception.fournisseur.nom : ''}}</p>
    <p><strong>Commentaire :</strong> {{ reception.commentaire|raw}}</p>
</div>
<div class="col-6">
    <p><strong>Date commande :</strong> {{ reception.dateCommande ? reception.dateCommande| date('d/m/Y') : ' ' }}</p>
    <p><strong>Numéro de commande :</strong> {{ reception.reference ? reception.reference : ' ' }}</p>
    <p><strong>Date attendue :</strong> {{ reception.dateAttendue ? reception.dateAttendue | date('d/m/Y') : ' ' }}</p>
    <p><strong>Date de création :</strong>
        {{ reception.date ? reception.date| date('d/m/Y') : ' ' }}</p>
    <p><strong>Date de fin de réception :</strong> {{ reception.dateFinReception ? reception.dateFinReception | date('d/m/Y H:i') : ' ' }}</p>
</div>
<div class="col-12">
{% for valeurChampLibreT in valeurChampLibreTab %}
    <p><strong>{{valeurChampLibreT.label}}</strong> :
        {% if valeurChampLibreT.typage != 'booleen' %}
            {{valeurChampLibreT.valeur}}
        {% elseif valeurChampLibreT.valeur == 1 %}
            oui
        {% else %}
            non
        {% endif %}
{% endfor %}</p>
</div>
