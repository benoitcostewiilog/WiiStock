<div class='col-6'>
    <p><strong>Statut :</strong> {{ reception.statut ? reception.statut.nom : "" }}</p>
    <p><strong>Numéro de référence :</strong> {{ reception.numeroReception }}</p>
    <p><strong>Fournisseur :</strong> {{ reception.fournisseur.nom }}</p>
    <p><strong>Commentaire :</strong> {{ reception.commentaire|raw}}</p>
</div>
<div class="col-6">
    <p><strong>Date commande :</strong> {{ reception.date ? reception.date| date('d/m/Y') : ' ' }}</p>
    <p><strong>Date attendue :</strong> {{ reception.dateAttendu ? reception.dateAttendu | date('d/m/Y') : ' ' }}</p>
    <p><strong>Date réception :</strong>
        {{ reception.dateReception ? reception.dateReception | date('d/m/Y') : ' ' }}</p>
</div>

{% for champLibre in typeChampsLibres.champsLibres %}
<div class="col-6">
    <strong><label for="input">{{ champLibre.label | capitalize}}</label></strong>

    {% if champLibre.typage == 'booleen' %}
    {% set checked = ((champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : 0) == 1) ? 'checked' : '' %}
    <label class="switch">
        <div type="checkbox" class="data checkbox" {{ checked }} name="{{ champLibre.id}}">
            <span class="slider round"></span>
        </div>
    </label>

    {% elseif  champLibre.typage == 'number' %}
    <div type="number" id="{{ champLibre.id ~ 'edit'}}" class="" name="{{ champLibre.id}}" id="input">
        {{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}
    </div>

    {% elseif  champLibre.typage == 'list' %}
    <select class="form-control data" id="{{ champLibre.id ~ 'edit'}}" name="{{ champLibre.id}}" id="input">
        <option value="">aucune selection...</option>
        {% for elem in  champLibre.elements %}
        {% set selected = elem ==( champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' )? 'selected' : '' %}
        <option value="{{elem}}" {{ selected }}>{{elem}}</option>
        {% endfor %}
    </select>

    {% elseif champLibre.typage == 'text' %}
    <div type="text" id="{{ champLibre.id ~ 'edit'}}" class="" name="{{  champLibre.id }}" id="input">
        {{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}
    </div>

    {% elseif champLibre.typage == 'date' %}
    <div type="date" name="{{ champLibre.id }}" id="{{champLibre.id ~ 'edit'}}" class="">
        {{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}
    </div>
    {% else %}
    <input disabled>
    {% endif %}
</div>
{% endfor %}