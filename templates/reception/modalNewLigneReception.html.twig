<form method="" class="modal fade" id="modalNewLigneReception" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" title="nouvelle réception">{{ 'réception.nouvelle réception'|trans|capitalize }} <span id="reference-list"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input class="data" name="reception" type="hidden" value="{{ reception.id }}"/>
                <!--
                BLOCK DL
                -->
                {% if createDL %}
                    <div class="demande-livraison">
                        <h5 class="bold mb-3">Demande de livraison<span id="reference-list"></span></h5>
                        <div class="row">
                            <div class="col-4 form-group">
                                <label for="demandeur">Demandeur*</label>
                                <select type="text" class="select2-user data w-100 needed" name="demandeur">
                                    <option></option>
                                </select>
                            </div>
                            <div class="col-4 form-group">
                                <label for="type">Type*</label>
                                <select type="text" class="select2-type data w-100 needed" name="type"
                                        onchange="typeChoice($(this), '-new', $('#typeContentNew')), toggleRequiredChampsLibres($(this),'create')">
                                    <option></option>
                                    {% for type in typeChampsLibresDL %}
                                        <option value="{{type.typeId}}">{{type.typeLabel}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-4 form-group">
                                <label for="destination">Destination*</label>
                                <select name="destination" class="data ajax-autocompleteEmplacement w-100 needed">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <!-- CHAMPS LIBRES -->
                        <div class="form-group col-12 blocVisible d-block" id='typeContentNew'>
                            {% for type in typeChampsLibresDL %}
                                <div class="d-none" id="{{type.typeId}}-new">
                                    <div class="row mt-2">
                                        {% if type.champsLibres|length > 0 %}
                                            <p class="col-12 pl-0">Champs Libres :</p>
                                        {% endif %}
                                        {% for champ in type.champsLibres %}
                                            <div class="form-group col-6 pl-0">
                                                <label>
                                                    {{champ.label|capitalize}}
                                                </label>

                                                {% if champ.typage == constant('App\\Entity\\ChampLibre::TYPE_BOOL') %}
                                                    {% set checked = (champ.defaultValue == 1) ? 'checked' : '' %}
                                                    <label class="switch">
                                                        <input type="checkbox" class="data checkbox" {{ checked }} name="{{champ.id}}">
                                                        <span class="slider round"></span>
                                                    </label>

                                                {% elseif champ.typage == 'number' %}
                                                    <input type="number" id="{{champ.id ~ 'create'}}" class="form-control data"
                                                           value="{{champ.defaultValue}}" name="{{champ.id}}">

                                                {% elseif champ.typage == 'list' %}
                                                    <select id="{{champ.id ~ 'create'}}" class="form-control data" name="{{champ.id}}"
                                                            id="input">
                                                        <option value="{{champ.defaultValue}}">{{champ.defaultValue}}
                                                        </option>
                                                        {% for elem in champ.elements %}
                                                            {% if champ.defaultValue != elem %}
                                                                <option value="{{elem}}">{{elem}}</option>
                                                            {% endif %}
                                                        {% endfor %}
                                                        {% if champ.defaultValue != "" %}
                                                            <option value=""></option>
                                                        {% endif %}
                                                    </select>
                                                {% elseif champ.typage == 'list multiple' %}
                                                    <select id="{{ champ.id ~ 'create' }}" class="form-control data list-multiple"
                                                            name="{{ champ.id }}" multiple="multiple">
                                                        {% for elem in champ.elements %}
                                                            <option value="{{ elem }}">{{ elem }}</option>
                                                        {% endfor %}
                                                    </select>
                                                {% elseif champ.typage == 'text'  %}
                                                    <input id="{{champ.id ~ 'create'}}" class="form-control data" type="text"
                                                           value="{{champ.defaultValue}}" name='{{ champ.id }}'>

                                                {% elseif champ.typage == 'date' %}
                                                    <input type="date" name="{{ champ.id }}" id="{{champ.id ~ 'create'}}"
                                                           class="form-control data" value="{{champ.defaultValue}}">

                                                {% elseif champ.typage == 'datetime' %}
                                                    <input type="datetime-local" name="{{ champ.id }}" id="{{champ.id ~ 'create'}}"
                                                           class="form-control data" value="{{champ.defaultValue}}">

                                                {% else %}
                                                    <input disabled>

                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>

                                </div>
                            {% endfor %}
                        </div>
                        <label for="commentaire-dl" class="mt-3">Commentaire</label>
                    <input id='commentaire-dl'
                           class="commentaire data"
                           name="commentaire"
                           type="hidden">
                        <div class="editor-container" id="editor-container-new-demande">
                        </div>
                    </div>
                {% endif %}

                <!--
                BLOCK CONDITIONNEMENT
                -->
                <div class="bloc-packing mt-5">
                    <h5 class="bold mb-3">
                        <span title="réception">{{ 'réception.réception'|trans|capitalize }}</span> <span title="d'articles">{{ "réception.d'articles"|trans }}</span>
                    </h5>
                    <div class="row align-items-center">
                        <div class="form-group col-4">
                            <label>Référence</label>
                            <select class="form-control select2-autocomplete-ref-articles w-100" name="refArticleCommande"></select>
                        </div>
                        <div class="col">
                            <div class="row justify-content-start align-items-center">
                                <div class="col-2">
                                    <label for="packing-package-number" class="sr-only">Nombre de colis</label>
                                    <input id="packing-package-number"
                                           type="number"
                                           min="0"
                                           class="form-control"
                                           name="packageNumber"/>
                                </div>
                                <div class="col-auto">conditionnement de quantité</div>
                                <div class="col-2">
                                    <label for="packing-number-in-package" class="sr-only">Nombre d'article dans le colis</label>
                                    <input id="packing-number-in-package"
                                           type="number"
                                           min="0"
                                           class="form-control"
                                           name="numberInPackage"/>
                                </div>
                                <div class="col-2 text-center">
                                    <button class="btn btn-success"
                                            type="button"
                                            onclick="validatePacking($(this))">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5 class="bold mt-3 mb-3 d-none packing-title">Conditionnements</h5>
                    <div class="articles-conditionnement-container">

                    </div>
                </div>

            </div>
            <div class="p-4 error-msg"></div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Fermer</div>
                <button id="submitNewReceptionButton" type="button" class="btn btn-success"
                        onclick="setCommentaire('#editor-container-new-demande')">Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
