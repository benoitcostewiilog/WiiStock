<div class="d-flex">
    <div class="dropdown {{ not hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::DELETE')) ? 'd-none' }}">
        {{ include('datatable/dotsRow.html.twig') }}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="action-on-click" data-toggle='modal' data-target='#modalEditLitige'
                         onclick="editRowLitigeReception($(this), openTableHisto, {{ receptionId }}, {{ litigeId }})">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
            {% endif %}
            {% if hasRight(constant('App\\Entity\\Menu::QUALI'), constant('App\\Entity\\Action::DELETE')) %}
                <div onclick="deleteRow($(this), $('#modalDeleteLitige'), $('#submitDeleteLitige'))"
                     data-id='{{ litigeId }}' data-target='#modalDeleteLitige' data-toggle='modal' class="dropdown-item">
                    <i class='fas fa-trash mr-2'></i>Supprimer
                </div>
            {% endif %}
        </div>
    </div>
</div>
