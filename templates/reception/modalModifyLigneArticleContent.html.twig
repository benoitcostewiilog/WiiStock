<div class="row">
    <div class="form-group col-12  w-100 mb-3">
        <label for="reference">Référence CEA</label>
        <select class="ajax-autocomplete-edit data form-control needed" onchange="getArticleFournisseur()" id="referenceCEA"
            name="referenceArticle">
            <option value="{{ligneArticle.referenceArticle.id}}">{{ligneArticle.referenceArticle.reference}}</option>
        </select>
    </div>
    <div class="form-group w-100 col-6">
        <label for="fournisseur">Fournisseur</label>
        <select class="form-control data ajax-autocomplete-fournisseur-edit needed" onchange="getArticleFournisseur()"
            name="fournisseur" id="fournisseurAddArticle">
            <option value="{{ligneArticle.fournisseur.id}}">{{ligneArticle.fournisseur.nom}}</option>
        </select>
    </div>
    <div class="form-group {{ligneArticle.articleFournisseur != "" ? "d-block" :"d-none"}} w-100 col-6">
        <label for="fournisseur">Référence fournisseur</label>
        <select class="form-control data" name="articleFournisseur" id="articleFournisseur">
            {% if ligneArticle.articleFournisseur != "" %}
            <option value="{{ligneArticle.articleFournisseur.id}}">{{ligneArticle.articleFournisseur.label}}</option>
            {% endif %}
        </select>
    </div>
    <div class="form-group col-6">
        <label for="libelle">Libellé</label>
        <input class="form-control data" type="text" name="libelle" id="libelle" value="{{ligneArticle.label}}">
    </div>
    <div class="form-group col-6">
        <label for="">Quantité à recevoir</label>
        <input id="stock" type="text" class="form-control data" value="{{ligneArticle.quantiteAR}}" name="quantiteAR">
    </div>
    <div class="form-group col-6">
        <label for="">Quantité reçue</label>
        <input type="number" class="form-control data" name="quantite" value="{{ligneArticle.quantite}}" id="quantite" min=0>
    </div>
    <div class="form-group col-6">
        <label>Anomalie</label>
        <label class="switch">
            <input class="checkbox" type="checkbox" name="anomalie" {{ ligneArticle.anomalie == 'true' ? 'checked': ''}}>
            <span class="slider round"></span>
        </label>
    </div>

</div>
<div class="form-group col-12">
    <label>Commentaire</label>
    <input id='commentaireID' class="form-control data" name="commentaire" type="hidden">
    <div class="editor-container">{{ligneArticle.commentaire | raw}}</div>
</div>