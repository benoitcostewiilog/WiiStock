<form method="" class="modal fade" id="addArticleModal" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter une ligne</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col-6">
                        <div class="input-group">
                           <label class="input-group-text data" for="refArticle">Référence CEA</label>
                            <select id="refArticle" onchange="updateStock($(this));" class='form-control select1 data'
                                name='refArticle' type="text">
                                <option disabled selected> </option>
                                {% for article in refArticle %}
                                <option value="{{ article.id }}">
                                    {{ article.libelle }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="libelle">Libellé</label>
                            </div>
                            <input class="form-control data" type="text" name="libelle" id="libelle">
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label for="" class="input-group-text">Quantité en stock</label>
                            </div>
                            <input id="stock" type="text" class="form-control data" name="stock" >
                        </div>
                    </div>                   
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label for="" class="input-group-text">Quantité reçue</label>
                            </div>
                            <input type="number" class="form-control data" name="quantite" id="quantite" min=0>
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="defaultCheck1">conform</label>
                            </div>
                            <select class='data form-control' name="etat" id="">
                                <option value="on">oui</option>
                                <option value="off">non</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="input-group col-12 my-2 mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Commentaire</label>
                        </div>
                        <textarea class="form-control data" name="commentaire" id='commentaire'></textarea>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="addArticleSubmit" type="button" data-dismiss="modal"
                    class="btn btn-primary btn-success data" name="reception"
                    value="{{reception.id}}">Enregistrer</button>
            </div>
        </div>
    </div>
</form>