
<div class="reference-article">
    {{ reception.reference }} – {{ reception.commande }}
</div>
<input class="data" type="hidden" name="refArticle" value="{{ reception.reference }}"/>
<input class="data" type="hidden" name="noCommande" value="{{ reception.commande }}"/>
<div class="reference-article">
    <div class="form-group">
        <label>Libellé</label>
        <input class="form-control"
               disabled
               type="text"
               value="{{ reception.referenceLabel }}" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <input class="form-control"
               disabled
               type="text"
               value="{{ typeArticle }}" />
    </div>
    <div class="form-group">
        <label>Quantité*</label>
        <input class="form-control data needed"
               type="number"
               name="quantity"
               value="{{ reception.quantity }}" />
    </div>
</div>
