{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block classbody %}
style='background-image: url({{asset('img/GTXBackAccueil2red.png')}})'
class='accueil-back'
{% endblock  %}

{% block body %}
<div class="login-wrapper mt-3">
    <div class="row">
        <div class="box-login login-form box-shadow">
            <div class="login-header">
                Mot de passe oublié
            </div>
            <div class="form-signin">
                <div class="form-group">
                    <label for="inputEmail" class="form-control-label">Adresse email</label>
                    <input type="text" id="inputEmail" name="_username" class="form-control" required="required"
                        autofocus="autofocus">
                </div>
                <div class="form-group float-right">
                    <span class="btn" onclick="checkIfUserExists()">Valider</span>
                </div>
            </div>
        </div>
    </div>
</div>
<button class="btn" id="noUserActiv" data-target='#modalNotActiv' data-toggle='modal' hidden></button>
<button class="btn" id="noUser" data-target='#modalNoUser' data-toggle='modal' hidden></button>
<button class="btn" id="isUser" data-target='#passChanged' data-toggle='modal' hidden></button>
{% include "securite/modalNoUser.html.twig" %}
{% include "securite/modalPassChanged.html.twig" %}
{% include "securite/modalNotActiv.html.twig" %}
{% endblock %}

{% block javascript %}

<script src="{{ asset('js/securite.js') }}"></script>

{% endblock %}