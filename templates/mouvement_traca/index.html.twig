{% extends 'layout.html.twig' %}

{% block title %}Mouvements{% endblock %}

{% block page_filter %}
    {{ parent() }}
    {% include 'filters/filtersMouvementTraca.html.twig' with {
        'btnName' : 'submitSearchMvt',
        'statut' : 'Type'
    } %}
{% endblock %}

{% block page_content %}
    <h1>Mouvements</h1>

    <div class ="row">
        {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
            <a href="" data-toggle="modal" data-target="#modalNewMvtTraca" class="btn btn-primary"
               data-backdrop="static" data-keyboard="false"
               onclick="initNewMvtTracaEditor('#modalNewMvtTraca'), clearModal('#modalNewMvtTraca'), fillDateInNewModal()">
                <span class="fa fa-plus mr-2"></span>Nouveau mouvement
            </a>
        {% endif %}
        {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::EXPORT')) %}
        <div class="btn btn-primary" onclick='generateCSVMouvement()'>
            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
        </div>
        {% endif %}
    </div>
        <div class="d-none justify-content-center" id="spinnerMouvementTraca">
            <div class="spinner-border sizeLoader" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    <div class="row">
        <div class="error-msg p-4"></div>
    </div>

    <div>
        <table id="tableMvts" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include "mouvement_traca/modalNewMvtTraca.html.twig" %}
    {% include "mouvement_traca/modalShowMvtTraca.html.twig" %}
    {% include "mouvement_traca/modalEditMvtTraca.html.twig" %}
    {% include "mouvement_traca/modalDeleteMvtTraca.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/attachments.js') }}?{{ date().timestamp }}"></script>
    <script src="{{ asset('js/mouvement_traca.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
