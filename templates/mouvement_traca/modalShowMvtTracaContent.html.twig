<div class="row">
    <div class="form-group col-6">
        <label for="colis">Colis</label>
        <input disabled type="text" class="form-control data needed" id="colis" name="colis" value="{{ mvt.colis }}">
    </div>

    <div class="form-group col-6">
        <label for="type">Action</label>
        <input disabled type="text" class="form-control data needed" id="colis" name="colis" value="{{ mvt.type.nom }}">
    </div>

    <div class="form-group col-12 w-100">
        <label class="mtb-auto mr-2">Emplacement</label>
        <input disabled type="text" class="form-control data needed" id="colis" name="colis" value="{{ mvt.emplacement.label }}">
    </div>
</div>

<div class="row">
    <div class="form-group col-12 fit-content">
        <label>Commentaire</label>
        <div class="input disabled comment"> {{mvt.commentaire|raw}}
        </div>
    </div>
    <div class="form-group col-12">
        {% for pj in attachments %}
            {% set pjName = pj.fileName %}
            {% set originalName = pj.originalName %}
            {% include 'arrivage/attachementLine.html.twig' with { 'canRemove': false } %}
        {% endfor %}
    </div>
</div>