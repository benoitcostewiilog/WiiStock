<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
        <div>
            <div class="btn btn-col-action" data-id='{{ mvt.id }}' data-target='#modalEditMvtTraca' data-toggle='modal'
                 onclick="editRow($(this), Routing.generate('mvt_traca_api_edit', true), $('#modalEditMvtTraca'), $('#submitEditMvtTraca'), true)">
                <i class='fas fa-pencil-alt'></i>
            </div>
        </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::ARRIVAGE'), constant('App\\Entity\\Action::DELETE')) %}
        <div>
            <div data-id='{{ mvt.id }}' data-target='#modalDeleteMvtTraca' data-toggle='modal'
                 class='btn btn-col-action'
                 onclick="deleteRow($(this), $('#modalDeleteMvtTraca'), $('#submitDeleteMvtTraca'))">
                <i class='fas fa-trash'></i>
            </div>
        </div>
    {% endif %}

</div>


