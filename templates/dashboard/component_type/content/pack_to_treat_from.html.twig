{% extends 'dashboard/component_type/content/base_form.html.twig' %}

{% block content %}
    <div class="row">
        <div class="form-group col-6">
            <label>Emplacement(s) origine 1</label>
            <select class="ajax-autocomplete-location data form-control w-100 needed"
                    name="origin-location-1"
                    multiple
                    title="Emplacement(s) origine 1">
                {% if locations is defined and locations is not empty %}
                    {% for location in locations %}
                        <option value="{{ location.id }}" selected>{{ location.label }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <div class="form-group col-6">
            <label>Légende origine*</label>
            <input class="data form-control w-100 needed"
                   name="origin-caption"
                   type="text"
                   title="Légende origine"
                   value=""/>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label>Emplacement(s) origine 2</label>
            <select class="ajax-autocomplete-location data form-control w-100 needed"
                    name="origin-location-2"
                    multiple
                    title="Emplacement(s) origine 2">
                {% if locations is defined and locations is not empty %}
                    {% for location in locations %}
                        <option value="{{ location.id }}" selected>{{ location.label }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <div class="form-group col-6">
            <label>Légende destination*</label>
            <input class="data form-control w-100 needed"
                   name="destination-caption"
                   type="text"
                   title="Légende destination"
                   value=""/>
        </div>
    </div>

<div class="row">
    <div class="form-group col-6">
        <label>Emplacement(s) destination 1</label>
        <select class="ajax-autocomplete-location data form-control w-100 needed"
                name="destination-location-1"
                multiple
                title="Emplacement(s) destination 1">
            {% if fromlocations is defined and fromlocations is not empty %}
                {% for location in fromlocations %}
                    <option value="{{ location.id }}" selected>{{ location.label }}</option>
                {% endfor %}
            {% endif %}
        </select>
    </div>
</div>

<div class="row">
    <div class="form-group col-6">
        <label>Emplacement(s) destination 2</label>
        <select class="ajax-autocomplete-location data form-control w-100 needed"
                name="destination-location-2"
                multiple
                title="Emplacement(s) destination 2">
            {% if fromlocations is defined and fromlocations is not empty %}
                {% for location in fromlocations %}
                    <option value="{{ location.id }}" selected>{{ location.label }}</option>
                {% endfor %}
            {% endif %}
        </select>
    </div>
</div>
{% endblock %}
