{% extends 'dashboard/component_type/content/base_form.html.twig' %}

{% block content %}
    <div class="row form-group">
        <div class="col-12">
            <label>Type(s) d'arrivage*</label>
        </div>
        <div class="col-12">
            <select class="data form-control w-100 needed select2"
                    name="types"
                    multiple
                    title="Type(s) d'arrivage">
                {% for arrivalType in arrivalTypes %}
                    <option value="{{ arrivalType.id }}" {{ arrivalType in values.types ? 'selected' }}>{{ arrivalType.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            <label>Statut(s)*</label>
        </div>
        <div class="col-12">
            <select class="data form-control w-100 needed select2"
                    name="status"
                    multiple
                    title="Statut(s)">
                {% for arrivalStatus in arrivalStatuses %}
                    <option value="{{ arrivalStatus.id }}" {{ arrivalStatus in values.statuses ? 'selected' }}>{{ arrivalStatus.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="switch">
            <input class="checkbox data needs-default"
                   type="checkbox"
                   name="displayPackNatures"
                {{ values.displayPackNatures ?? false ? 'checked' }}>
            <span class="slider round"></span>
        </label>
        <label>Montrer les natures de colis</label>
    </div>
{% endblock %}
