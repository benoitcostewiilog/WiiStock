{% extends 'dashboard/component_type/content/base_form.html.twig' %}
{% block content %}
    <div class="row">
        <div class="form-group col-6">
            <label>Type(s) d'arrivage*</label>
            <select class="data form-control w-100 needed select2"
                    name="arrivalTypes"
                    multiple
                    title="Type(s) d'arrivage">
                {% for type in arrivalTypes %}
                    <option value="{{ type.id }}" {{ type in values.arrivalTypes ? 'selected' }}>{{ type.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label>Statut(s)*</label>
            <select class="data form-control w-100 needed select2"
                    name="arrivalStatuses"
                    multiple
                    title="Statut(s)">
                {% for status in arrivalStatuses %}
                    <option value="{{ status.id }}" {{ status in values.arrivalStatuses ? 'selected' }}>{{ status.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="switch">
            <input class="checkbox data needs-default"
                   type="checkbox"
                   name="displayPackNatures"
                {{ values.displayPackNatures ?? false ? 'checked' }}>
            <span class="slider round"></span>
        </label>
        <label>Montrer les natures de colis</label>
    </div>
{% endblock %}
