{% extends 'dashboard/component_type/content/base_form.html.twig' %}

{% block content %}
    <div class="row form-group">
        <div class="col-12">
            <label>Titre*</label>
        </div>
        <div class="col-12">
            <input class="data form-control  w-100 needed"
                   name="title"
                   type="text"
                   value="{{ title }}"
                   title="Titre"/>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            <label>Infobulle*</label>
        </div>
        <div class="col-12">
            <input class="data form-control w-100 needed"
                   name="tooltip"
                   type="text"
                   value="{{ tooltip }}"
                   title="Infobulle"/>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            <label>Type(s) d'arrivage*</label>
        </div>
        <div class="col-12">
            <select class="data form-control w-100 needed select2"
                    name="arrivalsTypes"
                    multiple
                    title="Type(s) d'arrivage">
                {% for arrivalType in arrivalTypes %}
                    <option value="{{ arrivalType.id }}" {{ arrivalType in values.arrivalTypes ? 'selected' }}>{{ arrivalType.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-12">
            <label>Statut(s)*</label>
        </div>
        <div class="col-12">
            <select class="data form-control w-100 needed select2"
                    name="status"
                    multiple
                    title="Statut(s)">
                {% for arrivalStatus in arrivalStatuses %}
                    <option value="{{ arrivalStatus.id }}" {{ arrivalStatus in values.arrivalStatuses ? 'selected' }}>{{ arrivalStatus.nom }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="switch">
            <input class="checkbox data needs-default"
                   type="checkbox"
                   name="displayPackNatures"
                {{ values.displayPackNatures ?? false ? 'checked' }}>
            <span class="slider round"></span>
        </label>
        <label>Montrer les natures de colis</label>
    </div>

    <div class="form-group d-flex">
        <label class="mt-2">Voir sur les</label>
        <input class="form-control data ml-3"
               name="days-number"
               type="number"
               min=1
               max=7
               style="width: 70px">
        <select class="data form-control w-25 ml-3" name="daysSetting">
            <option value="derniers jours">derniers jours</option>
            <option value="prochains jours">prochains jours</option>
        </select>
    </div>
{% endblock %}
