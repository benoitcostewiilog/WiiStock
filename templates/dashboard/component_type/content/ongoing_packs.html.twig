{% extends 'dashboard/component_type/content/base_form.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-6 form-group">
            <div class="col-12">
                <label>Choix des emplacements*</label>
            </div>
            <div class="col-12">
                <select class="ajax-autocomplete-location data form-control w-100 needed"
                        name="locations"
                        multiple
                        title="Emplacements">
                    {% for location in values.locations %}
                        <option value="{{ location.id }}" selected>{{ location.label }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="withTreatmentDelay"
                    {{ values.withTreatmentDelay ?? false ? 'checked' }}>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            Afficher le delai de traitement (Les emplacements choisis doivent avoir un délai de paramétré)
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="withLocationLabels"
                    {{ values.withLocationLabels ?? false ? 'checked' }}/>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            Afficher le nom des emplacements paramétrés sous le titre
        </div>
    </div>

    <div class="row form-group align-items-center">
        <div class="col-auto">
            <label class="switch">
                <input class="checkbox"
                       type="checkbox"
                       name="redirect"
                    {{ values.withTreatmentDelay ?? false ? 'checked' }}/>
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col">
            Rediriger au clic vers la page Encours
        </div>
    </div>
{% endblock %}
