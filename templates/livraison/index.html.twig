{% extends 'layout.html.twig' %}

{% block title %}Ordres de livraison{% endblock %}

{% block page_content %}
    <h1>Ordres de livraison</h1>
    <table id="table_id" class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Statut</th>
                <th>Date</th>
                <th>Opérateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
       
        </tbody>
    </table>
  

   {% include "livraison/modalLivraison.html.twig" %}
{% endblock %}
{% block javascript %}
    
<script>
    var path = Routing.generate('livraison_api');
    var table = $('#table_id').DataTable({
        "language": {
            "url": "/js/i18n/dataTableLanguage.json"
        },
        ajax: {
            'url': path,
            "type": "POST"
        },
        columns: [
        { "data": 'Numéro' },
        { "data": 'Statut' },
        { "data": 'Date' },
        { "data": 'Opérateur' },
        { "data": 'Actions' },
        ],
    });
    
</script>
{% endblock %}
