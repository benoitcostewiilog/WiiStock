{% extends 'layout.html.twig' %}

{% block title %}Livraison{% endblock %}

{% block page_content %}
<h1>Livraison n°{{ livraison.numero }}</h1>


<div class="row">
    <div class="col-4">
        <p>Statut : {{ livraison.statut ? livraison.statut.nom : '' }}</p>
        <p>Numéro : {{livraison.numero}}</p>
        <p>Opérateur : </p>
        {# TODO mettre le nom de l'utilisateur lié à la préparation liée à la livraison #}
    </div>
    <div class="col-4">

        <p>Date de livraison : {{ livraison.dateFin ? livraison.dateFin|date('d/m/Y') : '' }}
        </p>
    </div>
    {% if livraison.statut.nom == 'à traiter' %}
        
    <div class="col-2 offset-2">
        {% if not finished %}
            <p><a class="btn btn-primary btn-action" href={{path('livraison_fin', {'id': livraison.id})}}>Finir la livraison</a></p>
        {% endif %}
    </div>
    {% endif %}
</div>

<table id="tableArticle_id" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Référence CEA</th>
            <th>Libellé</th>
            <th>Quantité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<a href="{{ path('livraison_index') }}" class='btn'>Retour à la liste</a>

{% endblock %}
{% block javascript %}
<script>
    let id = {{livraison.id}};
</script>

<script src="{{asset('js/livraison.js')}}"></script>

{% endblock %}