{% extends 'layout.html.twig' %}

{% block title %}Livraison{% endblock %}

{% block page_content %}
<h1>Livraison n°{{ livraison.numero }}</h1>


<div class="row">
    <div class="col-4">
        <p>Statut : {{ livraison.statut ? livraison.statut.nom : '' }}</p>
        <p>Numéro : {{livraison.numero}}</p>
        <p>Opérateur : </p>
        {# TODO mettre le nom de l'utilisateur lié à la préparation liée à la livraison #}
    </div>
    <div class="col-4">

        <p>Date de commande : {#{ livraison.demande ? livraison.demande.0.date|date('d-m-Y ') : '' }#}
        </p>
    </div>
    <div class="col-2 offset-2">
        <p><a class="btn btn-success" href={{path('livraison_fin', {'id': livraison.id})}}>Finir la livraison</a></p>
    </div>
</div>

<table id="table_id" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Référence CEA</th>
            <th>Libellé</th>
            <th>Quantité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<a href="{{ path('livraison_index') }}" class='btn'>Retour</a>

{% endblock %}
{% block javascript %}
<script>
    $(document).ready(function () {
        $('#table_id').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
            },
        });
    })
</script>

{% endblock %}