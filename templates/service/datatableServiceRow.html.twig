<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::MANUT'), constant('App\\Entity\\Action::EDIT_DELETE'))%}
    <div data-id='{{ service.id }}' data-target='#modalEditService' data-toggle='modal'
        class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="editRow($(this), Routing.generate('service_edit_api', true), $('#modalEditService'), $('#submitEditService'), true)">
            <i class='fas fa-pencil-alt'></i>
        </button>
    </div>
    {% if service.statut.nom != constant('App\\Entity\\Service::STATUT_TRAITE') %}
    <div data-id='{{ service.id }}' data-target='#modalDeleteService' data-toggle='modal' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="deleteRow($(this), $('#modalDeleteService'), $('#submitDeleteService'))">
            <i class='fas fa-trash'></i>
        </button>
    </div>
    {% endif %}
    {% else %}
    <div data-id='{{ service.id }}' data-target='#modalShowService' data-toggle='modal' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="showRow($(this), Routing.generate('service_show', true), $('#modalShowService'))">
            <i class='fas fa-eye'></i>
        </button>
    </div>

    {% endif %}
   
</div>