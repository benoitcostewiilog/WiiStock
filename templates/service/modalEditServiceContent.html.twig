<div class="form-group">
    <label for="Objet">Objet</label>
    <input type="text" id="libelle" class="form-control data" name="Libelle" value="{{service.libelle}}"
        placeholder="Objet">
</div>

<div class="form-group">
    <label for="demandeur">Demandeur</label>
    <select type="text" class="demandeur form-control data" name="demandeur" disabled>
        <option value="{{app.user.id}}">{{ app.user.username }}</option>
    </select>
</div>

<div class="form-group">
    <label for="Localité">Localité</label>
    <select class="Localité form-control data ajax-autocompleteEmplacement-edit" name="Localité">
        <option value="{{service.emplacement.id}}">{{service.emplacement.label}}</option>

    </select>
</div>

<div class="form-group col-6">
    <div class="input-group radio-btn">
        <label for="statut" class="mtb-auto mr-2">Statut</label>
        <div>
            {% if statut == 1 %}
            <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active"
                onclick="changeStatus(this)">A Traiter</span><span
                class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive"
                onclick="changeStatus(this)">Traité</span>
            {% else %}
            <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active"
                style="pointer-events:none;">A Traiter</span><span
                class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive"
                style="pointer-events:none;">Traité</span>
            {% endif %}
            <input id="s" type="hidden" value="{{statut}}" name="statut" class="data">
        </div>
    </div>
</div>

<div class="form-group">
    <label for="commentaire">Commentaire</label>
    <input id="commentaire" class="form-control data" name="commentaire" type="hidden" value="{{service.commentaire}}">
    <div class="editor-container" value="{{service.commentaire}}"> {{service.commentaire|raw}}
    </div>

</div>