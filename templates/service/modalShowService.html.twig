<form method="" class="modal fade" id="modalShowService" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Détail d'une demande de manutention</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">

                <div class="form-group disabled">
                    <label for="Objet">Objet</label>
                    <input type="text" id="libelle" class="form-control data" name="Libelle" value="{{service.libelle}}">
                </div>

                <div class="form-group disabled">
                    <label for="demandeur">Demandeur</label>
                    <select type="text" class="demandeur form-control data needed" name="demandeur" disabled>
                        <option value="{{service.demandeur.id}}">{{service.demandeur }}</option>
                    </select>
                </div>
                <div class="form-group disabled">
                        <label for="Localité">Chargement</label>
                        <input class="form-control" value="{{service.source}}" name="source">
                    </div>
                
                
                <div class="form-group disabled">
                    <label for="Localité">Déchargement</label>
                    <input class="form-control data" name="destination">
                </div>

                <div class="form-group">
                    <label for="commentaire">Commentaire</label>
                    <input id="commentaire" class="commentaire form-control data" name="commentaire" type="hidden">
                    <div class="editor-container">
                    </div>
                </div>
                

            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Fermer</button>
               
            </div>
        </div>
    </div>
</form>