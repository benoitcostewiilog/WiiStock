<div class="d-flex">
    <div class="dropdown dropright {{ not hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EDIT')) ? 'd-none'}}">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer ">
            {% if hasRight(constant('App\\Entity\\Menu::DEM'), constant('App\\Entity\\Action::EDIT')) %}
                <div class="d-none">
                    <div class="btn btn-col-action action-on-click" data-id='{{ handling.id }}' data-target='#modalEditHandling' data-toggle='modal'
                         onclick="editRow($(this), Routing.generate('handling_edit_api', true), $('#modalEditHandling'), $('#submitEditHandling'), true, '.editor-container-edit', false, toggleHandlingQuill)">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
                {% if handling.statut.nom != constant('App\\Entity\\Manutention::STATUT_TRAITE') %}
                    <div class="dropdown-item" data-id='{{ handling.id }}' data-target='#modalDeleteHandling' data-toggle='modal'
                         onclick="deleteRow($(this), $('#modalDeleteHandling'), $('#submitDeleteHandling'))">
                        <i class='fas fa-trash mr-2'></i>Supprimer
                    </div>
                {% endif %}
            {% else %}
                <div class="dropdown-item d-none action-on-click" data-id='{{ handling.id }}' data-target='#modalShowHandling' data-toggle='modal'
                     onclick="showRow($(this), Routing.generate('handling_show', true), $('#modalShowHandling'))">
                    <i class='fas fa-eye mr-2'></i>Voir
                </div>
            {% endif %}
        </div>
    </div>
</div>
