<!-- Modale Modification de quantité à collecter d'un article -->
<div method="" class="modal fade" id="modalModify" role="dialog" aria-labelledby="modalModifyArticleTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier l'alerte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="nom">Nom de l'alerte</label>
                    <input type="text" class="form-control data" name="nom" placeholder="Nom alerte">
                </div>
        
                <div class="form-group">
                    <label for="seuil">Seuil de l'alerte</label>
                    <input type="number" class="form-control data" name="seuil" required="true">
                </div>

                <div class="form-group">
                    <label for="reference">Réference article</label>
                    <select class="form-control select2 data" name="reference">
                        <option></option>
                        {% for reference in references %}
                            <option value="{{ reference.id }}">{{ reference.libelle }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn btn-secondary" data-dismiss="modal">Annuler</div>
                <div id="modifySubmit" class="save btn btn-success" data-dismiss="modal">Valider</div>
            </div>
        </div>
    </div>
</div>