<form method="" class="modal fade" id="modalNewAlerteStock" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvelle alerte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group col-12 w-100">
                    <label for="reference">Référence</label>
                    <select name="reference" class="form-control ajax-autocomplete data needed" id="reference" onchange="clearErrorMsg($(this))">
                    </select>
                </div>
                <div class="form-group col-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="limitAlert">Seuil d'alerte</label>
                        </div>
                        <input class="form-control data" type="number" min="0" name="limitAlert" id="limitAlert" onchange="updateLimitsMinMax($(this))">
                    </div>
                </div>
                <div class="form-group col-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="limitSecurity">Seuil de sécurité</label>
                        </div>
                        <input class="form-control data" type="number" min="0" name="limitSecurity" id="limitSecurity" onchange="updateLimitsMinMax($(this))">
                    </div>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Annuler</div>
                <div id="submitNewAlerteStock" class="btn btn-success">Enregistrer</div>
            </div>
        </div>
    </div>
</form>