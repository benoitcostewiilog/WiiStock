<div class="container-fluid">
<h1>Liste des alertes de stock</h1>

<div class='row'>
    <div class="col-4">
    {% if hasRight(constant('App\\Entity\\Menu::PARAM')) %}
        <a href="" data-toggle="modal" data-target="#modalNewAlerteStock"
            onclick="ajaxAutoRefArticleInit($('.ajax-autocomplete')),  ajaxAutoUserInit($('.ajax-autocomplete-user'))"
            class="btn btn-primary">
            <span class="fa fa-plus mr-2"></span>Nouvelle alerte
        </a>
    {% endif %}
    </div>
    <div class="offset-4 col-4 text-right">
        {% if nbAlerts > 0 %}
            <div class="radio-btn">
            <span id="filter-active" class="btn btn-danger {{ filter ? 'active' : 'not-active' }}" onclick="toggleActiveButton($(this), tableAlerteStock)">
                {% set s = nbAlerts > 1 ? 's' : '' %}
                <div>
                    <span class="fa fa-exclamation-triangle mr-2"></span>
                    {{ nbAlerts }} référence{{ s }} en alerte
                </div>
            </span>
            </div>
        {% endif %}
    </div>
</div>

<table id="tableAlerteStock_id" class="table table-striped table-bordered w-100">
</table>

