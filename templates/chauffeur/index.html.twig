{% extends 'layout.html.twig' %}

{% block title %}Referentiel | Chauffeurs{% endblock %}

{% block page_content %}
    <div class="m-4 datatable-container">
        <div class="row">
            <h1 class="col align-self-start ml-2"></h1>
            <div class="col-auto mb-3">
                {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::CREATE')) %}
                    <a href=""
                       data-toggle="modal"
                       data-target="#modalNewChauffeur"
                       class="btn btn-primary btn-ripple" onclick="clearModal('#modalNewChauffeur')">
                        <span class="fa fa-plus mr-2"></span>Nouveau chauffeur
                    </a>
                {% endif %}
            </div>
            <div class="col-12">
                <table id="tableChauffeur_id" class="table w-100">
                </table>
            </div>
        </div>
    </div>
    {% include "chauffeur/modalDeleteChauffeur.html.twig" %}
    {% include "chauffeur/modalEditChauffeur.html.twig" %}

    {% include "chauffeur/modalNewChauffeur.html.twig" %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/chauffeur.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
