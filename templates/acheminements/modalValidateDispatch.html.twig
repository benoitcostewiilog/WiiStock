<form method="" class="modal fade" id="modalValidateDispatch" role="dialog" aria-labelledby="dataModalCenterTitle"
      aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'acheminement.Traiter un acheminement'|trans }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                {% if treatedStatus is not empty %}
                    <div class="form-group">
                        <label>Statut*</label>
                        <select class="form-control data needed needs-default"
                                name="status"
                                title="Statut"
                                data-init="0">
                            {% for status in treatedStatus %}
                                <option value="{{ status.id }}">{{ status.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% else %}
                    <div class="text-danger p-4">
                        <i class="fas fa-exclamation-triangle"></i>
                        Vous n'avez pas configuré de statut traité pour ce {{ 'acheminement.type d\'acheminement'|trans }}. Vous devez en définir un.
                    </div>
                {% endif %}
            </div>

            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success submit-treated-dispatch">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
