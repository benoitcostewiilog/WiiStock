{% extends 'utils/show-header.html.twig' %}

{% block showTitle ('acheminement.acheminement'|trans ~' nÂ°'~ acheminement.numeroAcheminement) %}

{% block showActions %}
    <div class="btn-group">
        {% if modifiable %}
            {% set hasRightEdit = hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::EDIT')) %}
            {% set hasRightDelete = hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::DELETE')) %}
            {% if hasRightEdit %}
                <button type="button"
                        class="btn btn-primary btn-ripple split-button">
                    <i class="fa fa-check mr-2 button-icon"></i>
                    Valider la demande
                </button>
            {% endif %}
            <button type="button"
                    class="btn btn-primary btn-ripple dropdown-toggle dropdown-toggle-split"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false">
                <span class="fa fa-angle-down"></span>
            </button>
            <div class="dropdown-menu dropdown-follow-gt dropdown-menu-right pointer">
                {% if hasRightEdit %}
                    <a data-id='{{ acheminement.id }}'
                       data-target='#modalEditAcheminement'
                       data-toggle='modal'
                       onclick="editRow($(this), Routing.generate('collecte_api_edit', true), $('#modalEditAcheminement'), $('#submitEditAcheminement'), true, '#modalEditAcheminement .editor-container-edit')"
                       class="dropdown-item">
                        <i class="fa fa-pen mr-2"></i>Modifier
                    </a>
                {% endif %}
                {% if hasRightDelete %}
                    <a href="" onclick="deleteRow($(this), $('#modalDeleteAcheminement'), $('#submitDeleteAcheminement'))"
                       data-id='{{ acheminement.id }}' data-target='#modalDeleleAcheminement' data-toggle='modal'
                       class="dropdown-item">
                        <i class="fa fa-trash mr-2"></i>Supprimer</a>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}
