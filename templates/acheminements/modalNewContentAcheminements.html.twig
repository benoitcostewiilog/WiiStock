<div class="row">
    <div class="form-group col-10 inputColisClone clear-clone">
        <label for="colis">Colis*</label>
        <input type="text" id="colis" class="form-control data-array needed" name="colis" maxlength="24">
    </div>
    <div class="form-group col-2">
        <span class="btn btn-primary" id="btn-add-colis-acheminement" onclick="addInputColisClone($(this))"><i class="fa fa-plus"></i></span>
    </div>
</div>
<div class="form-group">
    <label for="demandeur">Demandeur*</label>
