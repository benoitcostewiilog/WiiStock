<form method="" class="modal fade" id="modalValidatePack" role="dialog" aria-labelledby="dataModalCenterTitle"
      aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'acheminement.Traiter un colis'|trans }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="type">{{ 'mouvement de traçabilité.Colis'|trans }}</label>
                    <input type="text"
                           disabled
                           class="form-control"
                           name="pack"
                           title="{{ 'mouvement de traçabilité.Colis'|trans }}"/>
                </div>
                <div class="form-group">
                    <label>Statut*</label>
                    <select class="form-control data needed needs-default"
                            name="treated"
                            title="Statut"
                            data-init="0">
                        <option selected value="0">Non traité</option>
                        <option value="1">Traité</option>
                    </select>
                </div>
            </div>

            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success submit-button">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
