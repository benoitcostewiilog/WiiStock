<div class="row">
    <div class="form-group col-10 clear-clone">
        <label for="colis">Colis*</label>
    {% for pack in acheminement.packs %}
        <input type="text" id="colis" class="form-control data-array inputColisClone needed" name="colis" maxlength="64" value="{{ pack }}">
    {% endfor %}
    </div>
    <div class="form-group col-2">
        <span class="btn btn-primary" onclick="addInputColisClone($(this))"><i class="fa fa-plus"></i></span>
    </div>
</div>
<div class="form-group">
    <label for="demandeur">Demandeur*</label>
    <select type="text" class="demandeur form-control data needed" name="demandeur">
        <option value="{{ acheminement.requester.id }}" selected>{{ acheminement.requester.username }}</option>
        {% for utilisateur in utilisateurs %}
            <option value="{{ utilisateur.id }}">{{ utilisateur.username }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label for="destinataire">Destinataire*</label>
    <select type="text" class="destinataire form-control data needed" name="destinataire">
        <option value="{{ acheminement.receiver.id }}" selected>{{ acheminement.receiver.username }}</option>
        {% for utilisateur in utilisateurs %}
            <option value="{{ utilisateur.id }}">{{ utilisateur.username }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label>Echéance</label>
    <div class="input-group w-100">
        <div class="input-group-prepend">
            <span class="input-group-text w-50px">Du</span>
        </div>
        <input type="date"
               class="form-control data"
               name="startDate"
               value="{{ acheminement.startDate ? acheminement.startDate|date('Y-m-d') }}"
               title="Date d'échéance min"
               placeholder="jj/mm/aaaa"/>
        <div class="input-group-prepend">
            <span class="input-group-text w-50px">Au</span>
        </div>
        <input type="date"
               class="form-control data"
               name="endDate"
               value="{{ acheminement.endDate ? acheminement.endDate|date('Y-m-d') }}"
               title="Date d'échéance max"
               placeholder="jj/mm/aaaa"/>
    </div>
</div>
<div class="form-group">
    <label>Urgence</label>
    <div class="w-100">
        <label class="switch mt-2">
            <input class="checkbox"
                   name="urgent"
                   {{ acheminement.urgent ? 'checked' }}
                   type="checkbox"/>
            <span class="slider round"></span>
        </label>
    </div>
</div>
