<div class="form-group col-12 w-100">
    <div class="input-group radio-btn">
        <label for="statut" class="my-auto mr-2">Statut*</label>
        <div>
                <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active"
                      onclick="changeStatus(this)" data-value="1">A Traiter</span><span
                    class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive"
                    onclick="changeStatus(this)" data-value="0">Traité</span>
        </div>
        <input id="s" type="hidden" value="{{statut}}" name="statut" class="data">
    </div>
</div>
