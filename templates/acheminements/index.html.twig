{% extends 'layout.html.twig' %}

{% block title %}Acheminements{% endblock %}
{% block classbody %}
    class='new-body'
{% endblock %}
{% block page_filter %}
    {% include 'filters/filtersAcheminements.html.twig' with {
        'page': 'PAGE_ACHEMINEMENTS',
        'tableSelector': '#tableAcheminement'
    } %}
{% endblock %}
{% block page_content %}

    <div class="m-4 datatable-container shadow-lg">
        <div class="row">
            <h1 class="col align-self-start ml-2">Acheminements</h1>
            <div class="col-auto">
                {% if hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::CREATE')) %}
                    <button type="button" data-toggle="modal" data-target="#modalNewAcheminements" class="btn btn-primary btn-ripple"
                       onclick="newModal(Routing.generate('acheminements_new_api', true), $('#modalNewAcheminements'))">
                        <span class="fa fa-plus mr-2"></span>Nouvel acheminement
                    </button>
                {% endif %}
            </div>
        </div>

        <div class="col-12">
            <table id="tableAcheminement" class="table w-100">
            </table>
        </div>
    </div>
    <div hidden id="barcodes"></div>
    <div id="barcode"></div>
    {% include "acheminements/modalNewAcheminements.html.twig" %}
    {% include "acheminements/modalEditAcheminements.html.twig" %}
    {% include "acheminements/modalDeleteAcheminements.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/acheminements.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
