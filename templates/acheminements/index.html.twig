{% extends 'layout.html.twig' %}

{% block title %}Traçabilité | Acheminements{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersAcheminements.html.twig' with {
        'page': 'PAGE_ACHEMINEMENTS',
        'tableSelector': '#tableAcheminement'
    } %}
{% endblock %}

{% block page_content %}
    <div class="m-4 datatable-container">
        <div class="row datatable-header">
            <div class="col-auto ml-auto">
                <div class="btn-group">
                    {% if hasRight(constant('App\\Entity\\Menu::TRACA'), constant('App\\Entity\\Action::CREATE')) %}
                        <button type="button"
                                data-toggle="modal"
                                data-target="#modalNewAcheminements"
                                class="btn btn-primary btn-ripple"
                                onclick="newModal(Routing.generate('acheminements_new_api', true), $('#modalNewAcheminements'))">
                            <span class="fa fa-plus mr-2"></span>Nouvel acheminement
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="tableAcheminement" class="table w-100"></table>
            </div>
        </div>
    </div>

    {% include "acheminements/modalNewAcheminements.html.twig" %}
    {% include "acheminements/modalEditAcheminements.html.twig" %}
    {% include "acheminements/modalDeleteAcheminements.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/acheminements.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
