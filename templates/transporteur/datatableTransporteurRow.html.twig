<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::REFERENCE'), constant('App\\Entity\\Action::CREATE_EDIT'))%}
        <div data-id='{{ transporteur.id }}' data-target='#modalEditTransporteur' data-toggle='modal'
             class='btn btn-col-action'
             onclick="editRow($(this), Routing.generate('transporteur_edit_api', true), $('#modalEditTransporteur'), $('#submitEditTransporteur'))">
            <i class='fas fa-pencil-alt'></i>
        </div>
    {% endif %}
    {% if hasRight(constant('App\\Entity\\Menu::REFERENCE'), constant('App\\Entity\\Action::DELETE'))%}
        <div data-id='{{ transporteur.id }}' data-target='#modalDeleteTransporteur' data-toggle='modal'
             onclick="deleteRow($(this), $('#modalDeleteTransporteur'), $('#submitDeleteTransporteur'))"
             class='btn btn-col-action'>
            <i class='fas fa-trash'></i>
        </div>
    {% endif %}
</div>