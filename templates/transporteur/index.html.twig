    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Code</th>
                <th>NombreChauffeurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transporteur in transporteurs %}
            <tr>
                <td>{{ transporteur.id }}</td>
                <td>{{ transporteur.label }}</td>
                <td>{{ transporteur.code }}</td>
                <td>{{ transporteur.nombreChauffeurs }}</td>
