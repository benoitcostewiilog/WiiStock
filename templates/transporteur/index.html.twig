{% extends 'layout.html.twig' %}

{% block title %}Transporteurs{% endblock %}

{% block page_content %}
    <h1>Transporteurs</h1>

    <div class="row">
        {% if hasRight(constant('App\\Entity\\Menu::REFERENTIEL'), constant('App\\Entity\\Action::CREATE')) %}
            <a href="" data-toggle="modal" data-target="#modalNewTransporteur" class="btn btn-primary" >
                <span class="fa fa-plus mr-2"></span>Nouveau transporteur
            </a>
        {% endif %}
    </div>
    <div>
        <table id="tableTransporteur_id" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include "transporteur/modalDeleteTransporteur.html.twig" %}
