<div class="modal fade" id="modalNewLocationGroup" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouveau groupe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label>Nom du groupe*</label>
                    <input type="text" class="form-control data needed" name="name"/>
                </div>

                <div class="form-group">
                    <label>Description*</label>
                    <textarea type="text" class="form-control data needed" name="description">
                    </textarea>
                </div>

                <div class="form-group">
                    <label>Emplacements*</label>
                    <select name="locations" class="form-control data needed w-100" data-s2="location" multiple>
                    </select>
                </div>
            </div>
            <div class="error-msg"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <div id="submitNewLocationGroup" class="btn btn-primary">Enregistrer</div>
            </div>
        </div>
    </div>
</div>
