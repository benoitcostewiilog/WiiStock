{% extends 'mails/template.html.twig' %}

{% block content %}

{% set s = litiges|length > 1 ? 's' : '' %}
{% set nt = litiges|length > 1 ? 'nt' : '' %}
<h3 class="margin-bottom:30px;">{{ litiges|length }}</span> litige{{ s }} vous concerne{{ nt }} :</h3>

<table class="table">
    <thead>
        <tr>
            <th class="th">Type de litige</th>
            <th class="th">NÂ° commande / BL</th>
            <th class="th">Colis</th>
        </tr>
    </thead>
    <tbody>
        {% for litige in litiges %}
            <tr>
                <td class="td" rowspan="{{ litige.colis|length }}">{{ litige.type.label }}</td>

                {% set firstColis = litige.colis|first %}
                <td class="td">{{ firstColis.arrivage.numeroBL }}</td>
                <td class="td">{{ firstColis.code }}</td>
            </tr>
            {% for colis in litige.colis %}
                {% if not loop.first %}
                    <tr>
                        <td class="td">{{ colis.arrivage.numeroBL }}</td>
                        <td class="td">{{ colis.code }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </tbody>
</table>

<br>
<br>
{% endblock %}
