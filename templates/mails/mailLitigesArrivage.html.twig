{% extends 'mails/mjml/template.html.twig' %}

{% block content %}

    {% set s = litiges|length > 1 ? 's' : '' %}
    {% set nt = litiges|length > 1 ? 'nt' : '' %}
    <h3 class="margin-bottom:30px;">{{ litiges|length }}</span> litige{{ s }} vous concerne{{ nt }} :</h3>

    <table class="table" style="border: 1px solid black;border-collapse: collapse;">
        <thead>
        <tr>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">Type de litige</th>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">Statut de litige</th>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">NÂ° commande / BL</th>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">Colis</th>
        </tr>
        </thead>
        <tbody>
        {% for litige in litiges %}
            <tr>
                <td class="td" rowspan="{{ litige.colis|length }}"
                    style="border: 1px solid black; padding: 6px; text-align: center;">{{ litige.type.label }}</td>
                <td class="td" rowspan="{{ litige.colis|length }}"
                    style="border: 1px solid black; padding: 6px; text-align: center;">{{ litige.status.nom }}</td>

                {% set firstColis = litige.colis|first %}
                <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">
                    {% for numeroBL in firstColis.arrivage.numeroCommandeList %}
                        {{ numeroBL }}
                        {% if loop.last %}<br/>{% endif %}
                    {% endfor %}
                </td>
                <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ firstColis.code }}</td>
            </tr>
            {% for colis in litige.colis %}
                {% if not loop.first %}
                    <tr>
                        <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">
                            {% for numeroBL in colis.arrivage.numeroCommandeList %}
                                {{ numeroBL }}
                                {% if loop.last %}<br/>{% endif %}
                            {% endfor %}
                        </td>
                        <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ colis.code }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>

    <br>
    <br>
{% endblock %}
