{% extends 'mails/template.html.twig' %}

{% block content %}
    <table class="table"
           style="border: 1px solid black;border-collapse: collapse;">
        <thead>
        <tr>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Numéro de demande
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Date demande
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Date de validation
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Libellé
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Type
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Statut
            </th>
            <th class="th"
                style="border: 1px solid black; padding: 10px; text-align: center; font-weight: bold;">
                Commentaire
            </th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.number }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.creationDate|date('d/m/Y H:i:s') }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.creationDate is not null ? dispatch.validationDate|date('d/m/Y H:i:s') }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.requester }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.type.label }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.statut.nom }}
            </td>
            <td class="td"
                style="border: 1px solid black; padding: 10px; text-align: center;">
                {{ dispatch.commentaire|raw }}
            </td>
        </tbody>
    </table>
    <br>
    <br>

{% endblock %}
