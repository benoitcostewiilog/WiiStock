{% extends 'mails/template.html.twig' %}

{% block content %}

{% set s = litiges|length > 1 ? 's' : '' %}
{% set nt = litiges|length > 1 ? 'nt' : '' %}
<h3 class="margin-bottom:30px;">{{ litiges|length }}</span> litige{{ s }} vous concerne{{ nt }} :</h3>

<table class="table" style="border: 1px solid black;border-collapse: collapse;">
    <thead>
        <tr>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">Type de litige</th>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">N° de réception</th>
            <th class="th" style="border: 1px solid black; padding: 6px; text-align: center; font-weight: bold;">Article</th>
        </tr>
    </thead>
    <tbody>
        {% for litige in litiges %}
            <tr>
                <td class="td" rowspan="{{ litige.articles|length }}" style="border: 1px solid black; padding: 6px; text-align: center;">{{ litige.type.label }}</td>

                {% set firstColis = litige.articles|first %}
                <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ firstColis.reception.numeroReception }}</td>
                <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ firstColis.barcode }}</td>
            </tr>
            {% for colis in litige.articles %}
                {% if not loop.first %}
                    <tr>
                        <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ firstColis.reception.numeroReception }}</td>
                        <td class="td" style="border: 1px solid black; padding: 6px; text-align: center;">{{ colis.barcode }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </tbody>
</table>

<br>
<br>
{% endblock %}
