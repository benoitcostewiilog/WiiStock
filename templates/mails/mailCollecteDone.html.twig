{% extends 'mails/mjml/template.html.twig' %}

{% block content %}

    Numéro : {{ demande.numero }}<br>
    Date de demande : {{ demande.date|date('d/m/Y') }}<br>
    Demandeur : {{ demande.demandeur.username }}<br>
    Point de collecte : {{ demande.pointCollecte.label }}<br>
    {% if (demande.commentaire is not empty and demande.commentaire != '<p><br></p>') %}
        Commentaire : {{ demande.commentaire|raw }}<br>
    {% endif %}
    <br>
    <br>
    Liste des articles :<br>
    <br>

    <table class="table">
        <thead>
         <tr>
            <th class="th">{{ 'reference.reference'|trans }}</th>
            <th class="th">Libellé</th>
            <th class="th">Quantité</th>
        </tr>
        </thead>
        <tbody>
        {% for article in collecte.articles %}
            <tr>
                <td class="td">{{ article.articleFournisseur.referenceArticle.reference }}</td>
                <td class="td">{{ article.articleFournisseur.referenceArticle.libelle }}</td>
                <td class="td">{{ article.quantite }}</td>
            </tr>
        {% endfor %}
        {% for collecteRef in collecte.ordreCollecteReferences %}
            <tr>
                <td class="td">{{ collecteRef.referenceArticle.reference }}</td>
                <td class="td">{{ collecteRef.referenceArticle.libelle }}</td>
                <td class="td">{{ collecteRef.quantite }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
