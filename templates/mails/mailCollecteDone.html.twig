{% extends 'mails/template.html.twig' %}

{% block content %}

<p>Rappel de votre demande de collecte :</p>

Numéro : {{ collecte.numero }}<br>
Date de demande : {{ collecte.date|date('d/m/Y') }}<br>
Demandeur : {{ collecte.demandeur.username }}<br>
Point de collecte : {{ collecte.pointCollecte.label }}<br>
{% if (collecte.commentaire is not empty and collecte.commentaire != '<p><br></p>') %}
    Commentaire : {{ collecte.commentaire|raw }}<br>
{% endif %}
<br>
<br>
Liste des articles :<br>
<br>
<table class="table">
    <thead>
        <tr>
            {% if isCurrentClient (constant('App\\Entity\\ParamClient::CEA_LETI')) %}
                <th class="th">Référence CEA</th>
            {% else %}
                <th class="th">Référence</th>
            {% endif %}
            <th class="th">Libellé</th>
            <th class="th">Quantité</th>
        </tr>
    </thead>
    <tbody>
    {% for article in collecte.articles %}
        <tr>
            <td class="td">{{ article.articleFournisseur.referenceArticle.reference }}</td>
            <td class="td">{{ article.articleFournisseur.referenceArticle.libelle }}</td>
            <td class="td">{{ article.quantite }}</td>
        </tr>
    {% endfor %}
    {% for collecteRef in collecte.collecteReferences %}
        <tr>
            <td class="td">{{ collecteRef.referenceArticle.reference }}</td>
            <td class="td">{{ collecteRef.referenceArticle.libelle }}</td>
            <td class="td">{{ collecteRef.quantite }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}