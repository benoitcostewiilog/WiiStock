{% extends 'mails/mjml/template.html.twig' %}

{% block content %}
    <p> Bonjour, </p>
    <p> Votre commande {{ isUrgentArrival ? 'urgente ' }} est arrivée : </p>
    <ul>
        <li>{{ "arrivage.n° d'arrivage"|trans }}
            : {{ arrival.numeroArrivage }}</li>

        {% set numeroCommandeList = (
            (emergencies|length > 0 and emergencies[0].commande)
            ? [emergencies[0].commande]
            : arrival.numeroCommandeList
            ) %}
        {% if numeroCommandeList|length > 0 %}
            <li> Numéro de commande{{ numeroCommandeList|length > 1 ? 's' }}
                : {{ numeroCommandeList|join(', ') }}</li>
        {% endif %}

        {% if arrival.fournisseur %}
            <li>Intitulé fournisseur : {{ arrival.fournisseur.nom }}</li>
        {% endif %}

        {% if arrival.noTracking %}
            <li>Numéro tracking transporteur : {{ arrival.noTracking }}</li>
        {% endif %}

        <li>Horodatage {{ "arrivage.arrivage"|trans }} : {{ arrival.date|date('d/m/Y H:i') }}</li>
    </ul>
    <p>Votre colis sera livré en Drop Zone en milieu d'après-midi.</p>
    <p>Merci et bonne journée :-)</p>
{% endblock %}
