{% extends 'mails/template.html.twig' %}

{% set isUrgentArrival %}
{% block content %}
    <p>Bonjour,</p>
    <br/>
    <p>Votre commande {{ isUrgentArrival ? 'urgente ' }}est arrivée : </p>
    <br/>
    <p>{{ "arrivage.n° d'arrivage"|trans|capitalize }} : {{ arrivage.numeroArrivage }}</p>
    {% if emergencies[0].commande %}
        <p>N° commande : {{ emergencies[0].commande }}</p>
    {% endif %}
    {% if posts|length > 0 %}
        <p>Poste{{ posts|length > 1 ? 's' }} : {{ posts|map((emergency) => emergency.postNb)|join(', ') }}</p>
    {% endif %}
    {% if arrivage.fournisseur %}
        <p>Intitulé fournisseur : {{ arrivage.fournisseur.nom }}</p>
    {% endif %}
    {% if arrivage.noTracking %}
        <p>N° tracking transporteur : {{ arrivage.noTracking }}</p>
    {% endif %}
    <p>Horodatage {{ "arrivage.arrivage"|trans }} : {{ arrivage.date|date('d/m/Y H:i') }}</p>
    <br/>
    {% if isUrgentArrival %}
        {% if arrivage.duty %}
            <p style="font-weight: bold">La réception de cette commande sera effectuée après dédouanement.</p>
        {% else %}
            <p>La réception de cette commande sera effectuée sous deux heures.</p>
        {% endif %}
    {% endif %}
    <br/>
    <br/>
{% endblock %}
