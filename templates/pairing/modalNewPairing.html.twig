<form class="modal fade" id="modalNewPairing" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvelle association</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="row">
                    <div class="form-group col-md-4 col-12">
                        <label>Nom capteur*</label>
                        <div class="w-100">
                            <select class="form-control data input" name="sensor"  data-s2 data-placeholder="Sélectionner un capteur...">
                                {% for sensorWrapper in sensorWrappers %}
                                    <option value="{{ sensorWrapper.name }}">{{ sensorWrapper.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-2 d-flex justify-content-center my-auto">
                        <label>OU</label>
                    </div>
                    <div class="form-group col-md-4 col-12">
                        <label>Code capteur*</label>
                        <div class="w-100">
                            <select class="form-control data" name="sensorCode" data-s2 data-placeholder="Sélectionner un code capteur...">
                                {% for sensorWrapper in sensorWrappers %}
                                    <option value="{{ sensorWrapper.sensor.code }}">{{ sensorWrapper.sensor.code }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <label class="col-12" for="date-pairing">Date de fin d'association</label>
                    <div class="col-12">
                        <input type="date" class="form-control data w-100" name="date-pairing" id="datePairing">
                    </div>
                    <label class="col-12">Element*</label>

                        <div class="col-3 d-flex justify-content-center my-auto">
                            <button type="button"
                                    class="btn btn-primary button-location data"
                                    onclick="visible($('.location'), $('.modal-footer') )">
                                <span class="wii-icon wii-icon-iot-location mr-2"></span>
                                Emplacement
                            </button>
                        </div>
                        <div class="col-3 d-flex justify-content-center my-auto" >
                            <button type="button"
                                    class="btn btn-primary button-pack data"
                                    onclick="visible($('.pack'), $('.modal-footer') )">
                                <span class="wii-icon wii-icon-iot-pack mr-2"></span>
                                Colis
                            </button>
                        </div>
                        <div class="col- d-flex justify-content-center my-auto" >
                            <button type="button"
                                    class="btn btn-primary button-article data"
                                    onclick="visible($('.article'), $('.modal-footer') )">
                                <span class="wii-icon wii-icon-iot-article mr-2"></span>
                                Article
                            </button>
                        </div>

                    <div class="w-100 container location d-none">
                        <label class="col-12">Emplacement*</label>
                        <div class="form-group col-md-4 col-12 ">
                            <select class="form-control data" name="locations">

                            </select>
                        </div>
                    </div>


                    <div class="w-100 container pack d-none">
                        <label class="col-12">Colis*</label>
                        <div class="form-group col-md-4 col-12 ">
                            <select class="form-control data" name="pack" data-s2 data-placeholder="Sélectionner un code colis...">
                                {% for  pack in packs %}
                                    <option value="{{ pack }}">{{ pack }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="w-100 container article disabled d-none">
                        <label class="col-12">Code-barre article *</label>
                        <div class="form-group col-md-4 col-12 ">
                            <div class="w-100">
                                <select class="form-control data" name="article" data-s2 data-placeholder="Sélectionner un code barre...">
                                    {% for article in articles %}
                                        <option value="{{ article.barCode }}">{{ article.barCode }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="error-msg"></div>
            <div class="modal-footer  d-none">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>

                <button id="submitNewPairing"
                        type="button"
                        class="btn btn-primary data">
                    Enregistrer
                </button>
            </div>
        </div>
    </div>
</form>
