{% extends 'layout.html.twig' %}

{% block title %}Références et articles de la mission{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersMissionInv.html.twig' with {'btnName' : 'submitSearchMissionRef'} %}
{% endblock %}

{% block page_content %}
    <h1>Références et articles de la mission</h1>

    <div class ="row">
        <a href="" data-toggle="modal" data-target="#modalAddToMission" class="btn btn-primary" onclick="ajaxAutoRefArticleInit($('.ajax-autocomplete-refArticle'), 'reference'), ajaxAutoArticlesInit($('.ajax-autocomplete-article'))">
            <span class="fa fa-plus mr-2"></span>Ajouter des références ou des articles
        </a>
        <div class="btn btn-primary" onclick="generateCSV('get_mission_for_csv', 'mission-inv', {{ missionId }})">
            <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
        </div>
    </div>
        <div class="d-none justify-content-center" id="spinner">
            <div class="spinner-border sizeLoader" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

    <table id="tableMissionInv" class="table table-striped table-bordered w-100">
    </table>

    <input value="{{ missionId }}" id="missionId" hidden/>

    <a href="{{ path('inventory_mission_index') }}" class="btn btn-action">
        Retour à la liste
    </a>

    {% include 'inventaire/modalAddToMission.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/mission-inventaire-show.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
