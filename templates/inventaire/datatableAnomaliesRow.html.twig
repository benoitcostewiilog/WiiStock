<div class="d-flex">
    <div class="dropdown dropright d-none">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu pointer">
            <div class="action-on-click" data-toggle="modal" data-target="#modalTreatAnomaly"
                 data-ref="{{ reference }}" data-is-ref="{{ isRef }}" data-quantity="{{ quantity }}" data-location="{{ location }}"
                 data-id-entry="{{ idEntry }}"
                 onclick="showModalAnomaly($(this))">
                <i class='fas fa-check'></i>
            </div>
        </div>
    </div>
</div>
