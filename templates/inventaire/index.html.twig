{% extends 'layout.html.twig' %}

{% block title %}Missions d'inventaire{% endblock %}

{% block page_content %}

    {% block page_filter %}
        {% include 'filters/filtersMissionInv.html.twig' with {
            'page': 'PAGE_INV_MISSIONS',
            'tableSelector': '#tableMissionsInv'
        } %}
    {% endblock %}
    <div class="col-12">
        <h1>Missions d'inventaire</h1>
    </div>
    <div class="col-12">
        <div class="row justify-content-end">
            {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::INVENTORY_MANAGER')) %}
                <a href="" data-toggle="modal" data-target="#modalNewMission" class="btn btn-primary">
                    <span class="fa fa-plus mr-2"></span>Nouvelle mission
                </a>
                <a href="{{ path('inventory_entry_index') }}" class="btn btn-primary">
                    <span class="fa fa-clipboard-list mr-2"></span>Voir les saisies
                </a>
                <a href="{{ path('show_anomalies') }}" class="btn btn-primary">
                    <span class="fa fa-alert mr-2"></span>GÃ©rer les anomalies
                </a>
            {% endif %}
        </div>
    </div>
    <div class="col-12">
        <table id="tableMissionsInv" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include 'inventaire/modalNewMissionInv.html.twig' %}
    {% include 'inventaire/modalDeleteMission.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/mission-inventaire.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
