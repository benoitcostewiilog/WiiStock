<form method="">
    <div class="modal-body modal-input container-fluid row">
        <div class="col-12 form-group required d-none">
            <input type="text" class="form-control data needed" name="day" required="" value="{{ day.id }}">
        </div>

            <div class="form-group col-12" id="days">
                <label for="">Jour</label>
                <input type="text" class="form-control" name="days" value="{{ day.day }}" disabled>
            </div>

            <div class="form-group col-12" id="worked">
                {% set checked = (day.worked == 1) ? 'checked' : '' %}
                <label for="">Travaillé ?</label>
                <label class="switch">
                    <input type="checkbox" class="data checkbox" name="worked" {{ checked }}>
                    <span class="slider round"></span>
                </label>
            </div>

            <div class="form-group col-12" id="times">
                <label for="">Horaires travaillées</label>
                <input type="text" class="form-control data" name="times" value="{{ day.times }}">
                <p class="col-sm-12" style="font-size: 12px; font-style: italic">
                    <i class="far fa-question-circle"></i>
                    Horaires sous la forme HH:MM-HH:MM;HH:MM-HH:MM...
                </p>
            </div>
    </div>
</form>