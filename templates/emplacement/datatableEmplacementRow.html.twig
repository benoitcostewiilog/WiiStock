<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
        <div data-id='{{ emplacementId }}' data-target='#modalEditEmplacement' data-toggle='modal'
            class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block"
            onclick="editRow($(this), Routing.generate('emplacement_api_edit', true), $('#modalEditEmplacement'), $('#submitEditEmplacement'))">
                <i class='fas fa-pencil-alt'></i>
            </button>
        </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
        <div class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block"
            onclick="checkAndDeleteRow($(this))"
            data-id='{{ emplacementId }}' data-target='#modalDeleteEmplacement' data-toggle='modal'>
                <i class='fas fa-trash'></i>
            </button>
        </div>
    {% endif %}
</div>