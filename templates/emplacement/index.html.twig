{% extends 'layout.html.twig' %}

{% block title %}Stock / Emplacements{% endblock %}

{% block page_content %}
<h1>Emplacements</h1>

<div>
    <a href="{{ path('emplacement_new') }}" class="btn btn-primary">
        <span class="fa fa-plus mr-2"></span>Nouvel emplacement
    </a>
</div>

<table id="table_id" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       
    </tbody>
</table>

    {% include "emplacement/modalEmplacement.html.twig" %}

{% endblock %}

{% block javascript %}

<script>
    var table = $('#table_id').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
        },
        ajax: "{{path('emplacement_api')}}",
        columns: [
            { "data": 'Nom' },
            { "data": 'Description' },
            { "data": 'Actions' }
        ],
        buttons: [
            'copy', 'excel', 'pdf'
        ]
    });
</script>

{% endblock %}