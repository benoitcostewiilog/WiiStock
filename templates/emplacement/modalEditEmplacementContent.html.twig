<div class="form-group col-12">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Nom</label>
        </div>
        <input class="form-control data needed" maxlength="21" type="text" value='{{ emplacement.label }}' name="Label" id="Label">
    </div>
</div>
<div class="form-group col-12">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Description</label>
        </div>
        <input class="form-control data needed" type="text" value='{{ emplacement.description }}' name="Description"
               id="Description">
    </div>
</div>
<div class="form-group col-12">
    <label class="col-6">Point de livraison ?</label>
    <label class="switch col-6">
        {% set isDeliveryPointChecked = emplacement.isDeliveryPoint ? 'checked' : '' %}
        <input class="checkbox data needed" type="checkbox" {{ isDeliveryPointChecked }} name="isDeliveryPoint">
        <span class="slider round"></span>
    </label>
</div>
<div class="form-group col-12">
    <label class="col-6">Actif ?</label>
    <label class="switch col-6">
        {% set isActiveChecked = emplacement.isActive ? 'checked' : '' %}
        <input class="checkbox data needed" type="checkbox" {{ isActiveChecked }} name="isActive">
        <span class="slider round"></span>
    </label>
</div>