    {% if message is defined %}
        <div>
            {{message}}
        </div>
    {% endif %}

<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fournisseur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fournisseur.nom }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('fournisseurs_index') }}" class='button pull-left btn-left'>retour</a>
    {{ include('fournisseurs/_delete_form.html.twig') }}
    <a href="{{ path('fournisseurs_edit', {'id': fournisseur.id}) }}"class='button pull-right btn-left'>Modifier</a>
</div>
{% endblock %}