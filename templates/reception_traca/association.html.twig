<form class="modal fade" id="modalNewAssociation" role="dialog"
      aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enregistrer une réception</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid center-content">
                <div class="form-group center-content">
                    <label for="label">Numéro d'arrivage*</label>
                    <input type="text" id="numero_arrivage" class="form-control data needed" name="numero_arrivage"/>
                    <span class="btn btn-primary" onclick="addArrivageAssociation($(this))"><i class="fa fa-plus"></i></span>
                </div>

                <div class="form-group center-content">
                    <label for="Description">Numéro de réception*</label>
                    <input type="text" id="numero_réception" class="form-control data needed" name="numero_réception">
                </div>
                <div class="center-content">
                    <div class="btn btn-primary" id="removeArrivage" onclick="toggleArrivage($(this))" data-arrivage="true">Sans Arrivage</div>
                </div>
            </div>
            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <div id="submitNewRecep" class="btn btn-success" onclick="submitNewAssociation()">Enregistrer</div>
            </div>
        </div>
    </div>
</form>