{% extends 'layout.html.twig' %}

{% block title %}Réceptions{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersReceptionTraca.html.twig' with {
        'btnName' : 'submitSearchRecep',
    } %}
{% endblock %}

{% block page_content %}
    <h1>Réceptions</h1>
    <div class="row">
        <div class="btn btn-primary" data-target='#modalNewAssociation' data-toggle='modal'>
            <i class="fa fa-bullseye mr-2"></i>Association / BR
        </div>
        <div class="btn btn-primary" onclick="customExport()">
            <i class="fa fa-file-csv mr-2"></i>Exporter
        </div>
    </div>
    <div>
        <table id="tableRecepts" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% include "reception_traca/modalDeleteRecepTraca.html.twig" %}
    {% include "reception_traca/association.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src = "{{ asset('js/reception_traca.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
