<form method="" class="modal fade" id="modalNewRole" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Créer un rôle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="mb-3 form-group">
                    <label for="label">Nom</label>
                    <input type="text" class="data form-control needed" name="label">
                </div>

                {% for menu in menus %}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-3">
                                <label>{{ menu.label }}</label>
                            </div>
                            {% for action in menu.actions %}
                                <div class="col-3">
                                    <label class="switch">
                                        <input class="checkbox" type="checkbox" name="{{ menu.code~'/'~action.label }}">
                                        <span class="slider round"></span>
                                    </label>
                                    {{ action.label }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewRole" type="button" class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>