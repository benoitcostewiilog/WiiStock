    <label for="reference">Référence</label>
    <select class="ajax-autocomplete data form-control" value='{{ligneArticle.reference}}' id='referenceEdit'  name='reference'
    onclick="ajaxAuto()">
        <option class=" refAjax" value="{{ligneArticle.reference.id}}">{{ligneArticle.reference}}</option>
    </select>
</div>
<div class="error-msg"></div>