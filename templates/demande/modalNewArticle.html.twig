<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ demande.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <label for="reference" class="col-2 mt-2" title="référence">
                        {{ 'reference.référence'|trans }}*
                    </label>
                    <div class="form-group col-10 d-flex w-100">
                        <select class="ajax-autocomplete data form-control needed"
                            onchange="ajaxGetAndFillArticle($(this))" id="reference"
                            name="referenceArticle">
                        </select>
                    </div>
                    <div id='selection' class="col-12 clear p-0">

                    </div>
                    <div id='editNewArticle' class="col-12 clear">

                    </div>
                </form>
            </div>

            <div class="error-msg"></div>
            <div class="modal-footer d-none">
                <div class="btn" data-dismiss="modal">Annuler</div>
                <button id="submitNewArticle"
                        name="livraison"
                        value="{{demande.id}}"
                        type="button"
                        class="btn data btn-success data">
                    Ajouter
                </button>
            </div>
        </div>
    </div>
</div>
