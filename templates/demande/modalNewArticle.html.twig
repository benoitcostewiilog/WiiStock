<!-- Modale Ajout d'article -->
<div method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="modalAddArticleTitle"
     aria-hidden="true" data-collecte-id="{{ demande.id }}">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter un article</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <label for="reference" class="col-1">
                    {% if isCurrentClient (constant('App\\Entity\\ParamClient::CEA_LETI')) %}
                        Référence CEA*
                    {% else %}
                        Référence*
                    {% endif %}
                    </label>
                    <div class="form-group col-11 d-flex w-100">
                        <select class="ajax-autocomplete data form-control needed"
                            onchange="ajaxGetAndFillArticle(this), setMaxQuantity($(this))" id="reference"
                            name="referenceArticle">
                        </select>
                    </div>
                    <div id='selection' class="col-12 clear p-0">

                    </div>
                    <div id='editNewArticle' class="col-12 clear">

                    </div>
                </form>
            </div>

            <div class="error-msg p-4"></div>
            <div class="modal-footer d-none">
                <div class="btn" data-dismiss="modal">Annuler</div>
                <button id="submitNewArticle" onclick="setCommentaire('.editor-container-edit')" name="demande" value="{{demande.id}}" type="button"
                    class="btn data btn-success data">Ajouter</button>
            </div>
        </div>
    </div>
</div>