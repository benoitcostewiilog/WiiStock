<form method="" class="modal fade" id="modalNewArticle" data-id="{{ demande.id }}" role="dialog"
    aria-labelledby="dataModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Ajouter une ligne</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group w-100 mb-3">
                    <label for="reference">Référence</label>
                    <select class="ajax-autocomplete data form-control needed" id="reference" name="reference" onchange="updateQuantity($(this));">
                    </select>
                </div>

                {#<div class="form-group w-100">#}
                    {#<label for="code">Code trouvé</label>#}
                    {#<input type="text" class="form-control" id="code" value="">#}
                {#</div>#}

                <div class="form-group w-50">
                    <label for="in-stock">En stock</label>
                    <input class="form-control" id="in-stock" disabled>
                </div>

                <div class="form-group w-50">
                    <label for="quantite">Quantité</label>
                    <input type="number" class="data form-control needed" name="quantite" id="quantite" value=""
                        min="1" required="true">
                </div>

                <div class="error-msg"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewArticle" name="demande" value="{{demande.id}}" type="button" class="btn data btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>