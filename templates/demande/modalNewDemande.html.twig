<form method="" class="modal fade" id="modalNewDemande" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cr√©er une demande</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="demandeur">Demandeur</label>
                    <select type="text" class="demandeur form-control data" name="demandeur" disabled>
                        <option value = "{{app.user.id}}">{{ app.user.username }}</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="destination">Destination</label>
                    <select name="destination" class="form-control data select2 d-block">
                        {% for emplacement in emplacements %}
                            <option value="{{ emplacement.id }}">{{ emplacement.label }}</option>
                        {% endfor %}
                    </select>
                </div>

                {#<div class="form-group">#}
                        {#<label for="dateAttendu">Date attendue</label>#}
                    {#<input type="date" class="form-control data w-auto" name="dateAttendu" value="" required="true" min="{{ 'now' | date('Y-m-d') }}" max="{{ '+25year' | date('Y-m-d') }}">#}
                {#</div>#}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewDemande" type="button" data-dismiss="modal"
                    class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>