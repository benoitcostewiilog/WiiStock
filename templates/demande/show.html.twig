{% extends 'layout.html.twig' %}

{% block title %}Demande{% endblock %}

{% block page_content %}

<div class="barre-filtre row justify-content-between">
    <div class="col-6">
        <h1 class="">Demande de livraison</h1>
    </div>
    <div class="col-2">
        <a href="" data-toggle="modal" data-target="#modifModalCenter" class="button">
            Modifier la demande
        </a>
        {{ include('demande/_delete_form.html.twig') }}
    </div>
</div>

<div class="zone-actions row">
    <div class="col-3">
        <p>Demandeur : {{ demande.utilisateur ? demande.utilisateur : '' }}</p>
        <p>Disponibilité des articles : Oui/Non</p>
        <p>Date attendue : {{ demande.DateAttendu ? demande.DateAttendu | date("d/m/Y") : "" }}</p>
        <p>Destination : {{ demande.destination ? demande.destination.nom : "" }}</p>
    </div>

    <div class="col-3">
        <p>Date demande : {{ demande.date | date("d-m-Y") }}</p>
        <p>Référence : {{ demande.numero }}</p>
        <a href='{{ path("preparationFromDemande", {"id" : demande.id }) }}'>Aller vers la préparation</a>
    </div>

    <div class="col-2">

    </div>

    <div class="col-4"></div>

    <div class="col-12">
        <div class="row justify-content-between">
            <div></div>
            <a href="" data-toggle="modal" data-target="#ajoutLigneModalCenter" class="button btn-left ml-auto">Ajouter
                une
                ligne</a>
        </div>
    </div>
</div>

<table id="table-lignes" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Référence CEA</th>
            <th>Libellé</th>
            <th>Quantité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<a href={{ path('demande_index') }} class='button pull-left btn-left'>Retour</a>


{% include 'demande/modifModal.html.twig' %}
{% include 'demande/modifLigne.html.twig' %}
{% include 'demande/ajoutLigneModal.html.twig' %}

{% endblock %}

{% block javascript %}

<script>
    var table = $('#table-lignes').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
        },
        "processing": true,
        "ajax": {
            "url": "{{ path('LigneArticle_api', {'id' : demande.id}) }}",
            "type": "POST"
        },
        columns:[
                {"data": 'Référence CEA'},
                {"data": 'Libellé'},
                {"data": 'Quantité'},
                {"data": 'Actions'}
        ],
    });



    var dataModal1 = $("#modifModalCenter");
    var ButtonSubmit1 = $("#modifsubmitButton");
    InitialiserModal(dataModal1, ButtonSubmit1, "{{ path('modifDemande', { 'id' : demande.id}) }}");

    var dataModal2 = $("#ajoutLigneModalCenter");
    var ButtonSubmit2 = $("#ajoutsubmitButton");
    InitialiserModal(dataModal2, ButtonSubmit2, "{{ path('ajoutLigneArticle', { 'id' : demande.id }) }}");


</script>
<script src="{{ asset('js/demande-livraison.js') }}"></script>
{% endblock %}