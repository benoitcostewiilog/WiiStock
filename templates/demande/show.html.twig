{% extends 'layout.html.twig' %}

{% block title %}Demande{% endblock %}

{% block page_content %}

<div class="barre-filtre row justify-content-between">
    <h1 class="">Demande de livraison</h1>
</div>

<div class="zone-actions row">
    <div class="col-3">
        <p>Demandeur : {{ demande.utilisateur ? demande.utilisateur : '' }}</p>
        <p>Disponibilité des articles : Oui/Non</p>
        {#<p>Date attendue : {{ demande.DateAttendu ? demande.DateAttendu | date("d/m/Y") : "" }}</p>#}
        <p>Destination : {{ demande.destination ? demande.destination.label : "" }}</p>
    </div>

    <div class="col-3">
        <p>Date demande : {{ demande.date | date("d/m/Y") }}</p>
        <p>Référence : {{ demande.numero }}</p>
    </div>
  
    <div class="col-3"></div>

    <div class="col-3">
        <div class="row justify-content-between">
            <a href="{{path('fin_demande', {'id': demande.id})}}" class="btn btn-primary ml-auto">
                Finaliser demande</a>
        </div>
    </div>


    <div class="col-12">
        <div class="row justify-content-between">
            <a href="" data-toggle="modal" data-target="#modalNewArticle" class="btn btn-primary ml-auto">
                Ajouter une ligne</a>
        </div>
    </div>
</div>
<span id="demande-id" data-id="{{ demande.id }}"></span>
<table id="table-lignes" data-id="{{ demande.id }}" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Référence CEA</th>
            <th>Libellé</th>
            <th>Quantité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<a href="{{ path('demande_index') }}" class='btn'>Retour</a>


{% include 'demande/modalDeleteArticle.html.twig' %}
{% include 'demande/modalNewArticle.html.twig' %}
{% include 'demande/modalEditArticle.html.twig' %}

{% endblock %}

{% block javascript %}
<script>
    const id = {{ demande.id }}
</script>

<script src="{{ asset('js/demande-livraison.js') }}"></script>
{% endblock %}