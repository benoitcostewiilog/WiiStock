<!-- Modale Modification de quantité à collecter d'un article -->
<div method="" class="modal fade" id="modalModifyLigneArticle" role="dialog" aria-labelledby="modalModifyArticleTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier la quantité</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form class="form-group">
                    <div class="mb-3">
                        <label>Ligne article</label>
                        <div class="ligne-article"></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-row">
                            <label for="quantity">Quantité</label>
                            <input class="form-control quantity data" type="number" min=0 id="quantity" name="quantity" value="">
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <div class="btn btn-secondary" data-dismiss="modal">Annuler</div>
                <div id="modifySubmit" class="save btn btn-success" data-dismiss="modal">Valider</div>
            </div>
        </div>
    </div>
</div>