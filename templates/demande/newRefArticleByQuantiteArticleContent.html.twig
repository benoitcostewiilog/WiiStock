<div class="form-group w-100 mt-2">
    <label for="code">Code article*</label>
    <select class="form-control ajax-autocomplete-article data select2" id="article"
            onchange="ajaxEditArticle($(this))" name="article">
        <option value="">Choisir un article</option>
        {% for article in articles %}
            {% if (article.demande is not null and article.demande.id != deliveryRequestId) or (article.demande is null) %}
                <option value="{{ article.id }}" {{ preselect and loop.index0 == 0 ? 'selected' }}>{{ article.barCode }}</option>
            {% endif %}
        {% endfor %}
    </select>
</div>
<div id='quantityToTake' class="form-group {{ preselect ? '' : 'd-none'}} mt-2">
    <label for="quantity-to-deliver">Quantité à livrer*</label>
    <input class="form-control data needed" type="number" min="1" max="{{ maximum }}" id="quantity-to-deliver" name="quantity-to-pick" value="0">
</div>
