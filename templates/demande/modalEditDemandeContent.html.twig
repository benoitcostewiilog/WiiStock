<div class="form-group">
    <label for="demandeur">Utilisateur</label>
    <select name="demandeur" class="form-control data select2">
        {% for utilisateur in utilisateurs %}
            {% set selected = (utilisateur.id == demande.utilisateur.id ? 'selected' : '') %}
            <option value="{{ utilisateur.id }}" {{ selected }}>{{ utilisateur.username }}</option>
        {% endfor %}
    </select>
</div>

<div class="form-group">
    <label for="destination">Destination</label>
    <select name="destination" class="form-control data select2">
        {% for emplacement in emplacements %}
            {% set selected = (emplacement.id == demande.destination.id ? 'selected' : '') %}
        <option value="{{ emplacement.id }}" {{ selected }}>{{ emplacement.label }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <label for="commentaire" >Commentaire</label>
    <input id="commentaire" class="form-control data" name="commentaire" type="hidden" value="{{demande.commentaire}}" >
    <div class="editor-container" value="{{demande.commentaire}}" > {{demande.commentaire|raw}}
        </div>
    
</div>

