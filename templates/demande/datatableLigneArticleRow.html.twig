
{%  if modifiable %}

<div class="row">

   <div class='col-4 btn-col-action'>
       <button type="button" class="btn btn-block"
        onclick="deleteRowDemande($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))" data-id='{{ id }}'
        data-name='{{name}}' data-target='#modalDeleteArticle' data-toggle='modal'>
            <i class='fas fa-trash '></i>
       </button>
   </div>
    {% if name == reference %}

    <div data-id='{{ id }}' class='col-4 btn-col-action' data-target='#modalEditArticle' data-toggle='modal'>
        <button type="button" class="btn btn-block"
        onclick="editRow($(this), Routing.generate('demande_article_api_edit', true), $('#modalEditArticle'), $('#submitEditArticle'))">
            <i class='fas fa-pencil-alt'></i>
        </button>
    </div>
    {% endif %}
    {% if refArticleId is defined %}
    <div data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
            <i class='fas fa-eye'></i>
        </button>
    </div>
    {% else %}
    <div data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block"
        onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
            <i class='fas fa-eye'></i>
        </button>
    </div>
    {% endif %}
</div>

{% endif %}