<div class="d-flex">
    {% if refArticleId is defined %}
        <div>
            <div class="btn btn-col-action" data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal'
                 onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
                <i class='fas fa-eye'></i>
            </div>
        </div>
    {% else %}
        <div>
            <div class="btn btn-col-action" data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal'
                 onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
                <i class='fas fa-eye'></i>
            </div>
        </div>
    {% endif %}

    {% if modifiable %}
        {% if name == reference %}
        <div>
            <div class="btn btn-col-action" data-id='{{ id }}' data-target='#modalEditArticle' data-toggle='modal'
                 onclick="editRow($(this), Routing.generate('demande_article_api_edit', true), $('#modalEditArticle'), $('#submitEditArticle'), false, false, true)">
                <i class='fas fa-pencil-alt'></i>
            </div>
        </div>
        {% endif %}

        <div>
            <div class="btn btn-col-action"
                 onclick="deleteRowDemande($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))" data-id='{{ id }}'
                 data-name='{{name}}' data-target='#modalDeleteArticle' data-toggle='modal'>
                <i class='fas fa-trash '></i>
            </div>
        </div>
    {% endif %}

</div>

