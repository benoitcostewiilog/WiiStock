
{%  if modifiable %}

<div class="row">

   <div class='type-delete col-3'
        onclick="deleteRowDemande($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))" data-id='{{ id }}'
        data-name='{{name}}' data-target='#modalDeleteArticle' data-toggle='modal'>
        <i class='fas fa-trash '></i>
    </div>
    {% if name == reference %}

    <div data-id='{{ id }}' class='type-delete col-3' data-target='#modalEditArticle' data-toggle='modal'
        onclick="editRow($(this), Routing.generate('demande_article_api_edit', true), $('#modalEditArticle'), $('#submitEditArticle'))">
        <i class='fas fa-pencil-alt'></i>
    </div>
    {% endif %}
    {% if refArticleId is defined %}
    <div data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal' class='col-3'
        onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
        <i class='fas fa-eye'></i></div>
    {% else %}
    <div data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal' class='col-3'
        onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
        <i class='fas fa-eye'></i></div>
    {% endif %}
</div>

{% endif %}