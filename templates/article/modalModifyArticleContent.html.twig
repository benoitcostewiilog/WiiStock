<div class="row">
    {% if article.type is not empty %}
    <input type="hidden" name="" id="typeEditArticle" value="{{article.type.id}}">
    {% endif %}
    <div class="form-group col-6">
        <label for="libelle">Libellé</label>
        <input type="text" class="form-control data" name="label" id='label' value="{{article.label}}" placeholder="">
    </div>
    <div class="form-group col-3">
        <label>Anomalie</label>
        <label class="switch">
            <input class="checkbox" type="checkbox" name="conform" {{article.conform ? '' : 'checked'}}>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="form-group col-3">
        <label>Statut (Inactif/Actif)</label>
        <label class="switch">
            <input class="checkbox" type="checkbox" name="actif" {{ statut ? 'checked': ''}}>
            <span class="slider round"></span>
        </label>
    </div>
    <div class="form-group col-12">
        <div>
            <label for="commentaire">Commentaire</label>
            <input id="commentaireID" class="form-control data" type="hidden" name="commentaire"
                value="{{article.commentaire}}">
            <div class="editor-container" value="{{article.commentaire}}"> {{article.commentaire|raw}}
            </div>
        </div>
    </div>
    <div class="form-group col-6">
        <label for="quantité">Quantité</label>
        <input class="form-control data needed" type="number" min="0" name="quantite" id="quantité" value="{{article.quantite}}">
    </div>
    <div class="form-group col-6 w-100">
        <label for="emplacement">Emplacement</label>
        <select class="ajax-autocompleteEmplacement-edit data form-control" name="emplacement">
            {% if article.emplacement != null %}
            <option value="{{article.emplacement.id}}">{{article.emplacement.label}}</option>
            {% endif %}
        </select>
    </div>
    <!-- CHAMPS LIBRES -->
    <div class='col-12 mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'>
            <i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Champs libres
        </h3>
    </div>
    <div class="form-group col-12 d-block" id='typeContentEdit'>
        {% set articleRef = article.articleFournisseur.referenceArticle %}
        {% set typeA = article.type %}
        {% for type in types %}
        <div {{ typeA != null and type.id == typeA.id ? "class='d-block'" : "class='d-none'"}}
            id="{{type.id}}-edit">
            <div class="row mt-2">
                {% for champ in type.champsLibres %}

                {% set value = '' %}
                {% for row in valeurChampsLibre %}
                {% if (row.idCL == champ.id) %}{% set value = row.valeur %}{% endif %}
                {% endfor %}

                <div class="form-group col-6">
                    <label for="input">
                        {{champ.label | capitalize}}
                    </label>
                    {% if champ.typage == 'booleen' %}
                    {% set checked = (value == 1) ? 'checked' : '' %}
                    <input type="checkbox" class="form-control data checkbox" {{ checked }} value="{{ value }}"
                        name="{{champ.id}}" id="input">

                    {% elseif champ.typage == 'number' %}
                    <input type="number" id="{{champ.label ~ 'edit'}}" class="form-control data {{ champ.requiredEdit ? 'needed' : ''}}" value="{{ value }}" name="{{champ.id}}"
                        id="input">

                    {% elseif champ.typage == 'list' %}
                    <select class="form-control unTruc data {{ champ.requiredEdit ? 'needed' : ''}}" id="{{champ.label ~ 'edit'}}" name="{{champ.id}}" id="input">
                        <option value="{{value}}">{{value}}
                        </option>
                        {% for elem in champ.elements %}
                        {% if value != elem %}
                        <option value="{{elem}}">{{elem}}</option>
                        {% endif %}
                        {% endfor %}
                        {% if value != "" %}
                        <option value=""></option>
                        {% endif %}
                    </select>
                    {% else %}
                    <input type="text" id="{{champ.label ~ 'edit'}}" class="form-control data {{ champ.requiredEdit ? 'needed' : ''}}" value="{{ value }}" name="{{ champ.id }}"
                        id="input">
                    {% endif %}

                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>