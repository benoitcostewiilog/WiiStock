<div class="form-group">
    <label for="libelle">Libell√©</label>
    <input type="text" class="form-control data" name="label" id='label' value="{{article.label}}" placeholder="">
</div>
<div class="form-group col-6">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="defaultCheck1">conforme</label>
        </div>
        <select class='data form-control' name="conform" id="">
            {% if article.conform %}
            <option value="on">oui</option>
            <option value="off">non</option>
            {% else %}
            <option value="off">non</option>
            <option value="on">oui</option>
            {% endif %}
        </select>
    </div>
</div>
<div class="input-group col-12 my-2 mb-4">
    <div class="input-group-prepend">
        <span class="input-group-text">Commentaire</span>
    </div>
    <input class="form-control data" name="commentaire" type="hidden" value="{{article.commentaire}}">
    <div class="form-control data" name="commentaire" id='commentaire'>{{article.commentaire}}</div>
    <div class="editor-container" value="{{article.commentaire}}"> {{article.commentaire|raw}}
    </div>
</div>
