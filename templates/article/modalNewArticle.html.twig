<form method="" class="modal fade" id="modalNewArticle" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvel Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-input container-fluid">
                <form class="row">
                    <div class="form-group col-12 w-100">
                        <label for="reference">Fournisseur</label>
                        <select class="ajax-autocompleteFournisseur data form-control needed"
                            onchange="loadAndDisplayInfos(this)" id="fournisseurAdd"
                            name="fournisseur">
                        </select>
                    </div>
                    <div id='newContent' class="col-12">
                    </div>
                </form>
                <div class="error-msg"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button type="button" id="submitNewArticle" class="btn btn-success data"
                    onclick="setCommentaireID($(this)), resetNewArticle($('#fournisseurAdd'))">Enregistrer</button>
            </div>
        </div>
    </div>
</form>