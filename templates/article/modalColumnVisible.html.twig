<div class="modal fade" id="modalColumnVisible" tabindex="-1" role="dialog"
     aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Gestion des colonnes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tableColumnVisible_id" class="table" style="width:100%">
                    <thead>
                    <tr>
                        <th>Champs</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>


                    {% set i = 0 %}
                    {% for champ in champs %}
                        <tr class="pointer" onclick="toggleInputRadioOnRow(this)">
                            <td>
                                {{ champ.label | capitalize }}
                            </td>
                            <td>
                                <div class="checkbox d-inline-block pointer" onclick="toggleInputRadioOnRow(this)">
                                    {% set checked = (champ.label in columnsVisibles ? 'checked' : '') %}
                                    <input class="form-check-input {{ checked == 'checked' ? 'data' : '' }}"
                                           name="{{ champ.label }}"
                                           onclick="showOrHideColumn($(this), tableArticle, $('#tableArticle_id_wrapper'))" type="checkbox"
                                           id="column_visible_input{{ loop.index }}" {{ checked }}
                                           data-column="{{ i }}" data-name="{{ champ.label }}">
                                    <label for="column_visible_input{{ loop.index }}" class="pointer"></label>
                                </div>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <div class="btn" data-dismiss="modal">Fermer</div>
                <div class="btn btn-primary" id="submitColumnVisible">Enregistrer</div>
            </div>
        </div>
    </div>
</div>
