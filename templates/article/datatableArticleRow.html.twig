<div class="d-flex">
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    <div>
        <div class="btn btn-col-action" data-id='{{ articleId }}' data-toggle='modal' data-target='#modalEditArticle'
            onclick="editRow($(this), Routing.generate('article_api_edit', true), $('#modalEditArticle'),
            $('#submitEditArticle'), true)">
            <i class='fas fa-pencil-alt'></i>
        </div>
   </div>

    <div>
        <div class="btn btn-col-action"
            onclick="checkAndDeleteRow($(this), '#modalDeleteArticle', 'article_check_delete', '#submitDeleteArticle')"
            data-id='{{ articleId }}' data-target='#modalDeleteArticle' data-toggle='modal'>
            <i class='fas fa-trash'></i>
        </div>

    </div>
    {% else %}
    <div>
        <div class="btn btn-col-action" data-id='{{ articleId }}' data-target='#modalShowArticle' data-toggle='modal'
            onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    </div>
    {% endif %}
    <div>
        <a class="btn btn-col-action"
           href="{{ path('article_single_bar_code_print', {article: articleId}) }}">
            <i class="fas fa-print"></i>
        </a>
    </div>
    {% if demandeId is not null %}
    <div>
        <div class="btn btn-col-action" data-id='{{articleId}}'
             onclick='redirectToDemandeLivraison({{ demandeId }})'>
            <i class="fas fa-external-link-alt"></i>
        </div>
    </div>
    {% endif %}
</div>
