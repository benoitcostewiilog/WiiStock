<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    <div data-toggle='modal' data-target='#modalEditArticle' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{ articleId }}'
            onclick="editRow($(this), Routing.generate('article_api_edit', true), $('#modalEditArticle'),
            $('#submitEditArticle'), true)">
            <i class='fas fa-pencil-alt'></i>
        </button>
   </div>

    <div class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" id='delete{{articleId}}'
            onclick="deleteRow($(this), $('#modalDeleteArticle'), $('#submitDeleteArticle'))" data-id='{{ articleId }}'
            data-target='#modalDeleteArticle' data-toggle='modal'>
            <i class='fas fa-trash'></i>
        </button>

    </div>
    {% else %}
    <div  data-target='#modalShowArticle' data-toggle='modal' class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{ articleId }}'
            onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
            <i class='fas fa-eye'></i>
        </button>
    </div>
    {% endif %}
    <div  class='col-4 btn-col-action'>
        <button type="button" class="btn btn-block" data-id='{{articleId}}'
            onclick='printSingleArticleBarcode($(this))'>
            <i class="fas fa-print"></i>
        </button>
    </div>
</div>