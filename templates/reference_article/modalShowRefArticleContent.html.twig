<div class="row">
    <div class="form-group col-8">
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text" for="reference">Référence</label>
            </div>
            <div class="form-control overflow-auto" value="" name="reference" id="reference">
                {{articleRef.reference}}
            </div>
        </div>
    </div>
    <div class="form-group col-4">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Statut</label>
            <div>
                <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-title="active">
                    Actif</span><span
                        class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-title="inactive">
                    Inactif</span>
            </div>
        </div>
    </div>
    <div class="form-group col-8">
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text" for="libelle">Nom</label>
            </div>
            <div class="form-control overflow-auto" id="libelle">
                {{articleRef.libelle}}
            </div>
        </div>
    </div>
    <div class="form-group col-4">
        <div class="input-group">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text">Type</label>
            </div>
            <div class="form-control" id="type">
                {{articleRef.type.label}}
            </div>
        </div>
    </div>
    <div class="form-group col-12">
        <div class="">
            <div class="input-group-prepend">
                <label class="input-group-text">Nomenclature</label>
            </div>
            <div class="form-control overflow-auto" id="type">
                {{articleRef.commentaire|raw}}
            </div>
        </div>
    </div>
</div>
<div class="row mt-4 mb-4">
    <div class="form-group col-6">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Gestion quantité</label>
            <div onclick="updateQuantityDisplay($(this))">
                <span class="btn {{ (articleRef.typeQuantite == 'reference') ? 'active' : 'not-active'}}" data-title="reference">
                    Par référence</span><span class="btn {{ (articleRef.typeQuantite == 'article') ? 'active' : 'not-active'}}"
                        data-title="article" >
                    Par article</span>
            </div>
        </div>
    </div>

    <div class="form-group col-3">
        {% set dnone = (articleRef.typeQuantite == 'reference') ? '' : 'd-none' %}

        <div class="input-group reference {{ dnone }}">
            <div class="input-group-prepend">
                <label class="input-group-text" for="quantité">Quantité</label>
            </div>
            <div class="form-control overflow-auto" id="quantite">
                {{ articleRef.quantiteStock }}
            </div>
        </div>

        {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

        <div class="input-group article {{ dnone }}">
            <label class="mtb-auto mr-2">Quantité</label>
            <div class="form-control rounded">{{ totalQuantity }}</div>
        </div>
    </div>
</div>

<!-- ARTICLES FOURNISSEURS -->
<div class="row">
    {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}
    <div class='col-12 article {{ dnone }} mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Quantité par articles fournisseurs </h3>
    </div>
    <div class="form-group col-12 d-none">
        <table class="table table-striped table-bordered w-auto m-auto">
            <tr>
                <th>Ref fournisseur</th>
                <th>Libellé</th>
                <th>Fournisseur</th>
                <th>Quantité</th>
            </tr>
            {% for articleFournisseur in articlesFournisseur %}
                <tr>
                    <td>{{ articleFournisseur.fournisseurRef }}</td>
                    <td>{{ articleFournisseur.label }}</td>
                    <td>{{ articleFournisseur.fournisseurName }}</td>
                    <td>{{ articleFournisseur.quantity }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>

