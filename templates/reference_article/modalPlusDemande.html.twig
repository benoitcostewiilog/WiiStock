<form method="" class="modal fade" id="modalPlusDemande" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Ajouter à une demande </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class='row'>
                    <p class='col-5'>Type de demande: </p>
                    <div class="col-6 input-group radio-btn">
                        <div>
                            <span class="btn not-active" data-toggle="demande" data-title="livraison"
                                onclick="toggleRadioButton($(this)), showDemande($(this))">Livraison</span><span
                                class="btn not-active" data-toggle="demande" data-title="collecte"
                                onclick="toggleRadioButton($(this), showDemande($(this)))">Collecte</span>
                        </div>
                    </div>
                </div>
                <div id='collecteShow' class='d-none form-group col-12'>
                    <div class="input-group mt-4 mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="">Mes demandes</label>
                        </div>
                        <select name="collecte" class="data" id="">
                            {% for collecte in collectes %}
                            <option value="{{collecte.id}}">
                                {{collecte.numero}}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div id="livraisonShow" class='d-none form-group col-12'>
                    <div class="input-group mt-4 mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="">Mes demandes</label>
                        </div>
                        <select name="livraison" class="data" id="">
                            {% for demande in demandes %}
                            <option value="{{demande.id}}">
                                {{demande.numero}}
                            </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="input-group mt-4 mb-4">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="">Quantité</label>
                        </div>
                        <input type="number" name="quantite" min='0' class="data" id="">
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitPlusDemande" name='refArticle' value='' type="button" data-dismiss="modal"
                class="btn btn-primary btn-success data">Ajouter</button>
            </div>
        </div>
    </div>
</form>