<form method="" class="modal fade" id="modalPlusDemande" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Ajouter Ã  une demande </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class='row mb-3'>
                    <label class='col'>Type de demande: </label>
                    <div class="col input-group radio-btn">
                        <div>
                            <span class="btn not-active" data-toggle="demande" data-title="livraison"
                            onclick="toggleRadioButton($(this)), ajaxPlusDemandeContent($(this), 'livraison')">Livraison</span><span
                            class="btn not-active" data-toggle="demande" data-title="collecte"
                            onclick="toggleRadioButton($(this)), ajaxPlusDemandeContent($(this), 'collecte')">Collecte</span>
                        </div>
                    </div>
                </div>
                <div class="plusDemandeContent clear row mb-3"></div>
                <div class="editChampLibre clear"></div>

                <div class="error-msg"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button type="button" id="submitPlusDemande" name='refArticle' value=''
                    class="btn btn-primary data">Ajouter</button>
                <button type="button" onclick="submitPlusAndGoToDemande($(this))" class="btn btn-primary">Ajouter et aller vers demande</button>
            </div>
        </div>
    </div>
</form>