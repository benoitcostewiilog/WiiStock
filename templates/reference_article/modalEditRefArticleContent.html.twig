<div class="row">
    <div class="form-group col-6">
        <label for="reference">Référence</label>
        <input class="form-control data" type="text" value="{{articleRef.reference}}" name="reference" id="reference">
    </div>
    <div class="form-group col-6">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Statut</label>
            <div>
                <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active"
                    onclick="toggleRadioButton($(this))">Actif</span><span
                    class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive"
                    onclick="toggleRadioButton($(this))">Inactif</span>
            </div>
            <input type="hidden" name="statut" id="statut" class="data" value="{{ statut }}">
        </div>
    </div>
    <div class="form-group col-6">
        <label for="libelle">Nom</label>
        <input class="form-control data" type="text" name="libelle" value="{{articleRef.libelle}}" id="libelle">
    </div>
    <div class="form-group col-6">
        <label for="type">Type</label>
        <select name="type" onclick="typeChoice($(this), '-edit', $('#typeContentEdit'))" onchange="displayRequireChamp($(this), 'edit')"
            class="form-control data d-block" id="typeEdit">
            {% set selected = articleRef.type is null ? 'selected' : '' %}
            <option {{ selected }} value=''> </option>

            {% for type in types %}
            {% set selected = '' %}
            {% if articleRef.type is not null %}{% set selected = articleRef.type.id == type.id ? 'selected' : '' %}{% endif %}
            <option {{ selected }} value="{{type.id}}">{{type.label}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group col-12">
        <div class="">
            <label>Nomenclature</label>
            <input id='commentaire' class="form-control data" name="commentaire" type="hidden"
                value='{{articleRef.commentaire}}'>
            <div class="editor-container" value="{{articleRef.commentaire}}"> {{articleRef.commentaire|raw}}</div>
        </div>
    </div>
</div>
<div class="row mt-4 mb-4">
    <div class="form-group col-6">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Gestion quantité</label>
            <div onclick="updateQuantityDisplay($(this))">
                <span class="btn {{ (articleRef.typeQuantite == 'reference') ? 'active' : 'not-active'}}"
                    data-toggle="type_quantite" data-title="reference" onclick="toggleRadioButton($(this))">Par
                    référence</span><span
                    class="btn {{ (articleRef.typeQuantite == 'article') ? 'active' : 'not-active'}}"
                    data-toggle="type_quantite" data-title="article" onclick="toggleRadioButton($(this))">Par
                    article</span>
            </div>
            <input type="hidden" name="type_quantite" class="data" id="type_quantite"
                value="{{ articleRef.typeQuantite }}">
        </div>
    </div>

    <div class="form-group col-3">
        {% set dnone = (articleRef.typeQuantite == 'reference') ? '' : 'd-none' %}

        <div class="input-group reference {{ dnone }}">

            <label class="mtb-auto mr-2" for="quantité">Quantité</label>
            <input class="form-control data" value='{{ articleRef.quantiteStock }}' type="number" min="0"
                name="quantite" id="quantité">
        </div>

        {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

        <div class="input-group article {{ dnone }}">
            <label class="mtb-auto mr-2">Quantité</label>
            <input class="form-control rounded" disabled value="{{ totalQuantity }}">
        </div>
    </div>
</div>

<!-- ARTICLES FOURNISSEURS -->
<div class="row">
    {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}
    <div class='col-12 article {{ dnone }} mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Quantité par articles fournisseurs </h3>
    </div>
    <div class="form-group col-12 d-none">
        <table class="table table-striped table-bordered w-auto m-auto">
            <tr>
                <th>Ref fournisseur</th>
                <th>Libellé</th>
                <th>Fournisseur</th>
                <th>Quantité</th>
            </tr>
            {% for articleFournisseur in articlesFournisseur %}
            <tr>
                <td>{{ articleFournisseur.fournisseurRef }}</td>
                <td>{{ articleFournisseur.label }}</td>
                <td>{{ articleFournisseur.fournisseurName }}</td>
                <td>{{ articleFournisseur.quantity }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

<!-- CHAMPS LIBRES -->
<div class="row mt-4">
    <div class='col-12 mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'>
            <i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Champs libres
        </h3>
    </div>
    <div class="form-group col-12 d-block" id='typeContentEdit'>
        {% for type in types %}
        <div {{ articleRef.type is defined and type.id == articleRef.type.id ? "class='d-block'" : "class='d-none'"}}
            id="{{type.id}}-edit">
            <div class="row mt-2">
                {% for champ in type.champsLibres %}

                {% set value = '' %}
                {% for row in valeurChampsLibre %}
                {% if (row.idCL == champ.id) %}{% set value = row.valeur %}{% endif %}
                {% endfor %}

                <div class="form-group col-6">

                    <label for="input">{{champ.label | capitalize}}</label>

                    {% if champ.typage == 'booleen' %}
                    {% set checked = (value == 1) ? 'checked' : '' %}
                    <label class="switch">
                        <input type="checkbox" class="data checkbox" {{ checked }} name="{{champ.id}}">
                        <span class="slider round"></span>
                    </label>

                    {% elseif champ.typage == 'number' %}
                    <input type="number" id="{{champ.label ~ 'edit'}}" class="form-control data" value="{{ value }}" name="{{champ.id}}" id="input">

                    {% elseif champ.typage == 'list' %}
                        {#TODO CG unTruc ??#}
                    <select class="form-control unTruc data"  id="{{champ.label ~ 'edit'}}" name="{{champ.id}}" id="input">
                        <option value="{{value}}">{{value}}
                        </option>
                        {% for elem in champ.elements %}
                        {% if value != elem %}
                        <option value="{{elem}}">{{elem}}</option>
                        {% endif %}
                        {% endfor %}
                        {% if value != "" %}
                        <option value=""></option>
                        {% endif %}
                    </select>
                    {% else %}
                    <input type="text"  id="{{champ.label ~ 'edit'}}" class="form-control data" value="{{ value }}" name="{{ champ.id }}" id="input">
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>