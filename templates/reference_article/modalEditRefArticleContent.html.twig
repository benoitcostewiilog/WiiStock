<div class="form-group col-6">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Libellé</label>
        </div>
        <input class="form-control data" type="text" name="libelle" value="{{articleRef.libelle}}" id="libelle">
    </div>
</div>
<div class="form-group col-6">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Référence</label>
        </div>
        <input class="form-control data" type="text" value="{{articleRef.reference}}" name="reference" id="reference">
    </div>
</div>
<div class="form-group col-6">
    <div class="input-group">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Quantité</label>
        </div>
        <input class="form-control data" value='{{articleRef.quantiteStock}}' type="number" min="0" name="quantite"
            id="quantité">
    </div>
</div>
<div class="form-group col-12">
    <p>Selectionner un type</p>
    <div class="nav nav-tabs myTab" id="myTab" role="tablist">
        {% for type in types %}
        <div class="nav-link" name='type' value='{{type.id}}' id='{{type.label}}-tab' data-toggle="tab"
            onclick="idType($(this))" href="#{{type.label}}" role="tab" aria-controls={{type.label}}
            aria-selected="true">{{type.label}}</div>
        {% endfor %}
    </div>

    <input type="hidden" id="idType" class="data" name="type" value='{{articleRef.type.id}}'>

    <div class="tab-content" id="myTabContent">
        {% for type in types %}
        <div class="tab-pane fade show" id="{{type.label}}" role="tabpanel" aria-labelledby="{{type.label}}-tab">
            <div class="row">
                {% for champ in type.champsLibres %}
                <div class="form-group col-6">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">{{champ.label}}</label>
                        </div>
                        {% if champ.typage == 'booleen' %}
                        <input type="checkbox" class="form-control data" name={{champ.id}}
                            value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                            {% endif %} {% endfor %}>
                        {% elseif champ.typage == 'number' %}
                        <input type="number" class="form-control data" name={{champ.id}}
                            value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                            {% endif %} {% endfor %}>
                        {% else %}
                        <input class="form-control data" type="text" name={{champ.id}}
                            value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                            {% endif %} {% endfor %}>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>