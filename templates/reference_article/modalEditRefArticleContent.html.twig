{% set editable = hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE')) %}
{% set disabled = editable ? '' : 'disabled' %}

<div class="row">
    <div class="form-group col-6">
        <label for="reference">Référence</label>
        <input {{ disabled }} class="form-control data" type="text" value="{{articleRef.reference}}" name="reference" id="reference">
    </div>
    <div class="form-group col-6 m-auto">
        {% if editable and not isADemand %}
            <div class="input-group radio-btn">
                <label for="statut" class="mtb-auto mr-2 ">Statut</label>
                <div>
                    <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active"
                        {% if editable %}onclick="toggleRadioButton($(this))"{% endif %}>Actif</span><span
                            class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive"
                        {% if editable %}onclick="toggleRadioButton($(this))"{% endif %}>Inactif</span>
                </div>
                <input type="hidden" name="statut" id="statut" class="data" value="{{ statut }}">
            </div>
        {% endif %}
    </div>
    <div class="form-group col-6">
        <label for="libelle">Nom</label>
        <input {{ disabled }} class="form-control data" type="text" name="libelle" value="{{articleRef.libelle}}" id="libelle">
    </div>
    <div class="form-group col-6">
        <label for="type">Type</label>
        <select {{ disabled }} name="type" onclick="typeChoice($(this), '-edit', $('#typeContentEdit'))"
            onchange="displayRequireChamp($(this), 'edit')" class="form-control data d-block" id="typeEdit">

            {% set selected = articleRef.type is null ? 'selected' : '' %}
            <option {{ selected }} value=''> </option>

            {% for type in typeChampsLibres %}
            {% set selected = '' %}
            {% if articleRef.type is not null %}{% set selected = articleRef.type.id == type.typeId ? 'selected' : '' %}{% endif %}
            <option {{ selected }} value="{{type.typeId}}">{{type.typeLabel}}</option>
            {% endfor %}

        </select>
    </div>
    <div class="form-group col-12">
        <div class="">
            <label>Nomenclature</label>
            <input {{ disabled }} id='commentaire' class="form-control data" name="commentaire" type="hidden"
                value='{{articleRef.commentaire}}'>
            <div class="editor-container form-control comment" value="{{articleRef.commentaire}}"> {{articleRef.commentaire|raw}}</div>
        </div>
    </div>
</div>
<div class="row mt-4 mb-4">
    {% if editable and not isADemand %}
        <div class="form-group col-6">
            <div class="input-group radio-btn">
                <label for="statut" class="mtb-auto mr-2">Gestion quantité</label>
                <div onclick="updateQuantityDisplay($(this))">
                    <span class="btn {{ (articleRef.typeQuantite == 'reference') ? 'active' : 'not-active'}}"
                        data-toggle="type_quantite" data-title="reference" {% if editable %}onclick="toggleRadioButton($(this))"{% endif %}>Par
                        référence</span><span
                        class="btn {{ (articleRef.typeQuantite == 'article') ? 'active' : 'not-active'}}"
                        data-toggle="type_quantite" data-title="article" {% if editable %}onclick="toggleRadioButton($(this))"{% endif %}>Par
                        article</span>
                </div>
                <input type="hidden" name="type_quantite" class="data" id="type_quantite"
                    value="{{ articleRef.typeQuantite }}">
            </div>
        </div>
    {% endif %}

    <div class="form-group col-3">
        {% set dnone = (articleRef.typeQuantite == 'reference') ? '' : 'd-none' %}

        <div class="input-group reference {{ dnone }}">

            <label class="mtb-auto mr-2" for="quantite">Quantité</label>
            <input {{ disabled }} class="form-control data" value='{{ articleRef.quantiteStock }}' type="number" min="0"
                name="quantite" id="quantite">
        </div>

        {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

        <div class="input-group article {{ dnone }}">
            <label class="mtb-auto mr-2">Quantité</label>
            <input class="form-control rounded" disabled value="{{ totalQuantity }}">
        </div>
    </div>
</div>

<!-- ARTICLES FOURNISSEURS -->
<div class="row">
    {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

    <div class='col-12 article {{ dnone }} mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Quantité par articles fournisseurs </h3>
    </div>
    <div class="form-group col-12 blocVisible d-none">
        <table class="table table-striped table-bordered w-auto m-auto">
            <tr>
                <th>Ref fournisseur</th>
                <th>Libellé</th>
                <th>Fournisseur</th>
                <th>Quantité</th>
            </tr>
            {% for articleFournisseur in articlesFournisseur %}
          
            <tr>
                <td>{{ articleFournisseur.fournisseurRef }}</td>
                <td>{{ articleFournisseur.label }}</td>
                <td>{{ articleFournisseur.fournisseurName }}</td>
                <td>{{ articleFournisseur.quantity }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

<!-- CHAMPS LIBRES -->
<div class="row mt-4">
    <div class='col-12 mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'>
            <i class="fas fa-sort-up d-block mr-2"></i>
            <i class="fas fa-sort-down d-none  mr-2"></i>
            Champs libres
        </h3>
    </div>
    <div class="form-group col-12 blocVisible d-block" id='typeContentEdit'>
        {% for typeChampLibre in typeChampsLibres %}
        <div {{ articleRef.type is defined and typeChampLibre.typeId == articleRef.type.id ? "class='d-block'" : "class='d-none'"}}
            id="{{typeChampLibre.typeId}}-edit">
            <div class="row mt-2">
                {% for champLibre in typeChampLibre.champsLibres %}
                <div class="form-group col-6">
                    <label for="input">{{ champLibre.label | capitalize}}</label>

                    {% if champLibre.typage == 'booleen' %}
                    {% set checked = ((champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : 0) == 1) ? 'checked' : '' %}
                    <label class="switch">
                        <input {{ disabled }} type="checkbox" class="data checkbox" { checked } name="{{ champLibre.id}}">
                        <span class="slider round"></span>
                    </label>

                    {% elseif  champLibre.typage == 'number' %}
                    <input {{ disabled }} type="number" id="{{ champLibre.label ~ 'edit'}}" class="form-control data"
                        value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}" name="{{ champLibre.id}}" id="input">

                    {% elseif  champLibre.typage == 'list' %}
                    <select class="form-control data" id="{{ champLibre.label ~ 'edit'}}" name="{{ champLibre.id}}"
                        id="input">
                        <option value="">aucune selection...</option>
                        {% for elem in  champLibre.elements %}
                        {% set selected = elem ==( champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' )? 'selected' : '' %}
                        <option value="{{elem}}" {{ selected }}>{{elem}}</option>
                        {% endfor %}
                    </select>

                    {% elseif champLibre.typage == 'text' %}
                    <input {{ disabled }} type="text" id="{{ champLibre.label ~ 'edit'}}" class="form-control data"
                        value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}"
                        name="{{  champLibre.id }}" id="input">

                    {% elseif champLibre.typage == 'date' %}
                    <input {{ disabled }} type="date" name="{{ champLibre.id }}" id="{{champLibre.label ~ 'edit'}}" class="form-control data"
                       value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}">

                    {% else %}
                        <input disabled>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<!-- Reference Fournisseur -->
<div class="row mt-4">
    <div class='col-12 mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'>
            <i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Articles Fournisseurs
        </h3>
    </div>
    <div class="form-group blocVisible col-12 d-none">
        <div class="form-group col-1">
            <span class="btn btn-primary" onclick="addFournisseurEdit($(this))"><i class="fa fa-plus"></i></span>
        </div>
        <div class="form-group col-12 d-block" id='articleFournisseursEdit'>
            {% include 'reference_article/fournisseurArticleContent.html.twig' %}
        </div>
    </div>
</div>
<div class="error-msg"></div>