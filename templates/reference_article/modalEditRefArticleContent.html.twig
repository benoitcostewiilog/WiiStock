<div class="row">
    <div class="form-group col-6">
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text" for="reference">Référence</label>
            </div>
            <input class="form-control data" type="text" value="{{articleRef.reference}}" name="reference" id="reference">
        </div>
    </div>

    <div class="form-group col-6">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Statut</label>
            <div>
                <span class="btn {{ statut == 1 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="active" onclick="toggleRadioButton($(this))">Actif</span><span class="btn {{ statut == 0 ? 'active' : 'not-active'}}" data-toggle="statut" data-title="inactive" onclick="toggleRadioButton($(this))">Inactif</span>
            </div>
            <input type="hidden" name="statut" id="statut" class="data" value="{{ statut }}">
        </div>
    </div>

    <div class="form-group col-6">
        <div class="input-group">
            <div class="input-group-prepend">
                <label class="input-group-text" for="libelle">Nom</label>
            </div>
            <input class="form-control data" type="text" name="libelle" value="{{articleRef.libelle}}" id="libelle">
        </div>
    </div>
</div>
<div class="row mt-4 mb-4">
    <div class="form-group col-6">
        <div class="input-group radio-btn">
            <label for="statut" class="mtb-auto mr-2">Gestion quantité</label>
            <div onclick="updateQuantityDisplay($(this))">
                <span class="btn {{ (articleRef.typeQuantite == 'reference') ? 'active' : 'not-active'}}" data-toggle="type_quantite" data-title="reference" onclick="toggleRadioButton($(this))">Par référence</span><span class="btn {{ (articleRef.typeQuantite == 'article') ? 'active' : 'not-active'}}" data-toggle="type_quantite" data-title="article" onclick="toggleRadioButton($(this))">Par article</span>
            </div>
            <input type="hidden" name="type_quantite" class="data" id="type_quantite" value="{{ articleRef.typeQuantite }}">
        </div>
    </div>

    <div class="form-group col-3">
        {% set dnone = (articleRef.typeQuantite == 'reference') ? '' : 'd-none' %}

        <div class="input-group reference {{ dnone }}">
            <div class="input-group-prepend">
                <label class="input-group-text" for="quantité">Quantité</label>
            </div>
            <input class="form-control data" value='{{ articleRef.quantiteStock }}' type="number" min="0" name="quantite" id="quantité">
        </div>

        {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

        <div class="input-group article {{ dnone }}">
        {% set quantity = 0 %}
        {% for articleFournisseur in articleRef.articlesFournisseur %}
            {% set quantity = quantity + articleFournisseur.fournisseur.articles|length %}

        {% endfor %}

            <label class="mtb-auto mr-2">Quantité</label>
            <input class="form-control rounded" disabled value="{{ quantity }}">
        </div>
    </div>
</div>
<!-- ARTICLES FOURNISSEURS -->
<div class="row">
    {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}
    <div class='col-12 article {{ dnone }}' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Quantité par articles fournisseurs </h3>
    </div>
    <div class="form-group col-12 d-none">
        <table class="table table-striped table-bordered w-auto m-auto">
            <tr>
                <th>Ref fournisseur</th>
                <th>Libellé</th>
                <th>Fournisseur</th>
                <th>Quantité</th>
            </tr>
        {% for articleFournisseur in articleRef.articlesFournisseur %}
            <tr>
                <td>{{ articleFournisseur.fournisseur.codeReference }}</td>
                <td>{{ articleFournisseur.label }}</td>
                <td>{{ articleFournisseur.fournisseur.nom }}</td>
                <td>{{ articleFournisseur.fournisseur.articles|length }}</td>
            </tr>
        {% endfor %}
        </table>
    </div>

    <input type="hidden" id="idType" class="data" name="type" value='{{articleRef.type ? articleRef.type.id : null}}'>

    <div class="tab-content" id="myTabContent">
        {% for type in types %}
            <div class="tab-pane fade show" id="{{type.label}}" role="tabpanel" aria-labelledby="{{type.label}}-tab">
                <div class="row">
                    {% for champ in type.champsLibres %}
                        <div class="form-group col-6">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">{{champ.label}}</label>
                                </div>
                                {% if champ.typage == 'booleen' %}
                                    <input type="checkbox" class="form-control data" name={{champ.id}}
                                    value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                                    {% endif %} {% endfor %}>
                                {% elseif champ.typage == 'number' %}
                                    <input type="number" class="form-control data" name={{champ.id}}
                                    value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                                    {% endif %} {% endfor %}>
                                {% else %}
                                    <input class="form-control data" type="text" name={{champ.id}}
                                    value={% for row in valeurChampsLibre %} {% if row.label == champ.label %} {{row.valeur}}
                                    {% endif %} {% endfor %}>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- CHAMPS LIBRES -->
<div class="row mt-4">
    <div class='col-12' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Champs libres</h3>
    </div>
    <div class="form-group col-12 d-none">
        <div class="nav nav-tabs myTab" id="myTab" role="tablist">
            {% for type in types %}
                <div class="nav-link pointer" name='type' value='{{type.id}}' id='{{type.label}}-tab'
                     data-toggle="tab" href="#{{type.label}}-new" role="tab" aria-controls={{type.label}}
                     aria-selected="true">
                    {{type.label}}</div>
            {% endfor %}
        </div>
        <div class="tab-content" id="myTabContent">
            {% for type in types %}
                <div class="tab-pane fade show" id="{{type.label}}-new" role="tabpanel"
                     aria-labelledby="{{type.label}}-tab">
                    <div class="row">
                        {% for champ in type.champsLibres %}
                            {#{{ dump(champ.valeurChampsLibres.id) }}#}
                            {#{{ dump(articleRef.valeurChampsLibres.id) }}#}
                            <div class="form-group col-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text pointer" for="input">
                                            {{champ.label}}
                                        </label>
                                    </div>
                                    {% if champ.typage == 'booleen' %}
                                        <input type="checkbox" class="form-control data checkbox" name="{{champ.id}}" id="input">
                                    {% elseif champ.typage == 'number' %}
                                        <input type="number" class="form-control data"
                                               value="{{champ.defaultValue}}" name="{{champ.id}}">
                                    {% else %}
                                        <input class="form-control data" type="text" value="{{champ.defaultValue}}" name='{{ champ.id }}' id="input">
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>