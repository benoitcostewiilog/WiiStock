<div class="btn filter col-auto has-tooltip" title="{{ filter.champFixe | capitalize }} : {{ filter.value }}">
    <input hidden value="{{ filter.id }}" class="filter-id">
    <div class="row align-items-center">
        {% if filter.champFixe is not null %}
            <div class="col">
                <span class="bold">
                    {{ filter.champFixe | capitalize }} : {{ filter.value }}</span><br>
            </div>
            <div class="col-auto">
                <i class="fas fa-times remove-filter"></i>
            </div>
        {% else %}
            <div class="col">
                {% if (filter.value == 'on' or filter.value == '1') %}
                    {% set value = 'oui' %}
                {% elseif (filter.value == '') %}
                    {% set value = 'non' %}{% else %}
                    {% set value = filter.value %}
                {% endif %}
                <span class="bold">
                    {{ filter.champLibre.label|capitalize }} : {{ value }}</span><br>
            </div>
            <div class="col-auto">
                <i class="fas fa-times remove-filter"></i>
            </div>

        {% endif %}
    </div>
</div>
