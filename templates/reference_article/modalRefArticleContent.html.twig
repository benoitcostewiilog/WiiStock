{% set editable = hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::EDIT')) %}
{% set disabled = editable ? '' : 'disabled' %}

<div class="row">
    <div class="form-group col-6">
        <label for="reference">
            Référence*
        </label>
        <input {{ disabled }} class="form-control data needed" type="text" value="{{ articleRef.reference }}" name="reference" maxlength="21"
                              id="reference">
    </div>
    <div class="form-group col-6">
        <label for="libelle">Nom*</label>
        <input {{ disabled }} class="form-control data needed" type="text" name="libelle" value="{{ articleRef.libelle }}"
                              id="libelle">
    </div>
    <div class="form-group col-6">
        {% if isADemand is not defined or not isADemand %}
            <div class="input-group radio-btn">
                <label for="statut" class="mtb-auto mr-2">Statut</label>
                <div>
                    {% set actif = (statut == constant('App\\Entity\\ReferenceArticle::STATUT_ACTIF')) ? 'active' : 'not-active' %}
                    {% set inactif = (statut == constant('App\\Entity\\ReferenceArticle::STATUT_INACTIF')) ? 'active' : 'not-active' %}

                    <span class="btn {{ actif }} {{ disabled }}" data-toggle="statut-edit"
                          data-title="{{ constant('App\\Entity\\ReferenceArticle::STATUT_ACTIF') }}"
                          {% if editable %}onclick="toggleRadioButton($(this))" {% endif %}>
                        {{ constant('App\\Entity\\ReferenceArticle::STATUT_ACTIF') }}
                    </span><span class="btn {{ inactif }} {{ disabled }}" data-toggle="statut-edit"
                                 data-title="{{ constant('App\\Entity\\ReferenceArticle::STATUT_INACTIF') }}"
                                 {% if editable %}onclick="toggleRadioButton($(this))" {% endif %}>
                        {{ constant('App\\Entity\\ReferenceArticle::STATUT_INACTIF') }}
                    </span>
                </div>
                <input type="hidden" name="statut" id="statut-edit" class="data" value="{{ statut }}">
            </div>
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="form-group col-4">
        <label for="type">Type*</label>
        <select {{ disabled }} name="type" onclick="typeChoice($(this), '-edit', $('#typeContentEdit'))"
                               onchange="toggleRequiredChampsLibres($(this), 'edit')" class="form-control data needed d-block" id="typeEdit">

            {% set selected = articleRef.type is null ? 'selected' : '' %}
            <option {{ selected }} value=''></option>

            {% for type in typeChampsLibres %}
                {% set selected = '' %}
                {% if articleRef.type is not null %}{% set selected = articleRef.type.id == type.typeId ? 'selected' : '' %}{% endif %}
                <option {{ selected }} value="{{ type.typeId }}">{{ type.typeLabel }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group col-4">
        <label>Catégorie d'inventaire</label>
        {% if editable %}
            <select name="categorie" class="form-control data {{ disabled }}">
                {% set selectedCat = articleRef.category is null ? 'selected' : '' %}
                <option {{ selectedCat }} value=''></option>
                {% if categories is defined %}
                    {% for category in categories %}
                        {% set selectedCat = '' %}
                        {% if articleRef.category is not null %}{% set selectedCat = articleRef.category.id == category.id ? 'selected' : '' %}{% endif %}
                        <option {{ selectedCat }} value="{{ category.id }}">{{ category.label }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        {% else %}
            <input {{ disabled }} class="form-control" type="text" value="{{ articleRef.category ? articleRef.category.label }}">
        {% endif %}
    </div>
    <div class="form-group col-4">
        <label>Date dernier inventaire</label>
        <input name="categorie" class="form-control" disabled
               value="{{ articleRef.dateLastInventory ? articleRef.dateLastInventory | date('d/m/Y') }}">
    </div>
</div>
<div class="row">
    <div class="form-group col-12">
        <div class="">
            <label>Nomenclature</label>
            <input id='commentaire' class="form-control data" name="commentaire" type="hidden" value='{{ articleRef.commentaire }}'>

            {% set disableNomenclature = (isADemand is defined and isADemand) or disabled ? 'disabled' %}
            <div class="form-control editor-container-edit comment {{ disableNomenclature }}">
                {{ articleRef.commentaire|raw }}
            </div>

        </div>
    </div>
</div>

{% set dnoneRef = (articleRef.typeQuantite == 'reference') ? '' : 'd-none' %}
{% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}
<div class="row mt-4 mb-3">
    {% if isADemand is not defined or not isADemand %}
        <div class="form-group col-4">
            <div class="radio-btn">
                <label for="statut" class="mtb-auto mr-2">Gestion quantité</label>
                <div class="btn-group">
                    <span class="btn {{ (articleRef.typeQuantite == 'reference') ? 'active' : 'not-active'}} disabled cursor-default"
                          data-title="reference">Par référence</span>
                    <span class="btn {{ (articleRef.typeQuantite == 'article') ? 'active' : 'not-active'}} disabled cursor-default"
                          data-toggle="type_quantite" data-title="article">
                        Par article
                    </span>
                </div>

                <input type="hidden" name="type_quantite" class="data type_quantite" value="{{ articleRef.typeQuantite }}">
            </div>
        </div>
    {% endif %}

    <div class="form-group mt-4 mr-5">
        <div class="article {{ dnone }}">
            <label for="urgence">Urgence ? </label>
            <label class="switch">
                <input class="checkbox" type="checkbox" onchange="toggleEmergency($(this))" name="urgence"
                       value="{{ articleRef.isUrgent }}" {{ articleRef.isUrgent ? 'checked' : '' }}>
                <span class="slider round"></span>
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="emergency-comment {{ not articleRef.isUrgent ? 'd-none' }}">
            <label for="emergency-comment-input">Commentaire de l'urgence</label>
            <input class="form-control data" type="text" name="emergency-comment-input" value="{{ articleRef.emergencyComment }}">
        </div>
    </div>
</div>

<div class="row mt-4 mb-3">

    <div class="form-group col-4 reference {{ dnoneRef }}">
        {% set emplacementId = (articleRef.emplacement is null) ? '' : articleRef.emplacement.id %}
        {% set emplacementLabel = (articleRef.emplacement is null) ? '': articleRef.emplacement.label %}

        <label>Emplacement*</label>
        <select {{ disabled }} name="emplacement" id="emplacement"
                               class="form-control ajax-autocompleteEmplacement-edit data {{ dnoneRef == 'd-none' ? '' : 'needed' }}">
            <option value="{{ emplacementId }}">{{ emplacementLabel }}</option>
        </select>
    </div>

    <div class="form-group col-4 reference {{ dnoneRef }}">
        <label class="mtb-auto mr-2" for="quantite">Quantité</label>
        {# si on est sur une demande, la quantité ne doit pas être modifiée #}
        {% set disabledOnDemand = isADemand is defined and isADemand ? 'disabled' : disabled %}
        <input {{ disabledOnDemand }} class="form-control rounded data" value='{{ articleRef.quantiteStock }}' type="number" min="0"
                                      name="quantite" id="quantite">
    </div>

    <div class="form-group col-4 article {{ dnone }}">
        <label class="mtb-auto mr-2">Quantité</label>
        <input class="form-control rounded" disabled value="{{ totalQuantity }}">
    </div>

    <div class="form-group col-4 reference {{ dnoneRef }}">
        <label for="prix">Prix Unitaire (€)</label>
        <input class="form-control data" type="number" name="prix" min="0" step="0.01" value="{{ articleRef.prixUnitaire }}" {{ disabled }}>
    </div>

    <div class="form-group col-4">
        <div class="form-group w-100">
            <div>
                <label for="limitWarning">Seuil d'alerte</label>
                <input class="form-control data" type="number" name="limitWarning" min="0" value="{{ articleRef.limitWarning }}" {{ disabled }}>
            </div>
        </div>
    </div>
    <div class="form-group col-4">
        <div class="form-group w-100">
            <div>
                <label for="limitSecurity">Seuil de sécurité</label>
                <input class="form-control data" type="number" name="limitSecurity" min="0" value="{{ articleRef.limitSecurity }}" {{ disabled }}>
            </div>
        </div>
    </div>
</div>

<!-- ARTICLES FOURNISSEURS -->
<div class="row">
    {% set dnone = (articleRef.typeQuantite == 'article') ? '' : 'd-none' %}

    <div class='col-12 article {{ dnone }} mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'><i class="fas fa-sort-up d-none mr-2"></i>
            <i class="fas fa-sort-down d-block mr-2"></i>
            Quantité par articles fournisseurs </h3>
    </div>
    <div class="form-group col-12 blocVisible d-none">
        <table class="table table-striped table-bordered w-auto m-auto">
            <tr>
                <th>Ref fournisseur</th>
                <th>Libellé</th>
                <th>Code Fournisseur</th>
                <th>Quantité</th>
            </tr>
            {% for articleFournisseur in articlesFournisseur %}

                <tr>
                    <td>{{ articleFournisseur.fournisseurRef }}</td>
                    <td>{{ articleFournisseur.label }}</td>
                    <td>{{ articleFournisseur.fournisseurName }}</td>
                    <td>{{ articleFournisseur.quantity }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>

<!-- CHAMPS LIBRES -->
<div class="row mt-4">
    <div class='col-12 mb-2' onclick="visibleBlockModal($(this))">
        <h3 class='d-flex pointer'>
            <i class="fas fa-sort-up d-block mr-2"></i>
            <i class="fas fa-sort-down d-none  mr-2"></i>
            Champs libres
        </h3>
    </div>
    <div class="form-group col-12 blocVisible d-block" id='typeContentEdit'>
        {% for typeChampLibre in typeChampsLibres %}
            <div {{ articleRef.type is not empty and typeChampLibre.typeId == articleRef.type.id ? "class='d-block'" : "class='d-none'" }}
                id="{{ typeChampLibre.typeId }}-edit">
                <div class="row mt-2">
                    {% for champLibre in typeChampLibre.champsLibres %}
                        <div class="form-group col-6">
                            <label for="input">{{ champLibre.label | capitalize }}</label>

                            {% if champLibre.typage == constant('App\\Entity\\ChampLibre::TYPE_BOOL') %}
                                {% set checked = ((champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : 0) == 1) ? 'checked' : '' %}
                                <label class="switch">
                                    <input {{ disabled }} type="checkbox" class="data checkbox" {{ checked }}
                                                          name="{{ champLibre.id }}">
                                    <span class="slider round"></span>
                                </label>

                            {% elseif  champLibre.typage == 'number' %}
                                <input {{ disabled }} type="number" id="{{ champLibre.id ~ 'edit' }}" class="form-control data"
                                                      value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}"
                                                      name="{{ champLibre.id }}" id="input">

                            {% elseif  champLibre.typage == 'list' %}
                                <select {{ disabled }} class="form-control data" id="{{ champLibre.id ~ 'edit' }}"
                                                       name="{{ champLibre.id }}" id="input">
                                    <option value="">aucune selection...</option>
                                    {% for elem in  champLibre.elements %}
                                        {% set selected = elem ==( champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' )? 'selected' : '' %}
                                        <option value="{{ elem }}" {{ selected }}>{{ elem }}</option>
                                    {% endfor %}
                                </select>
                            {% elseif champLibre.typage == 'list multiple' %}
                                <select {{ disabled }} id="{{ champLibre.id ~ 'edit' }}" class="list-multiple form-control data"
                                                       name="{{ champLibre.id }}" multiple="multiple">
                                    {% for elem in champLibre.elements %}
                                        {% set selected = (champLibre.valeurChampLibre and elem in (champLibre.valeurChampLibre.valeur | split(';'))) ? 'selected' : '' %}
                                        <option value="{{ elem }}" {{ selected }}>{{ elem }}</option>
                                    {% endfor %}
                                </select>

                            {% elseif champLibre.typage == 'text' %}
                                <input {{ disabled }} type="text" id="{{ champLibre.id ~ 'edit' }}" class="form-control data"
                                                      value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}"
                                                      name="{{ champLibre.id }}" id="input">

                            {% elseif champLibre.typage == 'date' %}
                                <input {{ disabled }}
                                    type="date"
                                    name="{{ champLibre.id }}"
                                    id="{{ champLibre.id ~ 'edit' }}"
                                    class="form-control data"
                                    value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}"/>
                            {% elseif champLibre.typage == 'datetime' %}
                                <input {{ disabled }}
                                    type="datetime-local"
                                    name="{{ champLibre.id }}"
                                    id="{{ champLibre.id ~ 'edit' }}"
                                    class="form-control data"
                                    value="{{ champLibre.valeurChampLibre.valeur is defined ? champLibre.valeurChampLibre.valeur : '' }}"/>
                            {% else %}
                                <input disabled>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
