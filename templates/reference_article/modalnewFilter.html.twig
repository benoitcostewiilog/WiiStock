<div class="modal fade" id="modalNewFilter" tabindex="-1" role="dialog" aria-labelledby="modalNewFilterLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNewFilterLabel">Ajout d'un filtre</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="field">Champ</label>
                    <select class="form-control data needed" id="field" name="field" onchange="displayFilterValue($(this))">
                        <option disabled selected> </option>
                        {% for champ in champs %}
                            {#TODO CG ou supprimer cot√© controller ?#}
                            {% if (champ.label != 'Actions') %}
                                {% set value = (champ.id == 0) ? champ.label : champ.id %}
                                <option value="{{ value }}" data-type="{{ champ.typage }}">{{ champ.label }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="value" class="valueLabel">Contient</label>
                    <input type="text" class="form-control data needed" id="value" name="value">
                </div>

                <div class="error-msg"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" id="submitNewFilter">Appliquer</button>
            </div>
        </div>
    </div>
</div>