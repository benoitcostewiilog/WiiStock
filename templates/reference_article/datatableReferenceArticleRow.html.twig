<div class="d-flex">

    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::CREATE_EDIT')) %}
    <div id='edit{{idRefArticle}}'>
        <div class="btn btn-col-action" data-id='{{ idRefArticle }}' data-target='#modalEditRefArticle' data-toggle='modal'
        onclick="editRow($(this), Routing.generate('reference_article_edit_api', true), $('#modalEditRefArticle'), $('#submitEditRefArticle'), true),
        clearDiv(), toggleRequiredChampsLibres($(this), 'edit'), initRequiredChampsFixes($(this))">
            <i class='fas fa-pencil-alt'></i>
        </div>
    </div>
    {% else %}
    <div>
        <div class="btn btn-col-action" data-id='{{ idRefArticle }}' data-target='#modalShowRefArticle' data-toggle='modal'
        onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    </div>
    {% endif %}

    {% if hasRight(constant('App\\Entity\\Menu::STOCK'), constant('App\\Entity\\Action::DELETE')) %}
    <div>
        <div class="btn btn-col-action" id='delete{{idRefArticle}}'
             onclick="deleteRow($(this), $('#modalDeleteRefArticle'), $('#submitDeleteRefArticle'))"
             data-id='{{ idRefArticle }}' data-target='#modalDeleteRefArticle' data-toggle='modal'>
            <i class='fas fa-trash'></i>
        </div>
    </div>
    {% endif %}

    <div>
        <div class="btn btn-col-action"
             onclick="showRowMouvements($(this))" data-togggle='tooltip' title='mouvements de stock'
             data-id='{{ idRefArticle }}' data-target='#modalShowMouvements' data-toggle='modal'>
            <i class='fas fa-list'></i>
        </div>
    </div>

    {% if isActive %}
    <div>
        <div class="btn btn-col-action"
             onclick="clearModal('#modalPlusDemande'), clearDemandeContent(), recupIdRefArticle($(this))" data-id='{{ idRefArticle }}'
             data-target='#modalPlusDemande' data-toggle='modal'
             data-togggle='tooltip' title='ajouter Ã  une demande'>
            <i class="fas fa-plus"></i>
        </div>
    </div>
    {% endif %}
</div>