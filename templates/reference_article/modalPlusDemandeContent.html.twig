{% if demandeType == 'collecte' %}
    <div id='collecteShow' class='d-none col-12'>
        <div class="form-group w-100 mt-2">
            <label for="">Mes demandes</label>
            <select name="collecte" class="form-control ajax-autocomplete-article data select2">
                {% for collecte in collectes %}
                    <option value="{{collecte.id}}">
                        {{collecte.numero}}
                    </option>
                {% endfor %}
            </select>
        </div>
        {{ articleOrNo | raw }}
    </div>
{% elseif demandeType == 'livraison' %}
    <div id="livraisonShow" class='d-none col-12'>
        <div class="form-group w-100 mt-2">
            <label for="">Mes demandes</label>
            <select name="livraison" class="form-control ajax-autocomplete-article data select2">
                {% for demande in demandes %}
                    <option value="{{demande.id}}">
                        {{demande.numero}}
                    </option>
                {% endfor %}
            </select>
        </div>
        {{ articleOrNo | raw }}
    </div>
{% elseif demandeType == 'transfert' %}
    <div id="transfertShow" class='d-none col-12'>
        <div class="form-group w-100 mt-2">
            <label for="transfert">Mes demandes</label>
            <select name="transfert" class="form-control ajax-autocomplete-article data select2">
                {% for transfer in transfers %}
                    <option value="{{transfer.id}}">
                        {{transfer.number}}
                    </option>
                {% endfor %}
            </select>
        </div>
        {{ articleOrNo | raw }}
    </div>
{% endif %}
