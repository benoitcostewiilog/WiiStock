{% extends 'layout.html.twig' %}

{% block title %}Stock / En cours{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-10"><h1>Emplacements d'En cours : </h1></div>
        <div class="col-2"><h2>Actualisé le {{ "now"|date("d/m/Y à H:i", "Europe/Paris") }}</h2></div>
    </div>
    <br>
    <div class="row">
        {% for  emplacement in emplacements %}
            <div class="col-6">
                <h1>En cours - {{ emplacement.label }}</h1>
                <table class="table table-striped table-bordered encours-table" id="{{ emplacement.id }}">
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascript %}
<script src = "{{ asset('js/enCours.js') }}?{{ date().timestamp }}"></script>
{% endblock %}