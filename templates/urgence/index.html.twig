{% extends 'layout.html.twig' %}

{% block title %}{{ 'urgences.urgences'|trans|capitalize }}{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersUrgence.html.twig' with {
        page: 'PAGE_URGENCES',
        tableSelector: '#tableUrgences'
    } %}
{% endblock %}

{% block page_content %}
    <h1 title="urgences">{{ 'urgences.urgences'|trans|capitalize }}</h1>
    <a href="" data-toggle="modal" data-target="#modalNewUrgence" class="btn btn-primary">
        <span class="fa fa-plus mr-2"></span><span title="nouvelle urgence">{{ 'urgences.nouvelle urgence'|trans|capitalize }}</span>
    </a>
    <table id="tableUrgences" class="table table-striped table-bordered w-100">
    </table>
    {% include 'urgence/modalNewUrgence.html.twig' %}
    {% include 'urgence/modalDeleteUrgence.html.twig' %}
    {% include 'urgence/modalEditUrgence.html.twig' %}

    <input hidden id="dateBeginTranslation" value="{{ 'urgences.date de début'|trans|capitalize }}">
    <input hidden id="dateEndTranslation" value="{{ 'urgences.date de fin'|trans|capitalize }}">
    <input hidden id="numComTranslation" value="{{ 'urgences.numéro de commande'|trans|capitalize }}">
    <input hidden id="buyerTranslation" value="{{ 'urgences.acheteur'|trans|capitalize }}">
    <input hidden id="arrivalTranslation" value="{{ "arrivage.arrivage"|trans|capitalize }}">

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src = "{{ asset('js/urgence.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
