<form method="" class="modal fade" id="modalNewUrgence" role="dialog" aria-labelledby="dataModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">{{ 'urgences.nouvelle urgence'|trans|capitalize }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body modal-input container-fluid">
                <div class="form-group">
                    <label for="dateStart">{{ 'urgences.date de début'|trans|capitalize }}*</label>
                    <input type="text" class="form-control cursor-default data needed" id="dateStart" name="dateStart" placeholder="jj/mm/aaaa">
                </div>

                <div class="form-group">
                    <label for="dateEnd">{{ 'urgences.date de fin'|trans|capitalize }}*</label>
                    <input type="text" class="form-control cursor-default data needed" id="dateEnd" name="dateEnd" placeholder="jj/mm/aaaa">
                </div>

                <div class="form-group needed">
                    <label for="source">{{ 'urgences.numéro de commande'|trans|capitalize }}*</label>
                    <input class="form-control data needed" name="commande">
                </div>

                <div class="form-group">
                    <label for="acheteur">{{ 'urgences.acheteur'|trans|capitalize }}</label>
                    <select name="acheteur"
                            class="form-control input-sm ajax-autocomplete-user data ajax-autocomplete w-100">
                    </select>
                </div>
            </div>

            <div class="error-msg p-4"></div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                <button id="submitNewUrgence" type="button" class="btn btn-success">Enregistrer</button>
            </div>
        </div>
    </div>
</form>
