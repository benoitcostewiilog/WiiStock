{% extends 'layout.html.twig' %}

{% block title %}Ordre | Collecte | Details{% endblock %}

{% block page_content %}
    <div class="m-4">
        <div class="row">
            <div class="col-12">
                <div class="zone-entete">
                    {% include 'ordre_collecte/ordre-collecte-show-header.html.twig' with {
                        showDetails: detailsConfig,
                        collecte: collecte
                    } %}
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div class="wii-page-card">
                    <table id="tableArticle" class="table w-100">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <input id="collecte-id" hidden value="{{ collecte.id }}">

    {% include 'ordre_collecte/modalEditArticle.html.twig' %}
    {% include 'reference_article/modalShowRefArticle.html.twig' %}
    {% include 'article/modalShowArticle.html.twig' %}
    {% include 'ordre_collecte/modalDeleteOrdreCollecte.html.twig' %}
    {% include 'ordre_collecte/modalFinishCollecte.html.twig' %}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ordre-collecte-show.js') }}?{{ date().timestamp }}"></script>
{% endblock %}
