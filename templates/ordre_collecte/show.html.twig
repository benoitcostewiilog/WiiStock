{% extends 'layout.html.twig' %}

{% block title %}Ordre | Collecte | Details{% endblock %}

{% block page_content %}
    <div class="m-4">
        <div class="row">
            <div class="col-12">
                <div class="zone-entete datatable-container">
                    {% include 'ordre_collecte/enteteOrdreCollecte.html.twig' %}
                </div>
            </div>
        </div>
        <div class="row mt-3 justify-content-around">
            <div class="col-12">
                <div class="datatable-container">
                    <table id="tableArticle" class="table w-100">
                    </table>
                </div>
            </div>
        </div>
    </div>
