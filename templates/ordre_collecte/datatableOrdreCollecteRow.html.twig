<div class="d-flex">
    <div class="dropdown dropright ">
        {% include 'datatable/dotsRow.html.twig' %}
        <div class="dropdown-menu dropdown-follow-gt pointer">
            {% if hasRight(constant('App\\Entity\\Menu::ORDRE'), constant('App\\Entity\\Action::EDIT')) and modifiable %}
                <div class="d-none">
                    <div class="action-on-click" data-id='{{ id }}' data-ref='{{ refArticleId is defined ? 1 : 0 }}'
                         data-target='#modalEditArticle' data-toggle='modal'
                         onclick="editRow($(this), Routing.generate('ordre_collecte_edit_api', true), $('#modalEditArticle'), $('#submitEditArticle'))">
                        <i class='fas fa-pencil-alt'></i>
                    </div>
                </div>
                <div class="dropdown-item"
                     data-is-ref='{{ refArticleId is defined ? 1 : 0 }}'
                     data-ref='{{ refRef is defined ? refRef : refArt }}'
                     data-quantity="{{ quantity }}"
                     onclick="toggleCheck($(this))">
                    <i class='fas fa-check mr-2'></i>Selectionner
                </div>
            {% endif %}

            {% if refArticleId is defined or articleId is defined %}
                {% set printPath = refArticleId is defined ? path('reference_article_single_bar_code_print', {reference: refArticleId}) : path('article_single_bar_code_print', {article: articleId}) %}
                <a class="dropdown-item"
                   href="{{ printPath }}">
                    <i class="fas fa-print mr-2"></i>Imprimer
                </a>
            {% endif %}

            {% if refArticleId is defined %}
                <div class="d-none">
                    <div class="action-on-click" data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal'
                         onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
                        <i class='fas fa-eye'></i>
                    </div>
                </div>
            {% else %}

                <div class="d-none">
                    <div class="action-on-click"
                         data-id='{{ id }}'
                         data-target='#modalShowArticle'
                         data-toggle='modal'
                         onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
                        <i class='fas fa-eye'></i>
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
</div>
