<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::COLLECTE'), constant('App\\Entity\\Action::LIST')) %}
        {% if modifiable %}
            <div data-id='{{ id }}' data-ref='{{refArticleId is defined ? 1 : 0}}' data-target='#modalEditArticle' data-toggle='modal' class='col-3'
                onclick="editRow($(this), Routing.generate('ordre_collecte_edit_api', true), $('#modalEditArticle'), $('#submitEditArticle'))">
                <i class='fas fa-pencil-alt'></i>
            </div>
        {% endif %}
    {% endif %}
    {% if refArticleId is defined %}
        <div data-id='{{ refArticleId }}' data-target='#modalShowRefArticle' data-toggle='modal' class='col-3'
            onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    {% else %}
        <div data-id='{{ id }}' data-target='#modalShowArticle' data-toggle='modal' class='col-3'
            onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
            <i class='fas fa-eye'></i>
        </div>
    {% endif %}
</div>