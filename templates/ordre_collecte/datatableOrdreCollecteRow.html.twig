<div class="row">
    {% if hasRight(constant('App\\Entity\\Menu::COLLECTE'), constant('App\\Entity\\Action::LIST')) %}
        {% if modifiable %}
            <div data-ref='{{refArticleId is defined ? 1 : 0}}' data-target='#modalEditArticle' data-toggle='modal' class='col-4 btn-col-action'>
                <button type="button" class="btn btn-block" data-id='{{ id }}'
                    onclick="editRow($(this), Routing.generate('ordre_collecte_edit_api', true), $('#modalEditArticle'), $('#submitEditArticle'))">
                    <i class='fas fa-pencil-alt'></i>
                </button>
            </div>
        {% endif %}
    {% endif %}
    {% if refArticleId is defined %}
        <div data-target='#modalShowRefArticle' data-toggle='modal' class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block" data-id='{{ refArticleId }}'
                onclick="showRow($(this), Routing.generate('reference_article_show', true), $('#modalShowRefArticle'))">
                <i class='fas fa-eye'></i>
            </button>
        </div>
    {% else %}
        <div data-target='#modalShowArticle' data-toggle='modal' class='col-4 btn-col-action'>
            <button type="button" class="btn btn-block" data-id='{{ id }}'
            onclick="showRow($(this), Routing.generate('article_show', true), $('#modalShowArticle'))">
                <i class='fas fa-eye'></i>
            </button>
        </div>
    {% endif %}
</div>