{% extends 'layout.html.twig' %}

{% block title %}Ordres de collecte{% endblock %}

{% block page_filter %}
    {% include 'filters/filtersOrderCollect.html.twig' with {
        page: 'PAGE_ORDRE_COLLECTE',
        tableSelector: '#tableCollecte',
        disabled: filtersDisabled
    } %}
{% endblock %}

{% block page_content %}
    <div class="col-12">
        <h1>Ordres de collecte</h1>
    </div>

    <div class="col-12">
        {% if filterDemand is defined and filterDemand is not null %}
            <div>
                <a href="{{ path('ordre_collecte_index') }}" class='btn btn-primary btn-action'>Voir tous les ordres</a>
                <a href="{{ path('collecte_show', {'id': filterDemand}) }}" class='btn btn-action'>Retour Ã  la demande</a>
            </div>
        {% endif %}
        {% if hasRight(constant('App\\Entity\\Menu::COLLECTE'), constant('App\\Entity\\Action::EXPORT')) %}
            <div class="btn btn-primary" onclick="generateCSV('get_ordres_collecte_for_csv', 'ordre-coll')">
                <i class="fa fa-file-csv mr-2"></i>Exporter au format CSV
            </div>
        {% endif %}
    </div>

    <div class="d-none justify-content-center" id="spinner">
        <div class="spinner-border sizeLoader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="col-12 mt-5">
        <table id="tableCollecte" class="table table-striped table-bordered w-100">
        </table>
    </div>
    {% if filterDemand is defined and filterDemand is not null %}
        <input hidden id="filterDemand" value="{{ filterDemand }}"/>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('js/ordre-collecte.js')}}?{{ date().timestamp }}"></script>
{% endblock %}
